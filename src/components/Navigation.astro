        <a 
          href="/services" 
          class={`block text-base font-medium transition-colors duration-200 ${
            isActive('/services') 
              ? 'text-primary-600' 
              : 'text-gray-600 hover:text-gray-900'
          }`}
        >
          Services
        </a>
        <a 
          href="/about" 
          class={`block text-base font-medium transition-colors duration-200 ${
            isActive('/about') 
              ? 'text-primary-600' 
              : 'text-gray-600 hover:text-gray-900'
          }`}
        >
          About
        </a>
        <a 
          href="/contact" 
          class={`block text-base font-medium transition-colors duration-200 ${
            isActive('/contact') 
              ? 'text-primary-600' 
              : 'text-gray-600 hover:text-gray-900'
          }`}
        >
          Contact
        </a>
        
        <!-- Mobile Phone -->
        <div class="pt-4 border-t border-gray-200">
          <a 
            href="tel:954-937-9667" 
            class="block w-full text-center bg-gray-100 text-gray-700 px-4 py-3 rounded-xl font-medium hover:bg-gray-200 transition-all duration-200 mb-3"
          >
            Call (954) 937-9667
          </a>
          
          <!-- Mobile CTA -->
          <a 
            href="/contact" 
            class="block w-full bg-gradient-to-r from-primary-600 to-primary-700 text-white px-4 py-3 rounded-xl text-center font-semibold hover:from-primary-700 hover:to-primary-800 transition-all duration-200"
          >
            Get Free Representation
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>