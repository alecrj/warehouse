---
// Navigation component - consistent across all pages
const currentPath = Astro.url.pathname;

function isActive(path: string): boolean {
  if (path === '/' && currentPath === '/') return true;
  if (path !== '/' && currentPath.startsWith(path)) return true;
  return false;
}
---

<!-- Navigation -->
<nav class="premium-nav fixed top-0 left-0 right-0 z-50 transition-all duration-500" id="main-nav">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="/" class="nav-logo group flex items-center space-x-3">
        <div class="w-12 h-12 bg-gradient-to-r from-blue-600 to-cyan-600 rounded-xl flex items-center justify-center transform group-hover:scale-110 transition-transform duration-300 shadow-lg">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
        </div>
        <div class="hidden sm:block">
          <div class="font-black text-xl text-slate-900 nav-logo-text">ARIEL REALTY</div>
          <div class="text-xs text-slate-500 -mt-1 tracking-wider font-medium">PREMIUM WAREHOUSES</div>
        </div>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-1">
        <a href="/" class={`nav-link px-4 py-2 rounded-lg font-medium transition-all duration-300 relative group ${isActive('/') ? 'text-blue-600' : 'text-slate-700 hover:text-slate-900'}`}>
          <span>Home</span>
          <div class={`absolute bottom-0 left-0 h-0.5 bg-gradient-to-r from-blue-600 to-cyan-600 transition-all duration-300 ${isActive('/') ? 'w-full' : 'w-0 group-hover:w-full'}`}></div>
        </a>
        <a href="/warehouses" class={`nav-link px-4 py-2 rounded-lg font-medium transition-all duration-300 relative group ${isActive('/warehouses') ? 'text-blue-600' : 'text-slate-700 hover:text-slate-900'}`}>
          <span>Properties</span>
          <div class={`absolute bottom-0 left-0 h-0.5 bg-gradient-to-r from-blue-600 to-cyan-600 transition-all duration-300 ${isActive('/warehouses') ? 'w-full' : 'w-0 group-hover:w-full'}`}></div>
        </a>
        <a href="/about" class={`nav-link px-4 py-2 rounded-lg font-medium transition-all duration-300 relative group ${isActive('/about') ? 'text-blue-600' : 'text-slate-700 hover:text-slate-900'}`}>
          <span>About</span>
          <div class={`absolute bottom-0 left-0 h-0.5 bg-gradient-to-r from-blue-600 to-cyan-600 transition-all duration-300 ${isActive('/about') ? 'w-full' : 'w-0 group-hover:w-full'}`}></div>
        </a>
        <a href="/contact" class={`nav-link px-4 py-2 rounded-lg font-medium transition-all duration-300 relative group ${isActive('/contact') ? 'text-blue-600' : 'text-slate-700 hover:text-slate-900'}`}>
          <span>Contact</span>
          <div class={`absolute bottom-0 left-0 h-0.5 bg-gradient-to-r from-blue-600 to-cyan-600 transition-all duration-300 ${isActive('/contact') ? 'w-full' : 'w-0 group-hover:w-full'}`}></div>
        </a>
      </div>

      <!-- CTA Button (Desktop) -->
      <div class="hidden lg:flex items-center space-x-4">
        <a href="/contact" class="bg-gradient-to-r from-blue-600 to-cyan-600 text-white px-6 py-3 rounded-xl font-semibold text-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 shadow-lg">
          Get Expert Help
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button 
        class="lg:hidden p-2 text-slate-700 hover:text-slate-900 transition-colors duration-200"
        id="mobile-menu-btn"
        type="button"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div class="lg:hidden mobile-menu absolute top-full left-0 right-0 bg-white border-t border-slate-100" id="mobile-menu">
      <div class="max-w-7xl mx-auto px-6 py-6">
        <div class="flex flex-col space-y-4">
          <a href="/" class={`mobile-nav-link font-medium text-lg transition-colors duration-200 ${isActive('/') ? 'text-blue-600' : 'text-slate-700 hover:text-slate-900'}`}>
            Home
          </a>
          <a href="/warehouses" class={`mobile-nav-link font-medium text-lg transition-colors duration-200 ${isActive('/warehouses') ? 'text-blue-600' : 'text-slate-700 hover:text-slate-900'}`}>
            Properties
          </a>
          <a href="/about" class={`mobile-nav-link font-medium text-lg transition-colors duration-200 ${isActive('/about') ? 'text-blue-600' : 'text-slate-700 hover:text-slate-900'}`}>
            About
          </a>
          <a href="/contact" class={`mobile-nav-link font-medium text-lg transition-colors duration-200 ${isActive('/contact') ? 'text-blue-600' : 'text-slate-700 hover:text-slate-900'}`}>
            Contact
          </a>
          <div class="pt-4 border-t border-slate-200">
            <a href="/contact" class="mobile-nav-link bg-gradient-to-r from-blue-600 to-cyan-600 text-white px-6 py-3 rounded-xl font-semibold text-center block hover:shadow-lg transition-all duration-300">
              Get Expert Help
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>