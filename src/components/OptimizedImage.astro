---
export interface Props {
  src: string;
  alt: string;
  class?: string;
  loading?: 'lazy' | 'eager';
  width?: number;
  height?: number;
}

const {
  src,
  alt,
  class: className = '',
  loading = 'lazy',
  width = 800,
  height = 600,
} = Astro.props;

// For CMS images (public folder), we'll use regular img tag with loading optimization
const isPublicImage = src && src.startsWith('/images/');
---

{isPublicImage ? (
  <img
    src={src}
    alt={alt}
    loading={loading}
    class={className}
    width={width}
    height={height}
    decoding="async"
  />
) : (
  <div class={`bg-gray-200 flex items-center justify-center ${className}`}>
    <span class="text-gray-500">No image available</span>
  </div>
)}