    <style>
      /* Professional Styling */
      :root {
        --primary-gradient: linear-gradient(135deg, #2563eb 0%, #3b82f6 100%);
        --secondary-gradient: linear-gradient(135deg, #7c3aed 0%, #a855f7 100%);
        --dark-gradient: linear-gradient(135deg, #1e293b 0%, #334155 100%);
        --glass-bg: rgba(255, 255, 255, 0.1);
        --glass-border: rgba(255, 255, 255, 0.2);
        --shadow-soft: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        --shadow-premium: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      html {
        scroll-behavior: smooth;
        font-size: 16px;
      }
      
      body {
        font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        font-weight: 400;
        line-height: 1.7;
        color: #1f2937;
        background-color: #ffffff;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        overflow-x: hidden;
      }
      
      /* Premium Scrollbar */
      ::-webkit-scrollbar {
        width: 8px;
      }
      
      ::-webkit-scrollbar-track {
        background: #f8fafc;
      }
      
      ::-webkit-scrollbar-thumb {
        background: var(--primary-gradient);
        border-radius: 4px;
      }
      
      ::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(135deg, #1d4ed8 0%, #2563eb 100%);
      }

      /* Glass Morphism Effect */
      .glass {
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        background: var(--glass-bg);
        border: 1px solid var(--glass-border);
      }

      /* Premium Button Styles */
      .btn-premium {
        position: relative;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .btn-premium::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.5s;
      }

      .btn-premium:hover::before {
        left: 100%;
      }

      /* Mobile-First Navigation */
      .mobile-menu {
        transform: translateX(-100%);
        transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .mobile-menu.open {
        transform: translateX(0);
      }

      /* Enhanced Focus States */
      .focus-ring:focus {
        outline: none;
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1), 0 0 0 3px rgba(59, 130, 246, 0.5);
      }

      /* Premium Card Hover Effects */
      .card-premium {
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .card-premium:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: var(--shadow-premium);
      }

      /* Loading Animation */
      .loading-dot {
        animation: loading 1.4s infinite ease-in-out both;
      }
      
      @keyframes loading {
        0%, 80%, 100% { transform: scale(0); }
        40% { transform: scale(1); }
      }

      /* Responsive Typography */
      @media (max-width: 640px) {
        html { font-size: 14px; }
      }

      @media (min-width: 1280px) {
        html { font-size: 18px; }
      }

      /* Accessibility */
      @media (prefers-reduced-motion: reduce) {
        * {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
        }
        
        html {
          scroll-behavior: auto;
        }
      }
    </style>
