  <style>
    /* Navigation Styles */
    .nav-link {
      @apply text-base font-medium text-slate-700 hover:text-blue-600 transition-all duration-200 relative py-2 px-1;
    }
    
    .nav-link-active {
      @apply text-blue-600;
    }
    
    .nav-link::after {
      content: '';
      @apply absolute bottom-0 left-0 w-0 h-0.5 bg-blue-600 transition-all duration-300;
    }
    
    .nav-link:hover::after,
    .nav-link-active::after {
      @apply w-full;
    }
    
    .mobile-nav-link {
      @apply flex items-center px-4 py-4 text-base font-medium text-slate-700 hover:text-blue-600 hover:bg-slate-50 rounded-xl transition-all duration-200;
    }
    
    .mobile-nav-link-active {
      @apply text-blue-600 bg-blue-50;
    }
    
    /* Header scroll effect */
    .header-scrolled {
      @apply bg-white/98 shadow-lg backdrop-blur-xl;
    }
    
    /* Smooth loading animation */
    .loading { 
      opacity: 0; 
    }
    
    .loaded { 
      opacity: 1; 
      transition: opacity 0.3s ease; 
    }
  </style>

  <!-- GSAP for scroll progress -->
  <script src="https://cdn.jsdelivr.net/npm/gsap@3.13/dist/gsap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/gsap@3.13/dist/ScrollTrigger.min.js"></script>

  <script>
    // Register GSAP plugins
    gsap.registerPlugin(ScrollTrigger);

    document.addEventListener('DOMContentLoaded', function() {
      const body = document.body;
      const header = document.getElementById('main-header');
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      const menuIcon = document.getElementById('menu-icon');
      const closeIcon = document.getElementById('close-icon');
      const backToTopButton = document.getElementById('back-to-top');
      const scrollProgress = document.querySelector('.scroll-progress');
      
      // Page loaded
      body.classList.remove('loading');
      body.classList.add('loaded');
      
      // Scroll progress bar
      if (scrollProgress) {
        gsap.to(scrollProgress, {
          scaleX: 1,
          ease: "none",
          scrollTrigger: {
            trigger: "body",
            start: "top top",
            end: "bottom bottom",
            scrub: true
          }
        });
      }
      
      // Mobile menu toggle with animation
      mobileMenuButton?.addEventListener('click', function() {
        const isExpanded = this.getAttribute('aria-expanded') === 'true';
        
        if (isExpanded) {
          // Close menu
          this.setAttribute('aria-expanded', 'false');
          gsap.to(mobileMenu, {
            height: 0,
            opacity: 0,
            duration: 0.3,
            ease: "power2.out",
            onComplete: () => {
              mobileMenu?.classList.add('hidden');
            }
          });
          menuIcon?.classList.remove('hidden');
          closeIcon?.classList.add('hidden');
        } else {
          // Open menu
          this.setAttribute('aria-expanded', 'true');
          mobileMenu?.classList.remove('hidden');
          gsap.fromTo(mobileMenu, 
            { height: 0, opacity: 0 },
            { height: 'auto', opacity: 1, duration: 0.3, ease: "power2.out" }
          );
          menuIcon?.classList.add('hidden');
          closeIcon?.classList.remove('hidden');
        }
      });
      
      // Close mobile menu when clicking outside
      document.addEventListener('click', function(event) {
        const target = event.target as Node;
        const isClickInsideMenu = mobileMenuButton?.contains(target) || mobileMenu?.contains(target);
        
        if (!isClickInsideMenu && !mobileMenu?.classList.contains('hidden')) {
          mobileMenuButton?.setAttribute('aria-expanded', 'false');
          gsap.to(mobileMenu, {
            height: 0,
            opacity: 0,
            duration: 0.3,
            ease: "power2.out",
            onComplete: () => {
              mobileMenu?.classList.add('hidden');
            }
          });
          menuIcon?.classList.remove('hidden');
          closeIcon?.classList.add('hidden');
        }
      });
      
      // Header scroll effect with GSAP
      ScrollTrigger.create({
        start: "top -80",
        end: 99999,
        toggleClass: {className: "header-scrolled", targets: header}
      });
      
      // Back to top button
      ScrollTrigger.create({
        start: "top -300",
        end: 99999,
        onToggle: (self) => {
          if (self.isActive) {
            gsap.to(backToTopButton, {
              opacity: 1,
              visibility: "visible",
              scale: 1,
              duration: 0.3,
              ease: "back.out(1.7)"
            });
          } else {
            gsap.to(backToTopButton, {
              opacity: 0,
              visibility: "hidden",
              scale: 0.8,
              duration: 0.3,
              ease: "power2.out"
            });
          }
        }
      });
      
      // Back to top functionality
      backToTopButton?.addEventListener('click', function() {
        gsap.to(window, {
          scrollTo: { y: 0 },
          duration: 1,
          ease: "power2.out"
        });
      });
      
      // Smooth scroll for anchor links
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const element = e.currentTarget as HTMLAnchorElement;
          const targetId = element.getAttribute('href');
          if (targetId === '#' || !targetId) return;
          
          const target = document.querySelector(targetId);
          if (target) {
            const headerHeight = header?.offsetHeight || 80;
            
            gsap.to(window, {
              scrollTo: { 
                y: target, 
                offsetY: headerHeight 
              },
              duration: 1,
              ease: "power2.out"
            });
            
            // Close mobile menu if open
            if (!mobileMenu?.classList.contains('hidden')) {
              mobileMenuButton?.setAttribute('aria-expanded', 'false');
              gsap.to(mobileMenu, {
                height: 0,
                opacity: 0,
                duration: 0.3,
                ease: "power2.out",
                onComplete: () => {
                  mobileMenu?.classList.add('hidden');
                }
              });
              menuIcon?.classList.remove('hidden');
              closeIcon?.classList.add('hidden');
            }
          }
        });
      });
      
      // Keyboard navigation for accessibility
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && !mobileMenu?.classList.contains('hidden')) {
          mobileMenuButton?.setAttribute('aria-expanded', 'false');
          gsap.to(mobileMenu, {
            height: 0,
            opacity: 0,
            duration: 0.3,
            ease: "power2.out",
            onComplete: () => {
              mobileMenu?.classList.add('hidden');
            }
          });
          menuIcon?.classList.remove('hidden');
          closeIcon?.classList.add('hidden');
          mobileMenuButton?.focus();
        }
      });

      // Professional page transitions
      ScrollTrigger.refresh();
    });
  </script>
