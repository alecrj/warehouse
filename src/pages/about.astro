---
// Updated about page with video background and improved Who We Are section
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout 
  title="About Warehouse Locating | Industrial Tenant Representation Specialists"
  description="Warehouse Locating is a focused tenant-rep service for industrial users in South Florida with deep market knowledge and strong relationships."
>
  <Navigation />
  
  <main>
    <!-- Hero Section with Video Background -->
    <section class="relative min-h-screen overflow-hidden flex items-center">
      <!-- Video Background -->
      <video 
        autoplay 
        muted 
        loop 
        playsinline
        class="absolute inset-0 w-full h-full object-cover"
      >
        <source src="/videos/palms.mp4" type="video/mp4">
        <!-- Fallback for browsers that don't support video -->
      </video>
      
      <!-- Video Overlay -->
      <div class="absolute inset-0 bg-black/60"></div>
      
      <!-- Gradient Overlay for extra depth -->
      <div class="absolute inset-0 bg-gradient-to-br from-slate-900/80 via-slate-800/60 to-slate-900/80"></div>
      
      <!-- Background Elements (subtle over video) -->
      <div class="absolute inset-0">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary-500/20 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-blue-500/20 rounded-full blur-3xl animate-float-reverse"></div>
      </div>
      
      <div class="relative z-10 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="text-center">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black text-white leading-tight tracking-tight mb-6 animate-on-scroll drop-shadow-2xl">
            ABOUT
            <span class="block bg-gradient-to-r from-primary-400 to-blue-400 bg-clip-text text-transparent">
              WAREHOUSE LOCATING
            </span>
          </h1>
          <p class="text-lg lg:text-xl text-gray-200 max-w-4xl mx-auto leading-relaxed mb-2 animate-on-scroll drop-shadow-lg">
            Focused tenant-rep service for industrial users in South Florida.
          </p>
          <p class="text-base text-gray-300 leading-relaxed mb-8 max-w-3xl mx-auto animate-on-scroll drop-shadow-lg">
            <span class="text-white font-semibold">Fast, fairly priced, and on terms that protect you for the long haul.</span>
          </p>
          
          <!-- Trust Indicators - Now in Hero with Glassmorphism -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 animate-on-scroll mt-12">
            <div class="group text-center p-8 bg-white/10 backdrop-blur-xl rounded-3xl border border-white/20 shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-105 hover:bg-white/15 relative overflow-hidden before:absolute before:inset-0 before:bg-gradient-to-br before:from-white/20 before:via-transparent before:to-transparent before:opacity-0 hover:before:opacity-100 before:transition-opacity before:duration-500">
              <div class="relative z-10">
                <div class="text-4xl font-black text-white mb-3 drop-shadow-lg group-hover:text-green-200 transition-colors duration-300">
                  Deep Market
                </div>
                <div class="text-white/80 text-sm font-semibold uppercase tracking-wider drop-shadow-sm">Knowledge</div>
              </div>
            </div>
            
            <div class="group text-center p-8 bg-white/10 backdrop-blur-xl rounded-3xl border border-white/20 shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-105 hover:bg-white/15 relative overflow-hidden before:absolute before:inset-0 before:bg-gradient-to-br before:from-white/20 before:via-transparent before:to-transparent before:opacity-0 hover:before:opacity-100 before:transition-opacity before:duration-500">
              <div class="relative z-10">
                <div class="text-4xl font-black text-white mb-3 drop-shadow-lg group-hover:text-blue-200 transition-colors duration-300">
                  Direct
                </div>
                <div class="text-white/80 text-sm font-semibold uppercase tracking-wider drop-shadow-sm">Access</div>
              </div>
            </div>
            
            <div class="group text-center p-8 bg-white/10 backdrop-blur-xl rounded-3xl border border-white/20 shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-105 hover:bg-white/15 relative overflow-hidden before:absolute before:inset-0 before:bg-gradient-to-br before:from-white/20 before:via-transparent before:to-transparent before:opacity-0 hover:before:opacity-100 before:transition-opacity before:duration-500">
              <div class="relative z-10">
                <div class="text-4xl font-black text-white mb-3 drop-shadow-lg group-hover:text-purple-200 transition-colors duration-300">
                  Fast
                </div>
                <div class="text-white/80 text-sm font-semibold uppercase tracking-wider drop-shadow-sm">Turnarounds</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Who We Are Section - Enhanced Single Column Design -->
    <section class="relative pt-24 pb-12 bg-gradient-to-br from-gray-50 to-white overflow-hidden">
      <!-- Background Elements -->
      <div class="absolute inset-0">
        <div class="absolute top-20 left-10 w-72 h-72 bg-primary-500/5 rounded-full blur-3xl"></div>
        <div class="absolute bottom-20 right-10 w-96 h-96 bg-blue-500/5 rounded-full blur-3xl"></div>
      </div>
      
      <div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16 animate-on-scroll">
          <h2 class="text-4xl lg:text-5xl font-black text-gray-900 leading-tight tracking-tight mb-6">
            WHO WE
            <span class="block bg-gradient-to-r from-primary-600 to-blue-600 bg-clip-text text-transparent">
              ARE
            </span>
          </h2>
          <div class="w-24 h-1 bg-gradient-to-r from-primary-500 to-blue-500 mx-auto mb-8"></div>
        </div>

        <div class="animate-on-scroll">
          <!-- Main Description -->
          <div class="text-center max-w-4xl mx-auto mb-16">
            <p class="text-xl lg:text-2xl text-gray-700 leading-relaxed mb-8 font-medium">
              Warehouse Locating is a focused tenant-rep service for industrial users in South Florida. 
              We help businesses secure the right space—fast, fairly priced, and on terms that protect you for the long haul.
            </p>
            <p class="text-lg text-gray-600 leading-relaxed mb-12">
              Our approach is straightforward: understand your needs, surface the best options, 
              and negotiate hard on your behalf. Our fee is paid by the landlord—you pay $0.
            </p>
          </div>
          
          <!-- Key Benefits Grid -->
          <div class="grid md:grid-cols-3 gap-8 mb-16">
            <div class="group text-center p-8 bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100">
              <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">Free Representation</h3>
              <p class="text-gray-600 leading-relaxed">No cost, no retainer, no obligation. Our fee is paid by the landlord.</p>
            </div>
            
            <div class="group text-center p-8 bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100">
              <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">Industrial Focus</h3>
              <p class="text-gray-600 leading-relaxed">Deep market knowledge and strong relationships in South Florida industrial real estate.</p>
            </div>
            
            <div class="group text-center p-8 bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100">
              <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-4">Fast Turnarounds</h3>
              <p class="text-gray-600 leading-relaxed">Quick response times and efficient processes to get you into the right space faster.</p>
            </div>
          </div>

          <!-- Coverage Area -->
          <div class="text-center bg-gradient-to-r from-primary-50 to-blue-50 rounded-3xl p-12 border border-primary-100">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Serving All of South Florida</h3>
            <div class="flex flex-wrap justify-center gap-6">
              <div class="flex items-center space-x-2 bg-white px-6 py-3 rounded-2xl shadow-sm">
                <div class="w-3 h-3 bg-primary-500 rounded-full"></div>
                <span class="font-semibold text-gray-800">Miami-Dade County</span>
              </div>
              <div class="flex items-center space-x-2 bg-white px-6 py-3 rounded-2xl shadow-sm">
                <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
                <span class="font-semibold text-gray-800">Broward County</span>
              </div>
              <div class="flex items-center space-x-2 bg-white px-6 py-3 rounded-2xl shadow-sm">
                <div class="w-3 h-3 bg-purple-500 rounded-full"></div>
                <span class="font-semibold text-gray-800">Palm Beach County</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Approach Section -->
    <section class="pt-12 pb-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16 animate-on-scroll">
          <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
            Our Approach
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            Straightforward, efficient, and always in your best interests
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 stagger-children">
          <!-- Step 1 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <span class="text-2xl font-bold text-white">1</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Understand Your Needs</h3>
            <p class="text-gray-600 leading-relaxed">
              We start by thoroughly understanding your specific requirements, timeline, and budget constraints.
            </p>
          </div>

          <!-- Step 2 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <span class="text-2xl font-bold text-white">2</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Surface Best Options</h3>
            <p class="text-gray-600 leading-relaxed">
              We leverage our network to find both on-market and off-market properties that match your criteria.
            </p>
          </div>

          <!-- Step 3 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <span class="text-2xl font-bold text-white">3</span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Negotiate Hard</h3>
            <p class="text-gray-600 leading-relaxed">
              We fight for the best terms, rates, and conditions to protect your interests for the long haul.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="relative py-24 overflow-hidden">
      <!-- Background Image -->
      <div class="absolute inset-0">
        <img 
          src="/images/uploads/wrh.png" 
          alt="Industrial warehouse interior" 
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black/70"></div>
        <div class="absolute inset-0 bg-gradient-to-br from-primary-900/80 via-primary-800/60 to-primary-900/80"></div>
      </div>
      
      <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl sm:text-5xl font-bold text-white mb-6 animate-on-scroll drop-shadow-2xl">
          Ready to Find Your Perfect Space?
        </h2>
        <p class="text-xl text-gray-200 mb-10 animate-on-scroll drop-shadow-lg">
          Let us handle the search while you focus on growing your business.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center animate-on-scroll">
          <button 
            onclick="openContactModal('about-cta')"
            class="bg-white text-primary-600 px-8 py-4 rounded-2xl text-lg font-semibold hover:bg-gray-50 hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300 transform"
          >
            Work with Us
          </button>
          <a 
            href="tel:954-937-9667" 
            class="bg-white/10 backdrop-blur-sm text-white border-2 border-white/20 px-8 py-4 rounded-2xl text-lg font-semibold hover:bg-white/20 hover:border-white/30 transition-all duration-300"
          >
            Call (954) 937-9667
          </a>
        </div>
      </div>
    </section>
  
  <Footer />
</BaseLayout>