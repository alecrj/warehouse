---
import BaseLayout from '../layouts/BaseLayout.astro';

// Team members data
const teamMembers = [
  {
    name: "Ariel Rodriguez",
    title: "Principal & Lead Broker",
    image: "/images/team/ariel-rodriguez.jpg",
    bio: "With over 15 years of experience in South Florida industrial real estate, Ariel has successfully completed over $500M in transactions across Miami-Dade, Broward, and Palm Beach counties.",
    credentials: ["Licensed Real Estate Broker", "CCIM Candidate", "SIOR Member"],
    phone: "(954) 937-9667",
    email: "ariel@arielrealtygroup.com"
  }
];

// Company stats
const stats = [
  { value: "$500M+", label: "Total Transaction Volume" },
  { value: "15+", label: "Years of Experience" },
  { value: "3", label: "Counties Served" },
  { value: "200+", label: "Successful Deals" }
];

// Service areas
const serviceAreas = [
  {
    county: "Miami-Dade County",
    highlights: ["Doral", "Hialeah", "Medley", "Miami", "Homestead"],
    description: "Premier industrial corridor with excellent port access and international connectivity."
  },
  {
    county: "Broward County", 
    highlights: ["Fort Lauderdale", "Pompano Beach", "Davie", "Plantation", "Sunrise"],
    description: "Strategic location between Miami and Palm Beach with strong transportation infrastructure."
  },
  {
    county: "Palm Beach County",
    highlights: ["West Palm Beach", "Boca Raton", "Boynton Beach", "Lake Worth", "Jupiter"],
    description: "Growing industrial market with excellent highway access and expanding logistics presence."
  }
];
---

<BaseLayout 
  title="About Ariel Realty Group | South Florida Industrial Real Estate Experts"
  description="Learn about Ariel Realty Group's expertise in South Florida industrial real estate. Free tenant representation across Miami-Dade, Broward, and Palm Beach counties."
>
  <!-- Hero Section -->
  <section class="py-20 bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800 text-white relative overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl relative z-10">
      <div class="text-center animate-on-scroll">
        <h1 class="text-5xl lg:text-6xl font-bold mb-6">
          About Ariel Realty Group
        </h1>
        <p class="text-xl lg:text-2xl text-primary-100 max-w-4xl mx-auto leading-relaxed">
          South Florida's premier industrial tenant representation firm, providing expert guidance 
          for warehouse and industrial property leasing at no cost to tenants.
        </p>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
        {stats.map((stat, index) => (
          <div class="text-center animate-on-scroll-scale" style={`animation-delay: ${(index * 0.1).toString()}s;`}>
            <div class="text-4xl lg:text-5xl font-bold text-primary-600 mb-2">{stat.value}</div>
            <div class="text-gray-600 font-medium">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Mission & Values Section -->
  <section class="py-20 bg-gradient-to-br from-gray-50 to-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        
        <!-- Mission Content -->
        <div class="animate-on-scroll-left">
          <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-8">
            Our Mission
          </h2>
          <div class="space-y-6 text-lg text-gray-700 leading-relaxed">
            <p>
              At Ariel Realty Group, we believe that finding the perfect industrial space shouldn't cost tenants anything. 
              Our mission is to provide world-class tenant representation services completely free of charge, ensuring our 
              clients get the best possible deals on their warehouse and industrial leases.
            </p>
            <p>
              We leverage our deep market knowledge, extensive landlord relationships, and negotiation expertise to 
              save our clients time and money while securing optimal lease terms and conditions.
            </p>
          </div>
          
          <!-- Core Values -->
          <div class="mt-12">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Our Core Values</h3>
            <div class="grid md:grid-cols-2 gap-6">
              {[
                { title: "Transparency", description: "Clear communication throughout every transaction" },
                { title: "Expertise", description: "Deep market knowledge and professional guidance" },
                { title: "Client-First", description: "Your success is our primary objective" },
                { title: "Integrity", description: "Honest dealing and ethical business practices" }
              ].map((value, index) => (
                <div class="bg-white p-6 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow duration-300 animate-on-scroll-scale" style={`animation-delay: ${(index * 0.1 + 0.3).toString()}s;`}>
                  <h4 class="font-bold text-gray-900 mb-2">{value.title}</h4>
                  <p class="text-gray-600 text-sm">{value.description}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
        
        <!-- Mission Visual -->
        <div class="animate-on-scroll-right">
          <div class="relative">
            <!-- Main Image Card -->
            <div class="bg-gradient-to-br from-primary-100 to-primary-200 rounded-4xl p-8 transform rotate-3 hover:rotate-0 transition-transform duration-500">
              <div class="bg-white rounded-3xl p-8 shadow-lg">
                <div class="flex items-center justify-center mb-6">
                  <div class="w-20 h-20 bg-gradient-to-br from-primary-600 to-primary-700 rounded-2xl flex items-center justify-center">
                    <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                  </div>
                </div>
                <div class="text-center">
                  <h4 class="text-xl font-bold text-gray-900 mb-2">Free for Tenants</h4>
                  <p class="text-gray-600">Our services are always free for tenants. We're compensated by landlords, ensuring no cost to you.</p>
                </div>
              </div>
            </div>
            
            <!-- Floating Elements -->
            <div class="absolute -top-6 -right-6 w-24 h-24 bg-secondary-100 rounded-2xl flex items-center justify-center animate-bounce-gentle">
              <svg class="w-12 h-12 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16 animate-on-scroll">
        <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
          Meet Our Team
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Led by experienced professionals with deep roots in South Florida's industrial real estate market.
        </p>
      </div>

      <div class="max-w-4xl mx-auto">
        {teamMembers.map((member, index) => (
          <div class="bg-gradient-to-br from-gray-50 to-white rounded-4xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 animate-on-scroll-scale" style={`animation-delay: ${(index * 0.2).toString()}s;`}>
            <div class="grid lg:grid-cols-3 gap-8 p-8">
              
              <!-- Team Member Photo -->
              <div class="lg:col-span-1">
                <div class="relative">
                  <div class="w-full aspect-square bg-gradient-to-br from-primary-100 to-primary-200 rounded-3xl flex items-center justify-center">
                    <!-- Placeholder for team photo -->
                    <div class="w-32 h-32 bg-gradient-to-br from-primary-600 to-primary-700 rounded-2xl flex items-center justify-center">
                      <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                      </svg>
                    </div>
                  </div>
                </div>
              </div>
              
              <!-- Team Member Info -->
              <div class="lg:col-span-2">
                <div class="h-full flex flex-col justify-center">
                  <h3 class="text-3xl font-bold text-gray-900 mb-2">{member.name}</h3>
                  <p class="text-xl text-primary-600 font-semibold mb-4">{member.title}</p>
                  
                  <p class="text-gray-700 leading-relaxed mb-6">{member.bio}</p>
                  
                  <!-- Credentials -->
                  <div class="mb-6">
                    <h4 class="font-semibold text-gray-900 mb-3">Professional Credentials</h4>
                    <div class="flex flex-wrap gap-2">
                      {member.credentials.map((credential) => (
                        <span class="px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-sm font-medium">
                          {credential}
                        </span>
                      ))}
                    </div>
                  </div>
                  
                  <!-- Contact Info -->
                  <div class="flex flex-col sm:flex-row gap-4">
                    <a href={`tel:${member.phone}`} class="inline-flex items-center px-6 py-3 bg-secondary-600 hover:bg-secondary-700 text-white rounded-2xl font-semibold transition-colors duration-300">
                      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                      </svg>
                      {member.phone}
                    </a>
                    
                    <a href={`mailto:${member.email}`} class="inline-flex items-center px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-2xl font-semibold transition-colors duration-300">
                      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                      </svg>
                      {member.email}
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Service Areas Section -->
  <section class="py-20 bg-gradient-to-br from-gray-50 to-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16 animate-on-scroll">
        <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
          Our Service Areas
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Comprehensive coverage across South Florida's major industrial markets.
        </p>
      </div>

      <div class="grid lg:grid-cols-3 gap-8">
        {serviceAreas.map((area, index) => (
          <div class="bg-white rounded-4xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 animate-on-scroll-scale" style={`animation-delay: ${(index * 0.1).toString()}s;`}>
            <div class="p-8">
              <h3 class="text-2xl font-bold text-gray-900 mb-4">{area.county}</h3>
              <p class="text-gray-600 mb-6 leading-relaxed">{area.description}</p>
              
              <div class="mb-6">
                <h4 class="font-semibold text-gray-900 mb-3">Key Markets:</h4>
                <div class="flex flex-wrap gap-2">
                  {area.highlights.map((city) => (
                    <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm font-medium">
                      {city}
                    </span>
                  ))}
                </div>
              </div>
              
              <a href="/warehouses" class="inline-flex items-center text-primary-600 hover:text-primary-700 font-semibold transition-colors duration-300">
                View Properties
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800 text-white relative overflow-hidden">
    <!-- Background decoration -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl relative z-10">
      <div class="text-center animate-on-scroll">
        <h2 class="text-4xl lg:text-5xl font-bold mb-6">
          Ready to Work Together?
        </h2>
        <p class="text-xl text-primary-100 mb-12 max-w-3xl mx-auto">
          Let us help you find the perfect industrial space for your business. 
          Contact us today for a free consultation and property search.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center">
          <a href="/contact" class="btn-hover bg-white text-primary-600 px-8 py-4 rounded-2xl font-bold text-lg hover:bg-gray-50 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
            Get Started Today
          </a>
          
          <a href="tel:+19549379667" class="btn-hover glass border border-white/30 text-white hover:bg-white/10 px-8 py-4 rounded-2xl font-bold text-lg transition-all duration-300 transform hover:scale-105">
            <span class="flex items-center justify-center">
              <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
              </svg>
              (954) 937-9667
            </span>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>