---
// Updated contact page with standardized form
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import StandardizedContactForm from '../components/StandardizedContactForm.astro';
---

<BaseLayout 
  title="Contact Warehouse Locating | Get Matched With Warehouses Today"
  description="Tell us what you need. We'll send qualified options and set up tours. Free tenant representation across South Florida."
>
  <Navigation />
  
  <main>
    <!-- Hero Section -->
    <section class="relative pt-20 pb-16 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-blue-500/20 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-cyan-500/20 rounded-full blur-3xl animate-float-reverse"></div>
      
      <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-4xl lg:text-6xl font-black text-white leading-tight tracking-tight mb-6 animate-on-scroll">
            GET MATCHED WITH
            <span class="block bg-gradient-to-r from-primary-400 to-blue-400 bg-clip-text text-transparent">WAREHOUSES TODAY</span>
          </h1>
          <p class="text-lg lg:text-xl text-slate-300 max-w-4xl mx-auto leading-relaxed animate-on-scroll">
            Tell us what you need. We'll send qualified options and set up tours.
            <span class="text-white font-semibold block mt-2">Completely free service.</span>
          </p>
        </div>
      </div>
    </section>

    <!-- Main Contact Section -->
    <section class="relative py-20 bg-white overflow-hidden">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-16 items-start">
          
          <!-- Contact Form -->
          <div class="animate-on-scroll">
            <StandardizedContactForm 
              source="contact-page"
              title="Find Your Perfect Warehouse Space"
              description="Fill out the form below and we'll get back to you within 24 hours with qualified options."
              className="bg-slate-50"
            />
          </div>

          <!-- Contact Information -->
          <div class="animate-on-scroll">
            <div class="space-y-8">
              
              <!-- Contact Info -->
              <div class="bg-gray-50 rounded-3xl p-8">
                <h3 class="text-2xl font-bold text-gray-900 mb-6">
                  Get In Touch
                </h3>
                
                <div class="space-y-6">
                  <!-- Phone -->
                  <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center">
                      <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm font-semibold text-gray-700">Call Us</p>
                      <a href="tel:954-937-9667" class="text-lg font-bold text-primary-600 hover:text-primary-700 transition-colors duration-200">
                        (954) 937-9667
                      </a>
                    </div>
                  </div>

                  <!-- Email -->
                  <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center">
                      <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm font-semibold text-gray-700">Email Us</p>
                      <a href="mailto:info@warehouselocating.com" class="text-lg font-bold text-primary-600 hover:text-primary-700 transition-colors duration-200">
                        info@warehouselocating.com
                      </a>
                    </div>
                  </div>

                  <!-- Location -->
                  <div class="flex items-center space-x-4">
                    <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center">
                      <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm font-semibold text-gray-700">Service Area</p>
                      <p class="text-lg font-bold text-gray-900">South Florida</p>
                      <p class="text-sm text-gray-600">Miami-Dade, Broward & Palm Beach</p>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Why Choose Us -->
              <div class="bg-gradient-to-br from-primary-50 to-blue-50 rounded-3xl p-8">
                <h3 class="text-2xl font-bold text-gray-900 mb-6">
                  Why Choose Us?
                </h3>
                
                <div class="space-y-4">
                  <div class="flex items-start space-x-3">
                    <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                      </svg>
                    </div>
                    <div>
                      <p class="font-semibold text-gray-900">100% Free Service</p>
                      <p class="text-sm text-gray-600">Landlords pay our fees, not you</p>
                    </div>
                  </div>

                  <div class="flex items-start space-x-3">
                    <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                      </svg>
                    </div>
                    <div>
                      <p class="font-semibold text-gray-900">Expert Negotiation</p>
                      <p class="text-sm text-gray-600">Better rates and lease terms</p>
                    </div>
                  </div>

                  <div class="flex items-start space-x-3">
                    <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                      </svg>
                    </div>
                    <div>
                      <p class="font-semibold text-gray-900">Local Expertise</p>
                      <p class="text-sm text-gray-600">Deep South Florida market knowledge</p>
                    </div>
                  </div>

                  <div class="flex items-start space-x-3">
                    <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                      <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                      </svg>
                    </div>
                    <div>
                      <p class="font-semibold text-gray-900">Fast Response</p>
                      <p class="text-sm text-gray-600">Qualified options within 24 hours</p>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Service Areas -->
              <div class="bg-gray-50 rounded-3xl p-8">
                <h3 class="text-2xl font-bold text-gray-900 mb-6">
                  Service Areas
                </h3>
                
                <div class="grid grid-cols-1 gap-4">
                  <div class="border-l-4 border-primary-500 pl-4">
                    <h4 class="font-bold text-gray-900">Miami-Dade County</h4>
                    <p class="text-sm text-gray-600">Miami, Hialeah, Doral, Kendall, Homestead</p>
                  </div>
                  
                  <div class="border-l-4 border-primary-500 pl-4">
                    <h4 class="font-bold text-gray-900">Broward County</h4>
                    <p class="text-sm text-gray-600">Fort Lauderdale, Hollywood, Pompano Beach, Davie</p>
                  </div>
                  
                  <div class="border-l-4 border-primary-500 pl-4">
                    <h4 class="font-bold text-gray-900">Palm Beach County</h4>
                    <p class="text-sm text-gray-600">West Palm Beach, Boca Raton, Delray Beach</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>