---
// Updated contact page with split hero layout: form + glassmorphism contact cards
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

// Define types for warehouse options
interface WarehouseOption {
  title: string;
  slug: string;
}

// Get warehouses for the form dropdown
let allWarehouses: WarehouseOption[] = [];
try {
  const warehouseCollection = await getCollection('warehouses');
  allWarehouses = warehouseCollection
    .filter(w => w.data.availability === 'available')
    .map(w => ({ title: w.data.title, slug: w.data.slug }));
} catch (error) {
  console.log('Could not load warehouses for dropdown');
}
---

<BaseLayout 
  title="Contact Warehouse Locating | Get Matched With Warehouses Today"
  description="Tell us what you need. We'll send qualified options and set up tours. Free tenant representation across South Florida."
>
  <Navigation />
  
  <main>
    <!-- Hero Section - Split Layout Above the Fold -->
    <section class="relative min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 overflow-hidden flex items-center pt-16">
      <!-- Background Pattern -->
      <div class="absolute inset-0">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-cyan-500/10 rounded-full blur-3xl animate-float-reverse"></div>
        <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>
      </div>
      
      <div class="relative z-10 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="grid lg:grid-cols-2 gap-12 items-center min-h-[85vh]">
          
          <!-- Left Column: Headline + Contact Cards -->
          <div class="animate-on-scroll">
            <h1 class="text-5xl sm:text-6xl lg:text-7xl font-black text-white leading-[0.85] tracking-tight mb-8">
              GET MATCHED WITH
              <span class="block bg-gradient-to-r from-primary-400 to-blue-400 bg-clip-text text-transparent">
                WAREHOUSES TODAY
              </span>
            </h1>
            
            <p class="text-xl lg:text-2xl text-gray-300 leading-relaxed mb-6 max-w-xl">
              Tell us what you need. We'll send qualified options and set up tours.
            </p>

            <p class="text-base text-gray-400 leading-relaxed mb-10 max-w-3xl">
              <span class="text-white font-semibold">Completely free service.</span> Our fee is paid by landlords.
            </p>

            <!-- Contact Cards - Glassmorphism Style -->
            <div class="space-y-5">
              <!-- Phone Card -->
              <a 
                href="tel:954-937-9667" 
                class="group block p-6 bg-white/10 backdrop-blur-xl rounded-3xl border border-white/20 shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-105 hover:bg-white/15 relative overflow-hidden before:absolute before:inset-0 before:bg-gradient-to-br before:from-white/20 before:via-transparent before:to-transparent before:opacity-0 hover:before:opacity-100 before:transition-opacity before:duration-500"
              >
                <div class="relative z-10 flex items-center space-x-5">
                  <div class="w-14 h-14 bg-green-500/20 backdrop-blur-sm rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:bg-green-500/30 transition-colors duration-300">
                    <svg class="w-7 h-7 text-green-400 group-hover:text-green-300 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                  </div>
                  <div>
                    <div class="text-sm font-semibold text-white/80 mb-1 group-hover:text-white transition-colors duration-300">Call Us Direct</div>
                    <div class="text-2xl font-black text-white mb-1 group-hover:text-green-200 transition-colors duration-300">
                      (954) 937-9667
                    </div>
                    <div class="text-white/60 text-sm group-hover:text-white/80 transition-colors duration-300">Available 7 days a week</div>
                  </div>
                </div>
              </a>

              <!-- Email Card -->
              <a 
                href="mailto:info@warehouselocating.com" 
                class="group block p-6 bg-white/10 backdrop-blur-xl rounded-3xl border border-white/20 shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-105 hover:bg-white/15 relative overflow-hidden before:absolute before:inset-0 before:bg-gradient-to-br before:from-white/20 before:via-transparent before:to-transparent before:opacity-0 hover:before:opacity-100 before:transition-opacity before:duration-500"
              >
                <div class="relative z-10 flex items-center space-x-5">
                  <div class="w-14 h-14 bg-blue-500/20 backdrop-blur-sm rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:bg-blue-500/30 transition-colors duration-300">
                    <svg class="w-7 h-7 text-blue-400 group-hover:text-blue-300 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  </div>
                  <div>
                    <div class="text-sm font-semibold text-white/80 mb-1 group-hover:text-white transition-colors duration-300">Email Us</div>
                    <div class="text-xl font-black text-white mb-1 group-hover:text-blue-200 transition-colors duration-300 break-all">
                      info@warehouselocating.com
                    </div>
                    <div class="text-white/60 text-sm group-hover:text-white/80 transition-colors duration-300">Fast response within 24 hours</div>
                  </div>
                </div>
              </a>
            </div>
          </div>

          <!-- Right Column: Contact Form -->
          <div class="animate-on-scroll flex justify-center lg:justify-end">
            <div class="bg-white/10 backdrop-blur-xl rounded-3xl border border-white/20 shadow-2xl p-8 w-full max-w-lg">
              <div class="text-center mb-6">
                <h2 class="text-2xl font-bold text-white mb-2">Find Your Perfect Warehouse Space</h2>
                <p class="text-white/80 text-sm">We'll get back to you within 24 hours with qualified options.</p>
              </div>
              
              <form 
                name="warehouse-inquiry" 
                method="POST" 
                data-netlify="true" 
                netlify-honeypot="bot-field"
                action="/success"
                class="space-y-4"
              >
                <!-- Hidden fields -->
                <input type="hidden" name="form-name" value="warehouse-inquiry" />
                <input type="hidden" name="source" value="contact-page-hero" />
                <div class="hidden">
                  <input name="bot-field" />
                </div>

                <!-- Name, Email Row -->
                <div class="grid grid-cols-2 gap-3">
                  <div>
                    <label class="block text-white/90 text-sm font-medium mb-2">Name *</label>
                    <input 
                      type="text" 
                      name="name" 
                      required 
                      class="w-full px-4 py-3 rounded-xl border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-2 focus:ring-primary-400/20 transition-all duration-300"
                      placeholder="Your Name"
                    />
                  </div>
                  <div>
                    <label class="block text-white/90 text-sm font-medium mb-2">Email *</label>
                    <input 
                      type="email" 
                      name="email" 
                      required 
                      class="w-full px-4 py-3 rounded-xl border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-2 focus:ring-primary-400/20 transition-all duration-300"
                      placeholder="your@email.com"
                    />
                  </div>
                </div>

                <!-- Phone, Company Row -->
                <div class="grid grid-cols-2 gap-3">
                  <div>
                    <label class="block text-white/90 text-sm font-medium mb-2">Phone *</label>
                    <input 
                      type="tel" 
                      name="phone" 
                      required
                      class="w-full px-4 py-3 rounded-xl border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-2 focus:ring-primary-400/20 transition-all duration-300"
                      placeholder="(954) 123-4567"
                    />
                  </div>
                  <div>
                    <label class="block text-white/90 text-sm font-medium mb-2">Company</label>
                    <input 
                      type="text" 
                      name="company" 
                      class="w-full px-4 py-3 rounded-xl border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-2 focus:ring-primary-400/20 transition-all duration-300"
                      placeholder="Company Name"
                    />
                  </div>
                </div>

                <!-- Size, Warehouse Row -->
                <div class="grid grid-cols-2 gap-3">
                  <div>
                    <label class="block text-white/90 text-sm font-medium mb-2">Size (SF)</label>
                    <input 
                      type="text" 
                      name="size-needed" 
                      class="w-full px-4 py-3 rounded-xl border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-2 focus:ring-primary-400/20 transition-all duration-300"
                      placeholder="10,000"
                    />
                  </div>
                  <div>
                    <label class="block text-white/90 text-sm font-medium mb-2">Property *</label>
                    <select 
                      name="warehouse-interested" 
                      required
                      class="w-full px-4 py-3 rounded-xl border border-white/20 bg-white/10 backdrop-blur-sm text-white focus:border-primary-400 focus:ring-2 focus:ring-primary-400/20 transition-all duration-300"
                    >
                      <option value="" class="text-gray-900">Select...</option>
                      <option value="any" class="text-gray-900">Any Available</option>
                      {allWarehouses.map(warehouse => (
                        <option value={warehouse.slug} class="text-gray-900">
                          {warehouse.title}
                        </option>
                      ))}
                    </select>
                  </div>
                </div>

                <!-- Timing -->
                <div>
                  <label class="block text-white/90 text-sm font-medium mb-2">Timing</label>
                  <select 
                    name="timing" 
                    class="w-full px-4 py-3 rounded-xl border border-white/20 bg-white/10 backdrop-blur-sm text-white focus:border-primary-400 focus:ring-2 focus:ring-primary-400/20 transition-all duration-300"
                  >
                    <option value="" class="text-gray-900">Select timeline...</option>
                    <option value="immediate" class="text-gray-900">Immediate (0-30 days)</option>
                    <option value="1-3-months" class="text-gray-900">1-3 months</option>
                    <option value="3-6-months" class="text-gray-900">3-6 months</option>
                    <option value="6-12-months" class="text-gray-900">6-12 months</option>
                    <option value="12-months-plus" class="text-gray-900">12+ months</option>
                    <option value="just-exploring" class="text-gray-900">Just exploring options</option>
                  </select>
                </div>

                <!-- Requirements & Message -->
                <div>
                  <label class="block text-white/90 text-sm font-medium mb-2">Requirements</label>
                  <textarea 
                    name="requirements" 
                    rows="3"
                    class="w-full px-4 py-3 rounded-xl border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-2 focus:ring-primary-400/20 transition-all duration-300 resize-none"
                    placeholder="Loading docks, clear height, special features, budget, location preferences..."
                  ></textarea>
                </div>

                <!-- Submit Button -->
                <button 
                  type="submit" 
                  class="w-full bg-gradient-to-r from-primary-600 to-primary-700 text-white px-6 py-4 rounded-xl text-lg font-bold hover:from-primary-700 hover:to-primary-800 hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300 transform focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 focus:ring-offset-transparent"
                >
                  Get Matched With Warehouses
                </button>

                <p class="text-sm text-white/60 text-center">
                  Free service • Landlords pay our fees • No obligation
                </p>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          
          <!-- Left Column: Content -->
          <div class="animate-on-scroll">
            <h2 class="text-3xl font-bold text-gray-900 mb-8">
              Why We're Different
            </h2>
            
            <div class="space-y-4">
              <div class="flex items-start space-x-3">
                <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-gray-900">Completely Free to You</p>
                  <p class="text-sm text-gray-600">Landlords pay all of our fees—100% free tenant representation</p>
                </div>
              </div>

              <div class="flex items-start space-x-3">
                <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-gray-900">Industrial-Only Focus</p>
                  <p class="text-sm text-gray-600">We specialize exclusively in warehouse and industrial properties</p>
                </div>
              </div>

              <div class="flex items-start space-x-3">
                <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-gray-900">Local South Florida Experts</p>
                  <p class="text-sm text-gray-600">Deep knowledge of Miami-Dade, Broward, and Palm Beach markets</p>
                </div>
              </div>

              <div class="flex items-start space-x-3">
                <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-gray-900">Network Access</p>
                  <p class="text-sm text-gray-600">On-market and off-market properties through our broker network</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Right Column: Process Info -->
          <div class="animate-on-scroll">
            <div class="bg-gradient-to-br from-primary-50 to-blue-50 rounded-3xl p-8">
              <h3 class="text-2xl font-bold text-gray-900 mb-6">
                What Happens Next?
              </h3>
              
              <div class="space-y-6">
                <div class="flex items-center space-x-4">
                  <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center flex-shrink-0">
                    <span class="text-blue-600 font-bold">1</span>
                  </div>
                  <div>
                    <h4 class="font-semibold text-gray-900">We Review Your Needs</h4>
                    <p class="text-sm text-gray-600">Analyze your requirements within 2 hours</p>
                  </div>
                </div>

                <div class="flex items-center space-x-4">
                  <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center flex-shrink-0">
                    <span class="text-blue-600 font-bold">2</span>
                  </div>
                  <div>
                    <h4 class="font-semibold text-gray-900">Find Qualified Matches</h4>
                    <p class="text-sm text-gray-600">Search our network for perfect options</p>
                  </div>
                </div>

                <div class="flex items-center space-x-4">
                  <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center flex-shrink-0">
                    <span class="text-blue-600 font-bold">3</span>
                  </div>
                  <div>
                    <h4 class="font-semibold text-gray-900">Schedule Tours</h4>
                    <p class="text-sm text-gray-600">Set up property visits at your convenience</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Service Areas -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12 animate-on-scroll">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Service Areas
          </h2>
          <p class="text-lg text-gray-600">
            Comprehensive coverage across South Florida's major industrial markets
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 stagger-children">
          <div class="text-center p-8 bg-white rounded-3xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Miami-Dade County</h3>
            <p class="text-gray-600 text-sm">Miami, Hialeah, Doral, Kendall, Homestead, and surrounding areas</p>
          </div>

          <div class="text-center p-8 bg-white rounded-3xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Broward County</h3>
            <p class="text-gray-600 text-sm">Fort Lauderdale, Hollywood, Pompano Beach, Davie, and surrounding areas</p>
          </div>

          <div class="text-center p-8 bg-white rounded-3xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Palm Beach County</h3>
            <p class="text-gray-600 text-sm">West Palm Beach, Boca Raton, Delray Beach, Boynton Beach, and surrounding areas</p>
          </div>
        </div>

        <div class="text-center mt-12 animate-on-scroll">
          <p class="text-gray-600 mb-8">
            <span class="font-semibold">Coverage:</span> Statewide and national warehouse options available upon request
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="/warehouses" 
              class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-8 py-4 rounded-2xl text-lg font-semibold hover:from-primary-700 hover:to-primary-800 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 transform inline-block"
            >
              View Available Properties
            </a>
            <a 
              href="/about" 
              class="bg-white text-gray-900 border-2 border-gray-200 px-8 py-4 rounded-2xl text-lg font-semibold hover:bg-gray-50 hover:border-gray-300 transition-all duration-300 inline-block"
            >
              Learn More About Us
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>