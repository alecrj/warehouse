---
// Updated contact page with centered header text for mobile
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

// Define types for warehouse options
interface WarehouseOption {
  title: string;
  slug: string;
}

// Get warehouses for the form dropdown
let allWarehouses: WarehouseOption[] = [];
try {
  const warehouseCollection = await getCollection('warehouses');
  allWarehouses = warehouseCollection
    .filter(w => w.data.availability === 'available')
    .map(w => ({ title: w.data.title, slug: w.data.slug }));
} catch (error) {
  console.log('Could not load warehouses for dropdown');
}

// Form dropdown options (matching ContactModal exactly)
const counties = [
  'Miami-Dade County',
  'Broward County', 
  'Palm Beach County'
];

const priceRanges = [
  '$3-5 per SF',
  '$5-7 per SF',
  '$7-10 per SF',
  '$10-15 per SF',
  '$15+ per SF',
  'Negotiable'
];

const sqftRanges = [
  '500-2,000 SF',
  '2,000-5,000 SF',
  '5,000-10,000 SF',
  '10,000-25,000 SF',
  '25,000-50,000 SF',
  '50,000-100,000 SF',
  '100,000+ SF'
];
---

<BaseLayout 
  title="Contact Warehouse Locating | Get Matched With Warehouses Today"
  description="Tell us what you need. We'll send qualified options and set up tours. Free tenant representation across South Florida."
>
  <Navigation />
  
  <main>
    <!-- Hero Section - Centered Header Text -->
    <section class="relative bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-cyan-500/10 rounded-full blur-3xl animate-float-reverse"></div>
        <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>
      </div>
      
      <div class="relative z-10 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-16 pb-8">
        <div class="grid lg:grid-cols-2 gap-6 lg:gap-8 items-center min-h-[55vh]">
          
          <!-- Left Column: Centered Headline + Contact Cards -->
          <div class="animate-on-scroll text-center lg:text-left px-2 sm:px-0">
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black text-white leading-[0.85] tracking-tight mb-4 mt-8">
              FIND YOUR
              <span class="block bg-gradient-to-r from-primary-400 to-blue-400 bg-clip-text text-transparent">
                WAREHOUSE TODAY
              </span>
            </h1>
            
            <p class="text-lg lg:text-xl text-gray-300 leading-relaxed mb-4 max-w-xl mx-auto lg:mx-0">
              Tell us what you need. We'll send qualified options and set up tours.
            </p>

            <p class="text-base text-gray-400 leading-relaxed mb-6 max-w-3xl mx-auto lg:mx-0">
              <span class="text-white font-semibold">Completely free service.</span> Our fee is paid by landlords.
            </p>

            <!-- Contact Cards - Glassmorphism Style -->
            <div class="space-y-4 max-w-md mx-auto lg:mx-0">
              <!-- Phone Card -->
              <a 
                href="tel:954-937-9667" 
                class="group block p-5 bg-white/10 backdrop-blur-xl rounded-3xl border border-white/20 shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-105 hover:bg-white/15 relative overflow-hidden before:absolute before:inset-0 before:bg-gradient-to-br before:from-white/20 before:via-transparent before:to-transparent before:opacity-0 hover:before:opacity-100 before:transition-opacity before:duration-500"
              >
                <div class="relative z-10 flex items-center space-x-4">
                  <div class="w-12 h-12 bg-green-500/20 backdrop-blur-sm rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:bg-green-500/30 transition-colors duration-300">
                    <svg class="w-6 h-6 text-green-400 group-hover:text-green-300 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                  </div>
                  <div>
                    <div class="text-sm font-semibold text-white/80 mb-1 group-hover:text-white transition-colors duration-300">Call Us Direct</div>
                    <div class="text-xl font-black text-white mb-1 group-hover:text-green-200 transition-colors duration-300">
                      (954) 937-9667
                    </div>
                    <div class="text-white/60 text-sm group-hover:text-white/80 transition-colors duration-300">Available 7 days a week</div>
                  </div>
                </div>
              </a>

              <!-- Email Card -->
              <a 
                href="mailto:info@warehouselocating.com" 
                class="group block p-5 bg-white/10 backdrop-blur-xl rounded-3xl border border-white/20 shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-105 hover:bg-white/15 relative overflow-hidden before:absolute before:inset-0 before:bg-gradient-to-br before:from-white/20 before:via-transparent before:to-transparent before:opacity-0 hover:before:opacity-100 before:transition-opacity before:duration-500"
              >
                <div class="relative z-10 flex items-center space-x-4">
                  <div class="w-12 h-12 bg-blue-500/20 backdrop-blur-sm rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:bg-blue-500/30 transition-colors duration-300">
                    <svg class="w-6 h-6 text-blue-400 group-hover:text-blue-300 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  </div>
                  <div>
                    <div class="text-sm font-semibold text-white/80 mb-1 group-hover:text-white transition-colors duration-300">Email Us</div>
                    <div class="text-lg font-black text-white mb-1 group-hover:text-blue-200 transition-colors duration-300">
                      info@warehouselocating.com
                    </div>
                    <div class="text-white/60 text-sm group-hover:text-white/80 transition-colors duration-300">Fast response guaranteed</div>
                  </div>
                </div>
              </a>

              <!-- Value Prop -->
              <div class="flex items-center justify-center lg:justify-start space-x-3">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span class="text-white font-medium text-sm">100% free consultation</span>
              </div>
            </div>
          </div>

          <!-- Right Column: Enhanced Contact Form -->
          <div class="animate-on-scroll px-2 sm:px-0">
            <div class="bg-white/10 backdrop-blur-xl rounded-3xl border border-white/20 shadow-2xl p-6">
              <div class="text-center mb-4">
                <h2 class="text-xl font-bold text-white mb-1">Tell Us What You Need</h2>
                <p class="text-white/80 text-xs">We'll send you qualified warehouse options within 24 hours.</p>
              </div>
              
              <form 
                name="warehouse-inquiry-modal" 
                method="POST" 
                data-netlify="true" 
                netlify-honeypot="bot-field"
                action="/success"
                class="space-y-3"
              >
                <!-- Hidden fields -->
                <input type="hidden" name="form-name" value="warehouse-inquiry-modal" />
                <input type="hidden" name="source" value="contact-page-hero" />
                <div class="hidden">
                  <input name="bot-field" />
                </div>

                <!-- Name & Email Row -->
                <div class="grid grid-cols-2 gap-2">
                  <div>
                    <label class="block text-white/90 text-xs font-medium mb-1">Name *</label>
                    <input 
                      type="text" 
                      name="name" 
                      required 
                      class="w-full px-3 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-sm"
                      placeholder="Your Name"
                    />
                  </div>
                  <div>
                    <label class="block text-white/90 text-xs font-medium mb-1">Email *</label>
                    <input 
                      type="email" 
                      name="email" 
                      required 
                      class="w-full px-3 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-sm"
                      placeholder="your@email.com"
                    />
                  </div>
                </div>

                <!-- Phone & Company Row -->
                <div class="grid grid-cols-2 gap-2">
                  <div>
                    <label class="block text-white/90 text-xs font-medium mb-1">Phone</label>
                    <input 
                      type="tel" 
                      name="phone" 
                      class="w-full px-3 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-sm"
                      placeholder="(555) 123-4567"
                    />
                  </div>
                  <div>
                    <label class="block text-white/90 text-xs font-medium mb-1">Company</label>
                    <input 
                      type="text" 
                      name="company" 
                      class="w-full px-3 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-sm"
                      placeholder="Company Name"
                    />
                  </div>
                </div>

                <!-- Property Interest & County Row -->
                <div class="grid grid-cols-2 gap-2">
                  <div>
                    <label class="block text-white/90 text-xs font-medium mb-1">Property Interest *</label>
                    <select 
                      name="property-interest" 
                      required
                      class="w-full px-3 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-sm"
                    >
                      <option value="" class="bg-gray-800">Select property...</option>
                      <option value="any" class="bg-gray-800">Any Available Property</option>
                      {allWarehouses.map(warehouse => (
                        <option value={warehouse.slug} class="bg-gray-800">
                          {warehouse.title}
                        </option>
                      ))}
                    </select>
                  </div>
                  <div>
                    <label class="block text-white/90 text-xs font-medium mb-1">County</label>
                    <select 
                      name="county" 
                      class="w-full px-3 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-sm"
                    >
                      <option value="" class="bg-gray-800">Select county...</option>
                      <option value="any" class="bg-gray-800">Any County</option>
                      {counties.map(county => (
                        <option value={county} class="bg-gray-800">{county}</option>
                      ))}
                    </select>
                  </div>
                </div>

                <!-- Size & Price Range Row -->
                <div class="grid grid-cols-2 gap-2">
                  <div>
                    <label class="block text-white/90 text-xs font-medium mb-1">Size (SF)</label>
                    <select 
                      name="size-needed" 
                      class="w-full px-3 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-sm"
                    >
                      <option value="" class="bg-gray-800">Select size...</option>
                      {sqftRanges.map(range => (
                        <option value={range} class="bg-gray-800">{range}</option>
                      ))}
                    </select>
                  </div>
                  <div>
                    <label class="block text-white/90 text-xs font-medium mb-1">Price Range</label>
                    <select 
                      name="price-range" 
                      class="w-full px-3 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-sm"
                    >
                      <option value="" class="bg-gray-800">Select price...</option>
                      {priceRanges.map(range => (
                        <option value={range} class="bg-gray-800">{range}</option>
                      ))}
                    </select>
                  </div>
                </div>

                <!-- Timing -->
                <div>
                  <label class="block text-white/90 text-xs font-medium mb-1">Timing</label>
                  <select 
                    name="timing" 
                    class="w-full px-3 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-sm"
                  >
                    <option value="" class="bg-gray-800">Select timeline...</option>
                    <option value="immediate" class="bg-gray-800">Immediate (0-30 days)</option>
                    <option value="1-3-months" class="bg-gray-800">1-3 months</option>
                    <option value="3-6-months" class="bg-gray-800">3-6 months</option>
                    <option value="6-12-months" class="bg-gray-800">6-12 months</option>
                    <option value="12-months-plus" class="bg-gray-800">12+ months</option>
                    <option value="just-exploring" class="bg-gray-800">Just exploring options</option>
                  </select>
                </div>

                <!-- Requirements & Message -->
                <div>
                  <label class="block text-white/90 text-xs font-medium mb-1">Requirements & Message</label>
                  <textarea 
                    name="requirements" 
                    rows="2"
                    class="w-full px-3 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 resize-vertical text-sm"
                    placeholder="Loading docks, clear height, special features, budget, location preferences..."
                  ></textarea>
                </div>

                <!-- Submit Button -->
                <button 
                  type="submit" 
                  class="w-full bg-gradient-to-r from-primary-600 to-primary-700 text-white px-4 py-3 rounded-lg text-sm font-bold hover:from-primary-700 hover:to-primary-800 hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300 transform focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 focus:ring-offset-transparent"
                >
                  Get Matched With Warehouses
                </button>

                <p class="text-xs text-white/60 text-center">
                  Free service • Landlords pay our fees • No obligation
                </p>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Information Section -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Multiple Ways to Connect</h2>
          <p class="text-lg text-gray-600">Choose the communication method that works best for you</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Phone -->
          <a 
            href="tel:954-937-9667"
            class="group text-center p-6 bg-gray-50 rounded-2xl hover:bg-gray-100 transition-all duration-200 hover:scale-105 hover:shadow-lg cursor-pointer"
          >
            <div class="w-16 h-16 bg-green-100 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:bg-green-200 transition-colors duration-200">
              <svg class="w-8 h-8 text-green-600 group-hover:text-green-700 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-green-700 transition-colors duration-200">Call Direct</h3>
            <div class="text-green-600 hover:text-green-700 font-medium text-lg group-hover:text-green-800 transition-colors duration-200">
              (954) 937-9667
            </div>
            <p class="text-gray-500 text-sm mt-1 group-hover:text-gray-600 transition-colors duration-200">Available 7 days a week</p>
          </a>

          <!-- Email -->
          <a 
            href="mailto:info@warehouselocating.com"
            class="group text-center p-6 bg-gray-50 rounded-2xl hover:bg-gray-100 transition-all duration-200 hover:scale-105 hover:shadow-lg cursor-pointer"
          >
            <div class="w-16 h-16 bg-blue-100 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:bg-blue-200 transition-colors duration-200">
              <svg class="w-8 h-8 text-blue-600 group-hover:text-blue-700 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-blue-700 transition-colors duration-200">Email Us</h3>
            <div class="text-blue-600 hover:text-blue-700 font-medium group-hover:text-blue-800 transition-colors duration-200">
              info@warehouselocating.com
            </div>
            <p class="text-gray-500 text-sm mt-1 group-hover:text-gray-600 transition-colors duration-200">Fast response guaranteed</p>
          </a>

          <!-- Form -->
          <button 
            onclick="openContactModal('multiple-ways-form')"
            class="group text-center p-6 bg-gray-50 rounded-2xl hover:bg-gray-100 transition-all duration-200 hover:scale-105 hover:shadow-lg cursor-pointer w-full"
          >
            <div class="w-16 h-16 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-4 group-hover:bg-primary-200 transition-colors duration-200">
              <svg class="w-8 h-8 text-primary-600 group-hover:text-primary-700 transition-colors duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-primary-700 transition-colors duration-200">Fill Out Form</h3>
            <div class="text-primary-600 hover:text-primary-700 font-medium group-hover:text-primary-800 transition-colors duration-200">
              Get Matched Today
            </div>
            <p class="text-gray-500 text-sm mt-1 group-hover:text-gray-600 transition-colors duration-200">Quick form with all your requirements</p>
          </button>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="relative py-16 overflow-hidden">
      <!-- Background Image -->
      <div class="absolute inset-0">
        <img 
          src="/images/uploads/wareint.png" 
          alt="Warehouse interior" 
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gray-900/80"></div>
      </div>
      
      <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-white mb-4">Frequently Asked Questions</h2>
          <p class="text-lg text-gray-300">Quick answers to common questions about our service</p>
        </div>

        <div class="space-y-6">
          <div class="bg-white/10 backdrop-blur-xl rounded-2xl p-6 border border-white/20 shadow-xl">
            <h3 class="text-lg font-semibold text-white mb-3">How much does your service cost?</h3>
            <p class="text-gray-300">Our service is completely free to tenants. Landlords pay all brokerage fees, so you get expert representation at zero cost.</p>
          </div>

          <div class="bg-white/10 backdrop-blur-xl rounded-2xl p-6 border border-white/20 shadow-xl">
            <h3 class="text-lg font-semibold text-white mb-3">How quickly can you find options?</h3>
            <p class="text-gray-300">We typically provide qualified warehouse options within 24 hours of receiving your requirements. Tours can usually be scheduled within 2-3 business days.</p>
          </div>

          <div class="bg-white/10 backdrop-blur-xl rounded-2xl p-6 border border-white/20 shadow-xl">
            <h3 class="text-lg font-semibold text-white mb-3">What areas do you cover?</h3>
            <p class="text-gray-300">We specialize in industrial properties throughout South Florida, including Miami-Dade, Broward, and Palm Beach counties.</p>
          </div>

          <div class="bg-white/10 backdrop-blur-xl rounded-2xl p-6 border border-white/20 shadow-xl">
            <h3 class="text-lg font-semibold text-white mb-3">Do you handle lease negotiations?</h3>
            <p class="text-gray-300">Yes, we handle all lease negotiations on your behalf, ensuring you get the best possible terms and protecting your interests throughout the process.</p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: all 0.8s ease-out;
  }

  .animate-on-scroll.animated {
    opacity: 1;
    transform: translateY(0);
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-float-reverse {
    animation: float 6s ease-in-out infinite reverse;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(1deg); }
  }

  .bg-pattern-dots {
    background-image: radial-gradient(circle, rgba(255,255,255,0.1) 1px, transparent 1px);
    background-size: 20px 20px;
  }
</style>

<script>
  // Scroll-triggered animations
  const animateOnScroll = () => {
    const elements = document.querySelectorAll('.animate-on-scroll');
    
    elements.forEach(element => {
      const elementTop = element.getBoundingClientRect().top;
      const elementVisible = 150;
      
      if (elementTop < window.innerHeight - elementVisible) {
        element.classList.add('animated');
      }
    });
  };

  // Run on page load and scroll
  window.addEventListener('scroll', animateOnScroll);
  window.addEventListener('load', animateOnScroll);
  
  // Initial check
  animateOnScroll();
</script>