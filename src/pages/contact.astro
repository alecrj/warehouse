---
import BaseLayout from '../layouts/BaseLayout.astro';

// Check for success parameter
const isSuccess = Astro.url.searchParams.get('success') === 'true';
---

<BaseLayout 
  title="Contact Ariel Realty Group | Get Matched with Industrial Properties"
  description="Get expert guidance for your warehouse search. Free tenant representation across Miami-Dade, Broward, and Palm Beach counties. Call (954) 937-9667."
>
  {isSuccess ? (
    <!-- Success State -->
    <section class="section">
      <div class="container container-form">
        <div class="max-w-2xl mx-auto text-center">
          <div class="reveal">
            <!-- Success Icon -->
            <div class="w-20 h-20 bg-accent rounded-full flex items-center justify-center mx-auto mb-8">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            
            <h1 class="mb-6">Thank You!</h1>
            <p class="text-xl text-muted mb-8 leading-relaxed">
              We've received your information and will call you within 1 business day to discuss your warehouse needs.
            </p>
            
            <!-- What's Next -->
            <div class="card mb-12">
              <div class="card-body text-left">
                <h3 class="mb-6 text-center">What Happens Next</h3>
                <div class="space-y-6">
                  <div class="flex items-start">
                    <div class="w-8 h-8 bg-brand rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                      <span class="text-white font-semibold text-sm">1</span>
                    </div>
                    <div>
                      <h4 class="font-semibold mb-2">Initial Consultation</h4>
                      <p class="text-muted">We'll call within 24 hours to understand your specific requirements and timeline.</p>
                    </div>
                  </div>
                  
                  <div class="flex items-start">
                    <div class="w-8 h-8 bg-brand rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                      <span class="text-white font-semibold text-sm">2</span>
                    </div>
                    <div>
                      <h4 class="font-semibold mb-2">Property Search</h4>
                      <p class="text-muted">We'll search both on-market and off-market properties that match your criteria.</p>
                    </div>
                  </div>
                  
                  <div class="flex items-start">
                    <div class="w-8 h-8 bg-brand rounded-full flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                      <span class="text-white font-semibold text-sm">3</span>
                    </div>
                    <div>
                      <h4 class="font-semibold mb-2">Property Tours</h4>
                      <p class="text-muted">Schedule tours of the best options and provide expert guidance throughout the process.</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Contact Options -->
            <div class="space-y-6">
              <div>
                <h3 class="mb-4">Need Immediate Assistance?</h3>
                <a href="tel:+19549379667" class="btn btn-primary btn-lg">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                  Call (954) 937-9667
                </a>
              </div>
              
              <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="/warehouses" class="btn btn-secondary">
                  Browse Properties
                  <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                  </svg>
                </a>
                <a href="/" class="btn btn-quiet">
                  Back to Home
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  ) : (
    <>
      <!-- Page Header -->
      <section class="py-16 bg-surface-alt">
        <div class="container container-form">
          <div class="text-center reveal">
            <h1 class="mb-6">Get Matched with Properties</h1>
            <p class="text-xl text-muted max-w-3xl mx-auto leading-relaxed">
              Tell us about your warehouse needs and we'll find the perfect space for your business. 
              Our expert guidance is completely free for tenants.
            </p>
          </div>
        </div>
      </section>

      <!-- Call CTA -->
      <section class="py-12 bg-brand text-white">
        <div class="container container-form text-center">
          <div class="reveal">
            <h2 class="text-white mb-4">Prefer to Talk?</h2>
            <p class="text-white/80 mb-6">
              Speak directly with our industrial real estate experts
            </p>
            <a href="tel:+19549379667" class="btn btn-accent btn-lg">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              Call (954) 937-9667
            </a>
            <p class="text-sm text-white/60 mt-4">
              Available Monday - Friday, 8am - 6pm EST
            </p>
          </div>
        </div>
      </section>

      <!-- Contact Form -->
      <section class="section">
        <div class="container container-form">
          <div class="max-w-2xl mx-auto">
            <div class="card reveal">
              <div class="card-body">
                <div class="text-center mb-8">
                  <h2 class="mb-4">Tell Us About Your Needs</h2>
                  <p class="text-muted">
                    We'll call within 1 business day to discuss your requirements and start your property search.
                  </p>
                </div>

                <form 
                  name="contact-form" 
                  method="POST" 
                  data-netlify="true" 
                  action="/contact?success=true"
                  class="space-y-6"
                  id="contact-form"
                >
                  <input type="hidden" name="form-name" value="contact-form" />
                  <input type="hidden" name="source" value="contact-page" />
                  <input type="hidden" name="bot-field" style="display: none;" />
                  
                  <!-- Personal Information -->
                  <div class="grid md:grid-cols-2 gap-6">
                    <div class="form-group">
                      <label class="form-label" for="name">Name *</label>
                      <input type="text" id="name" name="name" class="form-input" required />
                    </div>
                    
                    <div class="form-group">
                      <label class="form-label" for="phone">Phone *</label>
                      <input type="tel" id="phone" name="phone" class="form-input" required />
                    </div>
                  </div>
                  
                  <div class="form-group">
                    <label class="form-label" for="email">Email *</label>
                    <input type="email" id="email" name="email" class="form-input" required />
                  </div>
                  
                  <div class="form-group">
                    <label class="form-label" for="company">Company</label>
                    <input type="text" id="company" name="company" class="form-input" />
                  </div>
                  
                  <!-- Property Requirements -->
                  <div class="pt-6 border-t border-black/5">
                    <h3 class="mb-6">Property Requirements</h3>
                    
                    <div class="grid md:grid-cols-2 gap-6">
                      <div class="form-group">
                        <label class="form-label" for="size-range">Size Needed *</label>
                        <select id="size-range" name="size-range" class="form-select" required>
                          <option value="">Select size range</option>
                          <option value="under-5000">Under 5,000 SF</option>
                          <option value="5000-25000">5,000 - 25,000 SF</option>
                          <option value="25000-100000">25,000 - 100,000 SF</option>
                          <option value="over-100000">Over 100,000 SF</option>
                          <option value="flexible">Flexible on size</option>
                        </select>
                      </div>
                      
                      <div class="form-group">
                        <label class="form-label" for="county">Preferred County *</label>
                        <select id="county" name="county" class="form-select" required>
                          <option value="">Select county</option>
                          <option value="miami-dade">Miami-Dade</option>
                          <option value="broward">Broward</option>
                          <option value="palm-beach">Palm Beach</option>
                          <option value="multiple">Multiple Counties</option>
                          <option value="open">Open to all areas</option>
                        </select>
                      </div>
                    </div>
                    
                    <div class="form-group">
                      <label class="form-label" for="timing">When do you need space? *</label>
                      <select id="timing" name="timing" class="form-select" required>
                        <option value="">Select timeframe</option>
                        <option value="immediate">Immediately</option>
                        <option value="30-days">Within 30 days</option>
                        <option value="90-days">Within 90 days</option>
                        <option value="6-months">Within 6 months</option>
                        <option value="exploring">Just exploring options</option>
                      </select>
                    </div>
                  </div>
                  
                  <!-- Additional Details -->
                  <div class="form-group">
                    <label class="form-label" for="details">Additional Details</label>
                    <textarea 
                      id="details" 
                      name="details" 
                      rows="4" 
                      class="form-textarea"
                      placeholder="Tell us about any specific requirements: loading docks, clear height, office space, special features, budget considerations, etc."
                    ></textarea>
                  </div>
                  
                  <!-- Submit Button -->
                  <div class="pt-6">
                    <button type="submit" class="btn btn-primary w-full btn-lg" id="submit-btn">
                      <span id="submit-text">Get Matched</span>
                      <span id="submit-spinner" class="hidden">
                        <svg class="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24">
                          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                        </svg>
                      </span>
                      <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                      </svg>
                    </button>
                  </div>
                  
                  <!-- Form Footer -->
                  <div class="text-center text-sm text-muted pt-4">
                    <div class="flex items-center justify-center space-x-6">
                      <div class="flex items-center">
                        <svg class="w-4 h-4 mr-2 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Free consultation
                      </div>
                      <div class="flex items-center">
                        <svg class="w-4 h-4 mr-2 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        No obligation
                      </div>
                      <div class="flex items-center">
                        <svg class="w-4 h-4 mr-2 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                        Expert guidance
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Trust Section -->
      <section class="py-16 bg-surface-alt">
        <div class="container container-form">
          <div class="max-w-4xl mx-auto text-center">
            <div class="reveal">
              <h2 class="mb-8">Why Choose Ariel Realty Group?</h2>
              
              <div class="grid md:grid-cols-3 gap-8">
                <div class="text-center">
                  <div class="w-16 h-16 bg-accent rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
                    </svg>
                  </div>
                  <h3 class="mb-4">Free for Tenants</h3>
                  <p class="text-muted">
                    Our services cost you nothing. We're compensated by landlords, so you get expert representation at zero cost.
                  </p>
                </div>
                
                <div class="text-center">
                  <div class="w-16 h-16 bg-brand rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                  <h3 class="mb-4">Local Expertise</h3>
                  <p class="text-muted">
                    Deep knowledge of South Florida's industrial market with established relationships across all submarkets.
                  </p>
                </div>
                
                <div class="text-center">
                  <div class="w-16 h-16 bg-muted rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <h3 class="mb-4">Fast Response</h3>
                  <p class="text-muted">
                    We respond within 24 hours and work on your timeline to find the perfect space quickly and efficiently.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </>
  )}

  <!-- Form Submission Logic -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.getElementById('contact-form') as HTMLFormElement;
      const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
      const submitText = document.getElementById('submit-text');
      const submitSpinner = document.getElementById('submit-spinner');
      
      if (form) {
        form.addEventListener('submit', (e) => {
          // Show loading state
          if (submitBtn && submitText && submitSpinner) {
            submitBtn.disabled = true;
            submitText.classList.add('hidden');
            submitSpinner.classList.remove('hidden');
          }
          
          // Form will be handled by Netlify
          // Redirect will happen automatically based on action attribute
        });
      }
    });
  </script>
</BaseLayout>