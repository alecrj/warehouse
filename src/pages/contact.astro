---
// Updated contact page with warehouselocating.com copy
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout 
  title="Contact Warehouse Locating | Get Matched With Warehouses Today"
  description="Tell us what you need. We'll send qualified options and set up tours. Free tenant representation across South Florida."
>
  <Navigation />
  
  <main>
    <!-- Hero Section -->
    <section class="relative pt-20 pb-16 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-blue-500/20 rounded-full blur-3xl float"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-cyan-500/20 rounded-full blur-3xl float-reverse"></div>
      
      <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-4xl lg:text-6xl font-black text-white leading-tight tracking-tight mb-6 gsap-fade-in">
            GET MATCHED WITH
            <span class="block text-gradient">WAREHOUSES TODAY</span>
          </h1>
          <p class="text-lg lg:text-xl text-slate-300 max-w-4xl mx-auto leading-relaxed gsap-fade-in">
            Tell us what you need. We'll send qualified options and set up tours.
          </p>
        </div>

        <!-- Quick Contact Form -->
        <div class="max-w-2xl mx-auto">
          <div class="bg-white/10 backdrop-blur-lg border border-white/20 rounded-3xl p-8 shadow-2xl">
            <form 
              name="hero-contact" 
              method="POST" 
              data-netlify="true" 
              netlify-honeypot="bot-field"
              action="/success"
              class="space-y-4"
            >
              <!-- Hidden fields -->
              <input type="hidden" name="form-name" value="hero-contact" />
              <div class="hidden">
                <input name="bot-field" />
              </div>

              <!-- Name & Email Row -->
              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <label for="hero-name" class="block text-white text-sm font-semibold mb-2">
                    Name *
                  </label>
                  <input 
                    type="text" 
                    id="hero-name"
                    name="name" 
                    required 
                    class="w-full px-4 py-3 rounded-xl bg-white/90 border border-white/30 focus:bg-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300 text-gray-900"
                    placeholder="Your Name"
                  />
                </div>
                
                <div>
                  <label for="hero-email" class="block text-white text-sm font-semibold mb-2">
                    Email *
                  </label>
                  <input 
                    type="email" 
                    id="hero-email"
                    name="email" 
                    required 
                    class="w-full px-4 py-3 rounded-xl bg-white/90 border border-white/30 focus:bg-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300 text-gray-900"
                    placeholder="your@email.com"
                  />
                </div>
              </div>

              <!-- Phone & Company -->
              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <label for="hero-phone" class="block text-white text-sm font-semibold mb-2">
                    Phone
                  </label>
                  <input 
                    type="tel" 
                    id="hero-phone"
                    name="phone" 
                    class="w-full px-4 py-3 rounded-xl bg-white/90 border border-white/30 focus:bg-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300 text-gray-900"
                    placeholder="(954) 123-4567"
                  />
                </div>
                
                <div>
                  <label for="hero-company" class="block text-white text-sm font-semibold mb-2">
                    Company (optional)
                  </label>
                  <input 
                    type="text" 
                    id="hero-company"
                    name="company" 
                    class="w-full px-4 py-3 rounded-xl bg-white/90 border border-white/30 focus:bg-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300 text-gray-900"
                    placeholder="Company Name"
                  />
                </div>
              </div>

              <!-- Size & Location -->
              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <label for="hero-size" class="block text-white text-sm font-semibold mb-2">
                    Size (SF) *
                  </label>
                  <input 
                    type="text" 
                    id="hero-size"
                    name="size" 
                    required 
                    class="w-full px-4 py-3 rounded-xl bg-white/90 border border-white/30 focus:bg-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300 text-gray-900"
                    placeholder="500–500,000+ SF"
                  />
                </div>
                
                <div>
                  <label for="hero-locations" class="block text-white text-sm font-semibold mb-2">
                    Preferred Locations (cities/counties)
                  </label>
                  <input 
                    type="text" 
                    id="hero-locations"
                    name="locations" 
                    class="w-full px-4 py-3 rounded-xl bg-white/90 border border-white/30 focus:bg-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300 text-gray-900"
                    placeholder="Miami-Dade, Broward, Palm Beach"
                  />
                </div>
              </div>

              <!-- Budget & Timing -->
              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <label for="hero-budget" class="block text-white text-sm font-semibold mb-2">
                    Budget ($/SF/Yr)
                  </label>
                  <input 
                    type="text" 
                    id="hero-budget"
                    name="budget" 
                    class="w-full px-4 py-3 rounded-xl bg-white/90 border border-white/30 focus:bg-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300 text-gray-900"
                    placeholder="$ / SF / Year"
                  />
                </div>
                
                <div>
                  <label for="hero-timing" class="block text-white text-sm font-semibold mb-2">
                    Timing (move-in date)
                  </label>
                  <input 
                    type="text" 
                    id="hero-timing"
                    name="timing" 
                    class="w-full px-4 py-3 rounded-xl bg-white/90 border border-white/30 focus:bg-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300 text-gray-900"
                    placeholder="e.g., 60-90 days"
                  />
                </div>
              </div>

              <!-- Must-Haves -->
              <div>
                <label for="hero-requirements" class="block text-white text-sm font-semibold mb-2">
                  Must-Haves (loading, yard, power, etc.)
                </label>
                <textarea 
                  id="hero-requirements"
                  name="requirements" 
                  rows="4"
                  class="w-full px-4 py-3 rounded-xl bg-white/90 border border-white/30 focus:bg-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300 resize-none text-gray-900"
                  placeholder="Tell us about your warehouse needs: dock doors, yard space, 3-phase power, food-grade, etc."
                ></textarea>
              </div>

              <!-- Submit Button -->
              <button 
                type="submit" 
                class="w-full bg-gradient-to-r from-primary-600 to-primary-700 text-white py-4 rounded-xl text-lg font-bold hover:from-primary-700 hover:to-primary-800 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 transform"
              >
                Show Me Matching Warehouses
              </button>

              <!-- Privacy Note -->
              <p class="text-center text-gray-400 text-sm">
                We'll connect you with the perfect warehouse space within 24 hours. 
                <span class="text-white font-medium">Completely free service.</span>
              </p>
            </form>

            <!-- Contact Info -->
            <div class="mt-6 pt-6 border-t border-white/20 text-center">
              <p class="text-gray-300 text-sm mb-2">Prefer to talk?</p>
              <a 
                href="tel:954-937-9667" 
                class="text-white font-bold text-xl hover:text-primary-300 transition-colors duration-200"
              >
                Call (954) 937-9667
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="relative py-20 bg-white overflow-hidden">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-16 items-start">
          <!-- Contact Form -->
          <div class="gsap-fade-in-left">
            <div class="bg-slate-50 rounded-3xl p-8 lg:p-10 shadow-premium">
              <h2 class="text-3xl font-black text-slate-900 mb-6">
                Get Matched with
                <span class="text-gradient">Warehouses Today</span>
              </h2>
              
              <form 
                name="contact" 
                method="POST" 
                data-netlify="true" 
                netlify-honeypot="bot-field"
                action="/success"
                class="space-y-6"
              >
                <!-- Hidden fields -->
                <input type="hidden" name="form-name" value="contact" />
                <div class="hidden">
                  <input name="bot-field" />
                </div>

                <!-- Name -->
                <div class="form-group">
                  <label for="name" class="block text-sm font-semibold text-slate-700 mb-2">
                    Name *
                  </label>
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required 
                    class="w-full px-4 py-3 rounded-xl border border-slate-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all duration-300"
                    placeholder="Your Name"
                  />
                </div>

                <!-- Email -->
                <div class="form-group">
                  <label for="email" class="block text-sm font-semibold text-slate-700 mb-2">
                    Email *
                  </label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required 
                    class="w-full px-4 py-3 rounded-xl border border-slate-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all duration-300"
                    placeholder="your@email.com"
                  />
                </div>

                <!-- Phone -->
                <div class="form-group">
                  <label for="phone" class="block text-sm font-semibold text-slate-700 mb-2">
                    Phone
                  </label>
                  <input 
                    type="tel" 
                    id="phone" 
                    name="phone" 
                    class="w-full px-4 py-3 rounded-xl border border-slate-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all duration-300"
                    placeholder="(954) 123-4567"
                  />
                </div>

                <!-- Company -->
                <div class="form-group">
                  <label for="company" class="block text-sm font-semibold text-slate-700 mb-2">
                    Company (optional)
                  </label>
                  <input 
                    type="text" 
                    id="company" 
                    name="company" 
                    class="w-full px-4 py-3 rounded-xl border border-slate-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all duration-300"
                    placeholder="Company Name"
                  />
                </div>

                <!-- Size -->
                <div class="form-group">
                  <label for="size" class="block text-sm font-semibold text-slate-700 mb-2">
                    Size (SF) *
                  </label>
                  <input 
                    type="text" 
                    id="size" 
                    name="size" 
                    required
                    class="w-full px-4 py-3 rounded-xl border border-slate-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all duration-300"
                    placeholder="500–500,000+ SF"
                  />
                </div>

                <!-- Preferred Locations -->
                <div class="form-group">
                  <label for="preferred-locations" class="block text-sm font-semibold text-slate-700 mb-2">
                    Preferred Locations (cities/counties)
                  </label>
                  <input 
                    type="text" 
                    id="preferred-locations" 
                    name="preferred-locations" 
                    class="w-full px-4 py-3 rounded-xl border border-slate-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all duration-300"
                    placeholder="Miami-Dade, Broward, Palm Beach"
                  />
                </div>

                <!-- Budget -->
                <div class="form-group">
                  <label for="budget" class="block text-sm font-semibold text-slate-700 mb-2">
                    Budget ($/SF/Yr)
                  </label>
                  <input 
                    type="text" 
                    id="budget" 
                    name="budget" 
                    class="w-full px-4 py-3 rounded-xl border border-slate-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all duration-300"
                    placeholder="$ / SF / Year"
                  />
                </div>

                <!-- Timing -->
                <div class="form-group">
                  <label for="timing-move-in" class="block text-sm font-semibold text-slate-700 mb-2">
                    Timing (move-in date)
                  </label>
                  <input 
                    type="text" 
                    id="timing-move-in" 
                    name="timing" 
                    class="w-full px-4 py-3 rounded-xl border border-slate-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all duration-300"
                    placeholder="e.g., 60-90 days"
                  />
                </div>

                <!-- Must-Haves -->
                <div class="form-group">
                  <label for="must-haves" class="block text-sm font-semibold text-slate-700 mb-2">
                    Must-Haves (loading, yard, power, etc.)
                  </label>
                  <textarea 
                    id="must-haves" 
                    name="must-haves" 
                    rows="6"
                    class="w-full px-4 py-3 rounded-xl border border-slate-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 transition-all duration-300 resize-none"
                    placeholder="Tell us about your specific requirements: dock doors, yard space, 3-phase power, food-grade certification, etc."
                  ></textarea>
                </div>

                <!-- Submit Button -->
                <button 
                  type="submit" 
                  class="w-full bg-gradient-to-r from-blue-600 to-cyan-600 text-white py-4 rounded-xl font-bold hover:shadow-xl hover:-translate-y-1 transition-all duration-300 shadow-lg text-lg"
                >
                  Show Me Matching Warehouses
                </button>

                <!-- Privacy Note -->
                <p class="text-sm text-slate-500 text-center">
                  Your information is secure and will only be used to help you find the perfect warehouse space. 
                  <span class="font-semibold">Completely free service.</span>
                </p>
              </form>
            </div>
          </div>

          <!-- Contact Information -->
          <div class="gsap-fade-in-right">
            <div class="space-y-8">
              <div>
                <h3 class="text-3xl font-bold text-slate-900 mb-4">
                  Warehouse Locating
                </h3>
                <p class="text-base text-slate-600 leading-relaxed mb-6">
                  Focused tenant-rep service for industrial users in South Florida. 
                  We help businesses secure the right space—fast, fairly priced, and on terms that protect you for the long haul.
                </p>
              </div>

              <!-- Contact Methods -->
              <div class="space-y-4">
                <!-- Phone -->
                <div class="flex items-center space-x-4 p-6 bg-slate-50 rounded-xl hover:bg-slate-100 transition-all duration-300">
                  <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="font-bold text-slate-900 text-lg">Call Us</div>
                    <a href="tel:954-937-9667" class="text-blue-600 hover:text-blue-700 font-bold text-xl transition-colors">
                      (954) 937-9667
                    </a>
                  </div>
                </div>

                <!-- Email -->
                <div class="flex items-center space-x-4 p-6 bg-slate-50 rounded-xl hover:bg-slate-100 transition-all duration-300">
                  <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="font-bold text-slate-900 text-lg">Email Us</div>
                    <a href="mailto:info@warehouselocating.com" class="text-green-600 hover:text-green-700 font-semibold transition-colors">
                      info@warehouselocating.com
                    </a>
                  </div>
                </div>

                <!-- Office -->
                <div class="flex items-center space-x-4 p-6 bg-slate-50 rounded-xl hover:bg-slate-100 transition-all duration-300">
                  <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="font-bold text-slate-900 text-lg">South Florida Coverage</div>
                    <div class="text-purple-600 font-medium">
                      Miami-Dade, Broward,<br>
                      and Palm Beach Counties
                    </div>
                  </div>
                </div>
              </div>

              <!-- Service Features -->
              <div class="bg-gradient-to-br from-blue-50 to-cyan-50 rounded-2xl p-6 border border-blue-100">
                <h4 class="text-lg font-bold text-slate-900 mb-4">Our Service Includes:</h4>
                <div class="space-y-3">
                  <div class="flex items-center space-x-3">
                    <div class="w-5 h-5 bg-green-500 rounded-full flex items-center justify-center">
                      <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                    </div>
                    <span class="text-slate-700 font-medium">Needs analysis and inventory access</span>
                  </div>
                  <div class="flex items-center space-x-3">
                    <div class="w-5 h-5 bg-green-500 rounded-full flex items-center justify-center">
                      <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                    </div>
                    <span class="text-slate-700 font-medium">Tours & shortlist, financials & comps</span>
                  </div>
                  <div class="flex items-center space-x-3">
                    <div class="w-5 h-5 bg-green-500 rounded-full flex items-center justify-center">
                      <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                    </div>
                    <span class="text-slate-700 font-medium">Negotiation and documentation support</span>
                  </div>
                  <div class="flex items-center space-x-3">
                    <div class="w-5 h-5 bg-green-500 rounded-full flex items-center justify-center">
                      <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                    </div>
                    <span class="text-slate-700 font-medium">Move-in coordination</span>
                  </div>
                  <div class="flex items-center space-x-3">
                    <div class="w-5 h-5 bg-green-500 rounded-full flex items-center justify-center">
                      <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                    </div>
                    <span class="text-slate-700 font-medium">Cost to tenant: $0</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Large Call to Action -->
    <section class="relative py-24 bg-gradient-to-br from-slate-900 to-slate-800 overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 bg-pattern-grid opacity-10"></div>
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl float"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-cyan-500/10 rounded-full blur-3xl float-reverse"></div>

      <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 text-center">
        <h2 class="text-4xl lg:text-6xl font-black text-white leading-tight tracking-tight mb-6 gsap-fade-in">
          READY TO FIND YOUR
          <span class="block text-gradient">PERFECT WAREHOUSE?</span>
        </h2>
        <p class="text-lg text-slate-300 max-w-3xl mx-auto leading-relaxed mb-10 gsap-fade-in">
          Call (954) 937-9667 or get free tenant representation now.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center gsap-fade-in">
          <a href="tel:954-937-9667" class="bg-gradient-to-r from-blue-600 to-cyan-600 text-white px-8 py-4 rounded-xl font-bold hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 shadow-xl text-lg">
            Call (954) 937-9667 Now
          </a>
          <a href="/warehouses" class="bg-white/10 backdrop-blur-sm text-white border border-white/20 px-8 py-4 rounded-xl font-semibold hover:bg-white/20 transition-all duration-300 text-lg">
            Browse Properties
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>