---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Contact Us | Ariel Realty Group"
  description="Get in touch with our expert team for free tenant representation across South Florida. Call (954) 937-9667 or send us a message."
>
  <!-- Contact Hero -->
  <section class="py-20 gradient-primary">
    <div class="container mx-auto px-4 max-w-7xl">
      <div class="text-center text-white scroll-fade-in">
        <span class="text-label-lg text-blue-300 mb-4 block">Get In Touch</span>
        <h1 class="text-display-lg font-bold mb-6">
          Ready to Find Your
          <span class="text-blue-300">Perfect Space?</span>
        </h1>
        <p class="text-body-xl text-slate-200 max-w-3xl mx-auto">
          Our expert team is here to help you navigate the South Florida industrial real estate market. 
          Free consultation, zero obligation.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 bg-slate-50">
    <div class="container mx-auto px-4 max-w-7xl">
      <div class="grid lg:grid-cols-2 gap-16">
        <!-- Contact Information -->
        <div class="scroll-slide-right">
          <h2 class="text-heading-xl font-bold text-slate-900 mb-8">
            Let's Connect
          </h2>
          
          <!-- Contact Methods -->
          <div class="space-y-8">
            <div class="flex items-start">
              <div class="w-12 h-12 bg-blue-600 rounded-xl flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-heading-md font-semibold text-slate-900 mb-2">Call Us</h3>
                <p class="text-body-md text-slate-600 mb-3">
                  Speak directly with our experts for immediate assistance.
                </p>
                <a href="tel:+19549379667" class="text-blue-600 hover:text-blue-700 font-semibold text-body-lg">
                  (954) 937-9667
                </a>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-12 h-12 bg-blue-600 rounded-xl flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-heading-md font-semibold text-slate-900 mb-2">Email Us</h3>
                <p class="text-body-md text-slate-600 mb-3">
                  Send us your requirements and we'll respond within 2 hours.
                </p>
                <a href="mailto:info@arielrealty.com" class="text-blue-600 hover:text-blue-700 font-semibold text-body-lg">
                  info@arielrealty.com
                </a>
              </div>
            </div>

            <div class="flex items-start">
              <div class="w-12 h-12 bg-blue-600 rounded-xl flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-heading-md font-semibold text-slate-900 mb-2">Service Areas</h3>
                <p class="text-body-md text-slate-600 mb-3">
                  We serve all major industrial markets across South Florida.
                </p>
                <div class="text-body-md text-slate-700 space-y-1">
                  <div>Miami-Dade County</div>
                  <div>Broward County</div>
                  <div>Palm Beach County</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Office Hours -->
          <div class="mt-12 p-6 bg-white rounded-2xl shadow-sm">
            <h3 class="text-heading-md font-semibold text-slate-900 mb-4">Office Hours</h3>
            <div class="space-y-2 text-body-md text-slate-600">
              <div class="flex justify-between">
                <span>Monday - Friday</span>
                <span>8:00 AM - 6:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span>Saturday</span>
                <span>9:00 AM - 4:00 PM</span>
              </div>
              <div class="flex justify-between">
                <span>Sunday</span>
                <span>By Appointment</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="scroll-slide-left">
          <div class="card-premium p-8">
            <h2 class="text-heading-xl font-bold text-slate-900 mb-6">
              Send Us a Message
            </h2>
            
            <form name="contact" method="POST" data-netlify="true" class="space-y-6" id="contactForm">
              <input type="hidden" name="form-name" value="contact" />
              
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-body-sm font-medium text-slate-700 mb-2">
                    Full Name *
                  </label>
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required 
                    class="w-full px-4 py-3 border border-slate-300 rounded-xl text-slate-900 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent"
                    placeholder="John Smith"
                  />
                </div>
                
                <div>
                  <label for="company" class="block text-body-sm font-medium text-slate-700 mb-2">
                    Company
                  </label>
                  <input 
                    type="text" 
                    id="company" 
                    name="company" 
                    class="w-full px-4 py-3 border border-slate-300 rounded-xl text-slate-900 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent"
                    placeholder="Company Name"
                  />
                </div>
              </div>
              
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="email" class="block text-body-sm font-medium text-slate-700 mb-2">
                    Email Address *
                  </label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required 
                    class="w-full px-4 py-3 border border-slate-300 rounded-xl text-slate-900 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent"
                    placeholder="john@company.com"
                  />
                </div>
                
                <div>
                  <label for="phone" class="block text-body-sm font-medium text-slate-700 mb-2">
                    Phone Number
                  </label>
                  <input 
                    type="tel" 
                    id="phone" 
                    name="phone" 
                    class="w-full px-4 py-3 border border-slate-300 rounded-xl text-slate-900 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent"
                    placeholder="(954) 123-4567"
                  />
                </div>
              </div>
              
              <div>
                <label for="subject" class="block text-body-sm font-medium text-slate-700 mb-2">
                  Subject
                </label>
                <select 
                  id="subject" 
                  name="subject" 
                  class="w-full px-4 py-3 border border-slate-300 rounded-xl text-slate-900 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent"
                >
                  <option value="">Select a topic</option>
                  <option value="warehouse-search">Warehouse Search</option>
                  <option value="property-inquiry">Property Inquiry</option>
                  <option value="market-analysis">Market Analysis</option>
                  <option value="general-consultation">General Consultation</option>
                  <option value="other">Other</option>
                </select>
              </div>
              
              <div>
                <label for="message" class="block text-body-sm font-medium text-slate-700 mb-2">
                  Message *
                </label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="6" 
                  required
                  class="w-full px-4 py-3 border border-slate-300 rounded-xl text-slate-900 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent resize-none"
                  placeholder="Tell us about your space requirements, timeline, and any specific needs..."
                ></textarea>
              </div>
              
              <button 
                type="submit" 
                class="w-full btn-primary py-4 text-body-lg"
                id="submitButton"
              >
                <span id="buttonText">Send Message</span>
                <svg id="loadingIcon" class="hidden w-5 h-5 ml-2 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
              </button>
            </form>
            
            <!-- Success Message -->
            <div id="successMessage" class="hidden mt-6 p-4 bg-green-50 border border-green-200 rounded-xl">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span class="text-green-800 font-medium">Message sent successfully!</span>
              </div>
              <p class="text-green-700 mt-2 text-body-sm">
                We'll get back to you within 2 hours during business hours.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 gradient-primary">
    <div class="container mx-auto px-4 max-w-7xl">
      <div class="text-center text-white scroll-fade-in">
        <h2 class="text-heading-xl font-bold mb-6">
          Ready to Get Started?
        </h2>
        <p class="text-body-lg text-slate-200 mb-8 max-w-2xl mx-auto">
          Don't wait - the perfect warehouse space won't last long in today's market.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:+19549379667" class="btn-primary bg-white text-slate-900 hover:bg-slate-100">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Call (954) 937-9667
          </a>
          <a href="/warehouses" class="btn-secondary text-white" style="border-color: rgba(255, 255, 255, 0.3); background-color: rgba(255, 255, 255, 0.1);">
            Browse Properties
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contactForm') as HTMLFormElement;
    const submitButton = document.getElementById('submitButton') as HTMLButtonElement;
    const buttonText = document.getElementById('buttonText');
    const loadingIcon = document.getElementById('loadingIcon');
    const successMessage = document.getElementById('successMessage');

    if (form) {
      form.addEventListener('submit', function() {
        // Show loading state
        if (submitButton) {
          submitButton.disabled = true;
          buttonText?.classList.add('hidden');
          loadingIcon?.classList.remove('hidden');
        }

        // Hide any previous success message
        successMessage?.classList.add('hidden');
      });

      // Handle successful submission (Netlify will redirect, but just in case)
      form.addEventListener('submit', function(event) {
        // For demo purposes, show success message after a delay
        setTimeout(() => {
          if (submitButton) {
            submitButton.disabled = false;
            buttonText?.classList.remove('hidden');
            loadingIcon?.classList.add('hidden');
          }
          successMessage?.classList.remove('hidden');
          form.reset();
        }, 2000);
      });
    }

    // Scroll animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('in-view');
        }
      });
    }, observerOptions);

    document.querySelectorAll('.scroll-fade-in, .scroll-slide-right, .scroll-slide-left').forEach(el => {
      observer.observe(el);
    });
  });
</script>