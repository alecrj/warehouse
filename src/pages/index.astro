---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

// Get all warehouses for stats and featured listings
const warehouses = await getCollection('warehouses');
const availableWarehouses = warehouses.filter((w: CollectionEntry<'warehouses'>) => w.data.availability === 'available');
const featuredWarehouses = availableWarehouses
  .filter((w: CollectionEntry<'warehouses'>) => w.data.featured)
  .slice(0, 3);

// Calculate dynamic stats
const totalProperties = availableWarehouses.length;
const totalSquareFootage = availableWarehouses.reduce((sum, w) => sum + w.data.size, 0);
const uniqueLocations = new Set(availableWarehouses.map(w => w.data.location.split(',')[0].trim())).size;
---

<BaseLayout>
  <!-- Premium Hero Section with Advanced Design -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-slate-900 via-blue-900 to-slate-800">
    <!-- Advanced Background Effects -->
    <div class="absolute inset-0">
      <!-- Gradient Overlay -->
      <div class="absolute inset-0 bg-gradient-to-br from-blue-600/20 to-purple-600/20"></div>
      
      <!-- Animated Mesh Gradient -->
      <div class="absolute inset-0 opacity-30">
        <div class="absolute top-0 -left-4 w-72 h-72 bg-purple-500 rounded-full mix-blend-multiply filter blur-xl animate-float"></div>
        <div class="absolute top-0 -right-4 w-72 h-72 bg-yellow-500 rounded-full mix-blend-multiply filter blur-xl animate-float-delay"></div>
        <div class="absolute -bottom-8 left-20 w-72 h-72 bg-pink-500 rounded-full mix-blend-multiply filter blur-xl animate-float-slow"></div>
      </div>
      
      <!-- Grid Pattern -->
      <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 40px 40px;"></div>
      </div>
    </div>
    
    <!-- Hero Content -->
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="backdrop-blur-xl bg-white/10 rounded-3xl p-8 md:p-16 border border-white/20 shadow-2xl">
