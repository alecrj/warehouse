                    </svg>
                    <span class="font-medium">{warehouse.data.location}</span>
                  </div>
                  <div class="flex items-center text-slate-600">
                    <svg class="w-5 h-5 mr-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V6a2 2 0 012-2h2M4 8v8a2 2 0 002 2h2m0-16v16m8-16v16m0-16h2a2 2 0 012 2v2m-4 8h4"/>
                    </svg>
                    <span class="font-medium">{warehouse.data.size.toLocaleString()} sq ft</span>
                  </div>
                </div>

                <!-- Features -->
                <div class="flex flex-wrap gap-2 mb-6">
                  {warehouse.data.features.slice(0, 3).map((feature) => (
                    <span class="px-3 py-1 bg-blue-50 text-blue-700 rounded-lg text-sm font-medium">
                      {feature}
                    </span>
                  ))}
                </div>

                <!-- CTA -->
                <a 
                  href={`/warehouses/${warehouse.data.slug}`}
                  class="block w-full bg-gradient-to-r from-blue-600 to-cyan-600 text-white text-center py-3 rounded-xl font-semibold hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300 btn-premium"
                >
                  View Details
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- View All CTA -->
      <div class="text-center gsap-fade-in">
        <a href="/warehouses" class="group inline-flex items-center gap-3 bg-white text-slate-900 px-8 py-4 rounded-2xl font-bold text-lg shadow-premium hover:shadow-premium-lg hover:-translate-y-1 transition-all duration-300">
          View All Properties
          <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="relative py-32 bg-white overflow-hidden">
    <!-- Section Number -->
    <div class="absolute top-12 right-12 text-slate-300 font-mono text-lg tracking-wider gsap-fade-in-right">
      02 // 04
    </div>

    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- Content -->
        <div class="gsap-fade-in-left">
          <h2 class="text-5xl lg:text-6xl font-black text-slate-900 leading-tight tracking-tight mb-8">
            WHY CHOOSE
            <span class="block text-gradient">OUR EXPERTISE</span>
          </h2>
          <p class="text-xl text-slate-600 leading-relaxed mb-8">
            With decades of experience in South Florida's industrial market, we provide unmatched tenant representation that puts your interests first.
          </p>
          
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
