---
// Updated homepage with proper hero sizing and standardized forms
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import StandardizedContactForm from '../components/StandardizedContactForm.astro';
import { getCollection } from 'astro:content';

// Define proper types
interface WarehouseData {
  title: string;
  location: string;
  price: string;
  size: number;
  description: string;
  images?: string[];
  features?: string[];
  featured?: boolean;
  availability?: string;
  slug: string;
}

interface Warehouse {
  data: WarehouseData;
}

// Get warehouse data for featured properties
let featuredWarehouses: Warehouse[] = [];
try {
  const allWarehouses = await getCollection('warehouses');
  featuredWarehouses = allWarehouses.filter((w: any) => w.data.featured).slice(0, 3);
} catch (error) {
  console.log('No warehouse data yet');
}
---

<BaseLayout 
  title="Find Your Perfect Warehouse in South Florida | Warehouse Locating"
  description="Free tenant representation for warehouse leases—landlords pay our fee. From 500 SF to 500,000 SF across Miami-Dade, Broward, and Palm Beach."
>
  <Navigation />
  
  <main>
    <!-- Hero Section - Properly Sized for Desktop -->
    <section class="relative pt-20 pb-16 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 overflow-hidden">
      <!-- Background Elements -->
      <div class="absolute inset-0">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary-500/10 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-blue-500/10 rounded-full blur-3xl animate-float-reverse"></div>
        <div class="absolute inset-0 bg-pattern-grid opacity-20"></div>
      </div>
      
      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-center py-12">
          
          <!-- Left Column - Hero Content -->
          <div class="animate-on-scroll text-center lg:text-left">
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black text-white leading-tight tracking-tight mb-6">
              FIND YOUR PERFECT
              <span class="block bg-gradient-to-r from-primary-400 to-blue-400 bg-clip-text text-transparent">
                WAREHOUSE
              </span>
              <span class="block text-white">IN SOUTH FLORIDA</span>
            </h1>
            
            <p class="text-lg lg:text-xl text-gray-300 leading-relaxed mb-4 max-w-xl mx-auto lg:mx-0">
              Free tenant representation for warehouse leases—landlords pay our fee.
            </p>

            <p class="text-base text-gray-400 leading-relaxed mb-8 max-w-lg mx-auto lg:mx-0">
              From 500 SF to 500,000 SF across Miami-Dade, Broward, and Palm Beach.
            </p>

            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
              <a 
                href="/contact" 
                class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-6 py-3 rounded-2xl text-base font-semibold hover:from-primary-700 hover:to-primary-800 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 transform text-center"
              >
                Get Free Tenant Representation
              </a>
              <a 
                href="tel:954-937-9667" 
                class="bg-white/10 backdrop-blur-sm text-white border-2 border-white/20 px-6 py-3 rounded-2xl text-base font-semibold hover:bg-white/20 hover:border-white/30 transition-all duration-300 text-center"
              >
                Call (954) 937-9667
              </a>
            </div>
          </div>

          <!-- Right Column - Quick Search Form -->
          <div class="animate-on-scroll">
            <div class="bg-white/10 backdrop-blur-lg border border-white/20 rounded-3xl p-6 lg:p-8 shadow-2xl max-w-lg mx-auto">
              <div class="text-center mb-6">
                <h2 class="text-xl lg:text-2xl font-bold text-white mb-2">Quick Search</h2>
                <p class="text-gray-300">Find space that fits—fast</p>
              </div>

              <form 
                action="/warehouses"
                method="GET"
                class="space-y-4"
              >
                <!-- Size Dropdown -->
                <div>
                  <label for="size-range" class="block text-white text-sm font-semibold mb-2">
                    Warehouse Size (SF)
                  </label>
                  <select 
                    id="size-range" 
                    name="size-range" 
                    class="w-full px-4 py-3 rounded-xl border border-white/20 bg-white/10 backdrop-blur-sm text-white focus:border-primary-400 focus:ring-2 focus:ring-primary-400/50 transition-all duration-300"
                  >
                    <option value="" class="text-gray-900">Any Size</option>
                    <option value="500-2500" class="text-gray-900">500 - 2,500 SF</option>
                    <option value="2500-5000" class="text-gray-900">2,500 - 5,000 SF</option>
                    <option value="5000-10000" class="text-gray-900">5,000 - 10,000 SF</option>
                    <option value="10000-25000" class="text-gray-900">10,000 - 25,000 SF</option>
                    <option value="25000-50000" class="text-gray-900">25,000 - 50,000 SF</option>
                    <option value="50000-100000" class="text-gray-900">50,000 - 100,000 SF</option>
                    <option value="100000+" class="text-gray-900">100,000+ SF</option>
                  </select>
                </div>

                <!-- Location -->
                <div>
                  <label for="location" class="block text-white text-sm font-semibold mb-2">
                    Preferred Location
                  </label>
                  <select 
                    id="location" 
                    name="county" 
                    class="w-full px-4 py-3 rounded-xl border border-white/20 bg-white/10 backdrop-blur-sm text-white focus:border-primary-400 focus:ring-2 focus:ring-primary-400/50 transition-all duration-300"
                  >
                    <option value="" class="text-gray-900">All South Florida</option>
                    <option value="miami-dade" class="text-gray-900">Miami-Dade County</option>
                    <option value="broward" class="text-gray-900">Broward County</option>
                    <option value="palm-beach" class="text-gray-900">Palm Beach County</option>
                  </select>
                </div>

                <!-- Search Button -->
                <button 
                  type="submit" 
                  class="w-full bg-gradient-to-r from-primary-600 to-primary-700 text-white px-6 py-3 rounded-xl text-base font-semibold hover:from-primary-700 hover:to-primary-800 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 transform focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
                >
                  Search Warehouses
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Warehouse Hero Image Section -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="relative rounded-3xl overflow-hidden shadow-2xl animate-on-scroll">
          <img
            src="/images/uploads/warehouse-hero.png"
            alt="Florida warehouse"
            class="w-full h-64 md:h-96 object-cover"
            loading="eager"
            fetchpriority="high"
          />
          <!-- Improved text overlay with better contrast -->
          <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/40 to-transparent">
            <div class="absolute bottom-8 left-8">
              <h3 class="text-2xl md:text-3xl font-black text-white mb-2 drop-shadow-lg">
                Modern Industrial Facilities
              </h3>
              <p class="text-lg font-semibold text-gray-100 drop-shadow-md">
                Across Miami-Dade, Broward, and Palm Beach Counties
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works Section -->
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16 animate-on-scroll">
          <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
            How It Works
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            End-to-end tenant representation from search to signing
          </p>
        </div>

        <!-- Services Grid -->
        <div class="grid md:grid-cols-3 gap-8 stagger-children">
          <!-- Step 1 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <span class="text-2xl font-bold text-white">1</span>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Tell us your specs</h3>
            <p class="text-gray-600 leading-relaxed">
              Size, location, timing, budget. We get clear criteria to find exactly what you need.
            </p>
          </div>

          <!-- Step 2 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <span class="text-2xl font-bold text-white">2</span>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">We find your options</h3>
            <p class="text-gray-600 leading-relaxed">
              Our network uncovers on-market and off-market spaces. No junk—just qualified properties.
            </p>
          </div>

          <!-- Step 3 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <span class="text-2xl font-bold text-white">3</span>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">You save money</h3>
            <p class="text-gray-600 leading-relaxed">
              Expert negotiation gets you better rent, tenant improvements, and lease protections.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Properties -->
    {featuredWarehouses.length > 0 && (
      <section class="py-24 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <!-- Section Header -->
          <div class="text-center mb-16 animate-on-scroll">
            <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
              Featured Properties
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
              Quality warehouse spaces across South Florida
            </p>
          </div>

          <!-- Properties Grid -->
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 stagger-children">
            {featuredWarehouses.map((warehouse) => (
              <div class="bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
                {warehouse.data.images && warehouse.data.images[0] && (
                  <div class="aspect-video overflow-hidden">
                    <img 
                      src={warehouse.data.images[0]} 
                      alt={warehouse.data.title}
                      class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                    />
                  </div>
                )}
                <div class="p-6">
                  <div class="flex items-center justify-between mb-4">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                      Available
                    </span>
                    <span class="text-lg font-bold text-primary-600">{warehouse.data.price}</span>
                  </div>
                  <h3 class="text-xl font-bold text-gray-900 mb-2">{warehouse.data.title}</h3>
                  <p class="text-gray-600 mb-4">{warehouse.data.location}</p>
                  <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-500">{warehouse.data.size.toLocaleString()} SF</span>
                    <a 
                      href={`/warehouses/${warehouse.data.slug}`}
                      class="bg-primary-600 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-primary-700 transition-colors duration-200"
                    >
                      View Details
                    </a>
                  </div>
                </div>
              </div>
            ))}
          </div>

          <div class="text-center mt-12 animate-on-scroll">
            <a 
              href="/warehouses" 
              class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-8 py-4 rounded-2xl text-lg font-semibold hover:from-primary-700 hover:to-primary-800 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 transform inline-block"
            >
              View All Properties
            </a>
          </div>
        </div>
      </section>
    )}

    <!-- Main Contact Form Section -->
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16 animate-on-scroll">
          <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
            Ready to Find Your Space?
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            Tell us what you need. We'll send qualified options and set up tours.
          </p>
        </div>

        <div class="max-w-4xl mx-auto">
          <StandardizedContactForm 
            source="homepage"
            title=""
            description=""
            className="animate-on-scroll"
          />
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>