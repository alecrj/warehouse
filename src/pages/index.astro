---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get featured warehouses
let featuredWarehouses: any[] = [];
try {
  const warehouses = await getCollection('warehouses');
  featuredWarehouses = warehouses
    .filter((w: any) => w.data.featured && w.data.availability === 'available')
    .slice(0, 3);
} catch (error) {
  console.log('No warehouses found');
}
---

<BaseLayout 
  title="Ariel Realty Group | Premium Industrial Real Estate Solutions"
  description="Discover premium warehouse and industrial spaces across South Florida. Expert tenant representation and cutting-edge technology for your business growth."
>
  <!-- Premium Hero Section -->
  <section class="hero-section relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Subtle animated background -->
    <div class="absolute inset-0 bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950">
      <div class="hero-grid absolute inset-0 opacity-[0.03]"></div>
      <div class="hero-particles absolute inset-0"></div>
    </div>
    
    <!-- Subtle floating elements (no more green blobs!) -->
    <div class="floating-elements absolute inset-0 pointer-events-none overflow-hidden">
      <div class="floating-orb-1 absolute top-20 left-10 w-96 h-96 bg-gradient-to-r from-blue-500/8 to-indigo-500/8 rounded-full blur-3xl"></div>
      <div class="floating-orb-2 absolute bottom-20 right-10 w-72 h-72 bg-gradient-to-r from-violet-500/8 to-purple-500/8 rounded-full blur-3xl"></div>
      <div class="floating-orb-3 absolute top-1/2 left-1/2 w-64 h-64 bg-gradient-to-r from-slate-500/5 to-slate-600/5 rounded-full blur-2xl"></div>
    </div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center">
        <!-- Hero Badge -->
        <div class="hero-badge inline-flex items-center px-6 py-3 rounded-full bg-white/5 backdrop-blur-xl border border-white/10 text-white/60 text-sm font-medium mb-12">
          <span class="w-2 h-2 bg-emerald-400 rounded-full mr-3 animate-pulse"></span>
          Premium Industrial Real Estate Solutions
        </div>
        
        <!-- Hero Title with Premium Typography -->
        <div class="hero-title-container mb-12">
          <h1 class="hero-title text-7xl md:text-8xl xl:text-9xl font-black text-white leading-[0.85] tracking-tight">
            <span class="hero-line block">Premium</span>
            <span class="hero-line block relative">
              <span class="bg-gradient-to-r from-blue-400 via-indigo-400 to-violet-400 bg-clip-text text-transparent">Industrial</span>
            </span>
            <span class="hero-line block">Real Estate</span>
          </h1>
        </div>
        
        <!-- Hero Subtitle -->
        <p class="hero-subtitle text-2xl md:text-3xl text-white/50 mb-16 max-w-4xl mx-auto leading-relaxed font-light">
          Elevating industrial real estate through expert tenant representation and cutting-edge technology solutions across South Florida.
        </p>
        
        <!-- Hero CTAs -->
        <div class="hero-ctas flex flex-col sm:flex-row gap-6 justify-center items-center mb-20">
          <a 
            href="/warehouses" 
            class="cta-primary group relative px-12 py-5 bg-white text-slate-900 rounded-2xl font-bold text-lg transition-all duration-500 hover:scale-105 hover:shadow-2xl overflow-hidden"
          >
            <span class="relative z-10">Explore Properties</span>
            <div class="absolute inset-0 bg-gradient-to-r from-blue-500 to-indigo-500 opacity-0 group-hover:opacity-10 transition-opacity duration-500"></div>
          </a>
          
          <a 
            href="#contact" 
            class="cta-secondary group px-12 py-5 border-2 border-white/20 text-white rounded-2xl font-bold text-lg hover:border-white/40 hover:bg-white/5 transition-all duration-500"
          >
            <span class="flex items-center">
              Get Started
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </span>
          </a>
        </div>
        
        <!-- Scroll Indicator -->
        <div class="scroll-indicator flex flex-col items-center">
          <div class="text-white/30 text-sm font-medium mb-4">Scroll to explore</div>
          <div class="scroll-line w-px h-16 bg-gradient-to-b from-white/20 to-transparent relative">
            <div class="scroll-dot w-2 h-2 bg-white rounded-full absolute top-0 left-1/2 -translate-x-1/2 animate-bounce"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Premium Features Section -->
  <section class="features-section relative py-32 bg-white overflow-hidden">
    <!-- Section Background -->
    <div class="absolute inset-0">
      <div class="features-grid absolute inset-0 opacity-[0.02]"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-6 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-24">
        <div class="section-badge inline-flex items-center px-6 py-3 rounded-full bg-slate-100 text-slate-600 text-sm font-semibold mb-8">
          Why Choose Ariel Realty Group
        </div>
        
        <h2 class="section-title text-5xl md:text-6xl font-black text-slate-900 mb-8 leading-tight">
          Exceptional Service,
          <br>
          <span class="bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">Proven Results</span>
        </h2>
        
        <p class="section-subtitle text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
          We combine deep market expertise with innovative technology to deliver unparalleled industrial real estate solutions.
        </p>
      </div>
      
      <!-- Features Grid -->
      <div class="features-grid-container grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Feature 1 -->
        <div class="feature-card group">
          <div class="feature-content bg-white rounded-3xl p-12 shadow-lg hover:shadow-2xl transition-all duration-700 border border-slate-100 hover:border-blue-200 hover:-translate-y-2">
            <div class="feature-icon w-20 h-20 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-2xl flex items-center justify-center mb-8 group-hover:scale-110 transition-transform duration-500">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            
            <h3 class="feature-title text-2xl font-bold text-slate-900 mb-4">Market Expertise</h3>
            <p class="feature-description text-slate-600 leading-relaxed mb-6">
              Deep knowledge of South Florida's industrial markets with over 15 years of specialized experience in tenant representation.
            </p>
            
            <div class="feature-stats grid grid-cols-2 gap-4 pt-6 border-t border-slate-100">
              <div class="stat text-center">
                <div class="stat-number text-2xl font-bold text-blue-600">15+</div>
                <div class="stat-label text-sm text-slate-500">Years Experience</div>
              </div>
              <div class="stat text-center">
                <div class="stat-number text-2xl font-bold text-blue-600">500+</div>
                <div class="stat-label text-sm text-slate-500">Deals Closed</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Feature 2 -->
        <div class="feature-card group">
          <div class="feature-content bg-white rounded-3xl p-12 shadow-lg hover:shadow-2xl transition-all duration-700 border border-slate-100 hover:border-blue-200 hover:-translate-y-2">
            <div class="feature-icon w-20 h-20 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-2xl flex items-center justify-center mb-8 group-hover:scale-110 transition-transform duration-500">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            
            <h3 class="feature-title text-2xl font-bold text-slate-900 mb-4">Technology Integration</h3>
            <p class="feature-description text-slate-600 leading-relaxed mb-6">
              Cutting-edge platform providing real-time market data, virtual tours, and streamlined property search capabilities.
            </p>
            
            <div class="feature-stats grid grid-cols-2 gap-4 pt-6 border-t border-slate-100">
              <div class="stat text-center">
                <div class="stat-number text-2xl font-bold text-emerald-600">24/7</div>
                <div class="stat-label text-sm text-slate-500">Platform Access</div>
              </div>
              <div class="stat text-center">
                <div class="stat-number text-2xl font-bold text-emerald-600">100+</div>
                <div class="stat-label text-sm text-slate-500">Live Listings</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Feature 3 -->
        <div class="feature-card group">
          <div class="feature-content bg-white rounded-3xl p-12 shadow-lg hover:shadow-2xl transition-all duration-700 border border-slate-100 hover:border-blue-200 hover:-translate-y-2">
            <div class="feature-icon w-20 h-20 bg-gradient-to-br from-violet-500 to-purple-600 rounded-2xl flex items-center justify-center mb-8 group-hover:scale-110 transition-transform duration-500">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            
            <h3 class="feature-title text-2xl font-bold text-slate-900 mb-4">Client-First Approach</h3>
            <p class="feature-description text-slate-600 leading-relaxed mb-6">
              Dedicated tenant representation with no conflicts of interest. Your success is our primary focus and motivation.
            </p>
            
            <div class="feature-stats grid grid-cols-2 gap-4 pt-6 border-t border-slate-100">
              <div class="stat text-center">
                <div class="stat-number text-2xl font-bold text-violet-600">100%</div>
                <div class="stat-label text-sm text-slate-500">Tenant Focus</div>
              </div>
              <div class="stat text-center">
                <div class="stat-number text-2xl font-bold text-violet-600">95%</div>
                <div class="stat-label text-sm text-slate-500">Client Retention</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Premium Properties Section -->
  {featuredWarehouses.length > 0 && (
    <section class="properties-section relative py-32 bg-slate-50 overflow-hidden">
      <div class="relative max-w-7xl mx-auto px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-24">
          <div class="section-badge inline-flex items-center px-6 py-3 rounded-full bg-blue-100 text-blue-700 text-sm font-semibold mb-8">
            Featured Properties
          </div>
          
          <h2 class="section-title text-5xl md:text-6xl font-black text-slate-900 mb-8 leading-tight">
            Premium
            <br>
            <span class="bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">Industrial Spaces</span>
          </h2>
          
          <p class="section-subtitle text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
            Discover our curated selection of premium warehouse and industrial facilities across South Florida.
          </p>
        </div>

        <!-- Properties Grid -->
        <div class="properties-grid grid grid-cols-1 lg:grid-cols-3 gap-12 mb-16">
          {featuredWarehouses.map((warehouse: any, index: number) => (
            <div class="property-card group" data-property-index={index}>
              <div class="property-content bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-700 border border-slate-100 hover:border-blue-200 hover:-translate-y-2">
                <!-- Property Image -->
                <div class="property-image relative aspect-[16/10] overflow-hidden bg-slate-200">
                  {warehouse.data.images?.[0] ? (
                    <img 
                      src={warehouse.data.images[0]}
                      alt={warehouse.data.title}
                      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                      loading="lazy"
                    />
                  ) : (
                    <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-slate-100 to-slate-200">
                      <svg class="w-16 h-16 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                      </svg>
                    </div>
                  )}
                  
                  <!-- Status Badge -->
                  <div class="absolute top-6 left-6">
                    <span class="px-4 py-2 bg-emerald-500 text-white text-sm font-semibold rounded-full">
                      Available
                    </span>
                  </div>
                  
                  <!-- Featured Badge -->
                  <div class="absolute top-6 right-6">
                    <span class="px-4 py-2 bg-blue-600 text-white text-sm font-semibold rounded-full">
                      Featured
                    </span>
                  </div>
                </div>
                
                <!-- Property Details -->
                <div class="property-details p-8">
                  <!-- Location -->
                  <div class="flex items-center text-slate-500 mb-3">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    </svg>
                    <span class="text-sm">{warehouse.data.location}</span>
                  </div>
                  
                  <!-- Title -->
                  <h3 class="property-title text-2xl font-bold text-slate-900 mb-6 group-hover:text-blue-600 transition-colors duration-300">
                    {warehouse.data.title}
                  </h3>
                  
                  <!-- Stats -->
                  <div class="property-stats grid grid-cols-2 gap-6 mb-8">
                    <div class="stat-item text-center p-4 bg-blue-50 rounded-2xl border border-blue-100">
                      <div class="stat-value text-2xl font-bold text-blue-600 mb-1">{warehouse.data.price}</div>
                      <div class="stat-label text-sm text-blue-600/80 font-medium">per sq ft/year</div>
                    </div>
                    <div class="stat-item text-center p-4 bg-violet-50 rounded-2xl border border-violet-100">
                      <div class="stat-value text-2xl font-bold text-violet-600 mb-1">{warehouse.data.size.toLocaleString()}</div>
                      <div class="stat-label text-sm text-violet-600/80 font-medium">sq ft</div>
                    </div>
                  </div>
                  
                  <!-- CTA -->
                  <a 
                    href={`/warehouses/${warehouse.data.slug}`}
                    class="property-cta block text-center bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white px-8 py-4 rounded-2xl font-bold transition-all duration-300 transform group-hover:scale-105"
                  >
                    View Details
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- View All CTA -->
        <div class="text-center">
          <a 
            href="/warehouses" 
            class="inline-flex items-center bg-gradient-to-r from-slate-900 to-slate-800 hover:from-slate-800 hover:to-slate-700 text-white px-12 py-6 rounded-2xl font-bold text-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl group"
          >
            <span>View All Properties</span>
            <svg class="w-6 h-6 ml-3 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Premium Contact Section -->
  <section id="contact" class="contact-section relative py-32 bg-slate-900 overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0">
      <div class="contact-grid absolute inset-0 opacity-[0.03]"></div>
      <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center">
        <!-- Section Header -->
        <div class="section-badge inline-flex items-center px-6 py-3 rounded-full bg-white/5 backdrop-blur-xl border border-white/10 text-white/60 text-sm font-semibold mb-12">
          Ready to Get Started?
        </div>
        
        <h2 class="section-title text-5xl md:text-6xl font-black text-white mb-8 leading-tight">
          Let's Find Your
          <br>
          <span class="bg-gradient-to-r from-blue-400 to-indigo-400 bg-clip-text text-transparent">Perfect Space</span>
        </h2>
        
        <p class="section-subtitle text-2xl text-white/50 mb-16 max-w-4xl mx-auto leading-relaxed">
          Connect with our experts for personalized industrial real estate solutions tailored to your business needs.
        </p>
        
        <!-- Contact Options -->
        <div class="contact-options grid grid-cols-1 md:grid-cols-3 gap-12 mb-16">
          <!-- Phone -->
          <div class="contact-option group text-center">
            <div class="contact-icon w-20 h-20 bg-white/5 backdrop-blur-xl rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:bg-white/10 transition-all duration-300">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <div class="contact-details">
              <div class="contact-title text-xl font-bold text-white mb-2">(754) 245-7816</div>
              <div class="contact-subtitle text-white/50">Call for immediate assistance</div>
            </div>
          </div>
          
          <!-- Email -->
          <div class="contact-option group text-center">
            <div class="contact-icon w-20 h-20 bg-white/5 backdrop-blur-xl rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:bg-white/10 transition-all duration-300">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div class="contact-details">
              <div class="contact-title text-xl font-bold text-white mb-2">ariel@arielrealtygroup.com</div>
              <div class="contact-subtitle text-white/50">Email your requirements</div>
            </div>
          </div>
          
          <!-- Response Time -->
          <div class="contact-option group text-center">
            <div class="contact-icon w-20 h-20 bg-white/5 backdrop-blur-xl rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:bg-white/10 transition-all duration-300">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="contact-details">
              <div class="contact-title text-xl font-bold text-white mb-2">< 2 Hour Response</div>
              <div class="contact-subtitle text-white/50">Fast professional service</div>
            </div>
          </div>
        </div>
        
        <!-- Primary CTA -->
        <div class="contact-cta">
          <a 
            href="mailto:ariel@arielrealtygroup.com" 
            class="inline-flex items-center bg-gradient-to-r from-blue-500 to-indigo-600 hover:from-blue-600 hover:to-indigo-700 text-white px-12 py-6 rounded-2xl font-bold text-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl group"
          >
            <span>Start Your Search Today</span>
            <svg class="w-6 h-6 ml-3 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Premium Styles -->
  <style>
    /* Premium Background Patterns */
    .hero-grid {
      background-image: 
        linear-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px),
        linear-gradient(90deg, rgba(255, 255, 255, 0.03) 1px, transparent 1px);
      background-size: 100px 100px;
      animation: gridFlow 30s linear infinite;
    }
    
    .features-grid {
      background-image: 
        linear-gradient(rgba(0, 0, 0, 0.02) 1px, transparent 1px),
        linear-gradient(90deg, rgba(0, 0, 0, 0.02) 1px, transparent 1px);
      background-size: 60px 60px;
    }
    
    .contact-grid {
      background-image: 
        linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
        linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
      background-size: 80px 80px;
    }
    
    @keyframes gridFlow {
      0% { transform: translate(0, 0); }
      100% { transform: translate(100px, 100px); }
    }
    
    /* Subtle Floating Animations */
    .floating-orb-1 {
      animation: floatSlow1 20s ease-in-out infinite;
    }
    
    .floating-orb-2 {
      animation: floatSlow2 25s ease-in-out infinite reverse;
    }
    
    .floating-orb-3 {
      animation: floatSlow3 30s ease-in-out infinite;
    }
    
    @keyframes floatSlow1 {
      0%, 100% { transform: translate(0, 0) scale(1); }
      33% { transform: translate(30px, -20px) scale(1.1); }
      66% { transform: translate(-20px, 15px) scale(0.9); }
    }
    
    @keyframes floatSlow2 {
      0%, 100% { transform: translate(0, 0) scale(1); }
      50% { transform: translate(-25px, -30px) scale(1.05); }
    }
    
    @keyframes floatSlow3 {
      0%, 100% { transform: translate(-50%, -50%) scale(1); }
      33% { transform: translate(-50%, -55%) scale(1.1); }
      66% { transform: translate(-45%, -50%) scale(0.95); }
    }
    
    /* Premium Typography */
    .hero-title {
      font-variation-settings: "wght" 900;
