                <div class="hidden">
                  <input name="bot-field" />
                </div>

                <!-- Size -->
                <div>
                  <label for="hero-size" class="block text-white text-sm font-semibold mb-2">
                    Size (SF) *
                  </label>
                  <input 
                    type="text" 
                    id="hero-size"
                    name="size" 
                    required 
                    class="w-full px-4 py-3 rounded-xl bg-white/90 border border-white/30 focus:bg-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300 text-gray-900"
                    placeholder="500–500,000+ SF"
                  />
