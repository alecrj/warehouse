<script>
  // Enhanced page-specific animations
  function initPageAnimations(): void {
    // Ensure GSAP is available
    if (typeof gsap === 'undefined') {
      setTimeout(initPageAnimations, 100);
      return;
    }

    // Property card hover animations
    const propertyCards = document.querySelectorAll('.gsap-stagger');
    propertyCards.forEach((card: Element) => {
      const cardElement = card as HTMLElement;
      
      cardElement.addEventListener('mouseenter', () => {
        gsap.to(cardElement, { 
          scale: 1.02, 
          duration: 0.3, 
          ease: "power2.out" 
        });
      });
      
      cardElement.addEventListener('mouseleave', () => {
        gsap.to(cardElement, { 
          scale: 1, 
          duration: 0.3, 
          ease: "power2.out" 
        });
      });
    });

    // Enhanced scroll indicators
    gsap.to('.animate-bounce', {
      y: 10,
      duration: 1,
      ease: "power2.inOut",
      yoyo: true,
      repeat: -1
    });

    console.log('‚úÖ Page-specific animations initialized');
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initPageAnimations);
  } else {
    initPageAnimations();
  }
</script>