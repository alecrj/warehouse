    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative py-32 bg-gradient-to-br from-slate-900 to-slate-800 overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>
    
    <!-- Section Number -->
