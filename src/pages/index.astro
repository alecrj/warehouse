    if (typeof window !== 'undefined' && window.tailwind && typeof window.tailwind.config === 'function') {
      window.tailwind.config({
        theme: {
          extend: {
            fontFamily: {
              'sans': ['Inter', 'system-ui', 'sans-serif'],
            }
          }
        }
      });
