---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get featured warehouses (real listings only)
const warehouses = await getCollection('warehouses');
const featuredWarehouses = warehouses
  .filter(w => w.data.featured && w.data.availability === 'available')
  .slice(0, 6);

// Add some stats for credibility
const stats = [
  { value: '2.5M+', label: 'SF Leased This Year', icon: 'warehouse' },
  { value: '150+', label: 'Happy Clients', icon: 'users' },
  { value: '3', label: 'Counties Served', icon: 'location' },
  { value: '24hr', label: 'Response Time', icon: 'clock' }
];
---

<BaseLayout>
  <!-- Hero Section - Premium Design -->
  <section class="relative min-h-screen flex items-center bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900 overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-r from-blue-600/20 to-purple-600/20"></div>
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 40px 40px;"></div>
      </div>
      
      <!-- Floating Elements -->
      <div class="absolute top-20 left-10 w-32 h-32 bg-blue-500/20 rounded-full blur-xl animate-float"></div>
      <div class="absolute bottom-20 right-10 w-40 h-40 bg-purple-500/20 rounded-full blur-xl animate-float-delay"></div>
      <div class="absolute top-1/2 left-1/4 w-24 h-24 bg-indigo-500/20 rounded-full blur-xl animate-float-slow"></div>
    </div>
    
    <div class="container container-marketing relative z-10">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- Hero Content -->
        <div class="text-white">
          <div class="inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-sm font-medium mb-8 border border-white/20">
            <span class="w-2 h-2 bg-green-400 rounded-full mr-3 animate-pulse"></span>
            South Florida's Premier Industrial Specialists
          </div>
          
          <h1 class="text-5xl lg:text-7xl font-bold leading-tight mb-8">
            Find Your Perfect
            <span class="bg-gradient-to-r from-emerald-400 to-blue-400 bg-clip-text text-transparent">
              Warehouse Space
            </span>
          </h1>
          
          <p class="text-xl lg:text-2xl text-blue-100 mb-12 leading-relaxed max-w-2xl">
            Expert tenant representation across Miami-Dade, Broward, and Palm Beach counties. 
            <span class="text-white font-semibold">Completely free for tenants.</span>
          </p>
          
          <div class="flex flex-col sm:flex-row gap-6">
            <a href="tel:+19549379667" class="group relative overflow-hidden bg-gradient-to-r from-emerald-600 to-emerald-700 hover:from-emerald-700 hover:to-emerald-800 text-white px-8 py-4 rounded-2xl text-lg font-bold transition-all duration-300 transform hover:scale-105 hover:shadow-2xl">
              <span class="relative z-10 flex items-center justify-center">
                <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                </svg>
                Call (954) 937-9667
              </span>
              <div class="absolute inset-0 bg-gradient-to-r from-emerald-500 to-emerald-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </a>
            
            <a href="/warehouses" class="group backdrop-blur-xl bg-white/10 hover:bg-white/20 text-white border-2 border-white/20 hover:border-white/40 px-8 py-4 rounded-2xl text-lg font-bold transition-all duration-300 transform hover:scale-105">
              <span class="flex items-center justify-center">
                View Properties
                <svg class="w-6 h-6 ml-3 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </span>
            </a>
          </div>
        </div>

        <!-- Lead Capture Card - Premium Design -->
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-r from-white/20 to-white/10 rounded-3xl blur-xl"></div>
          <div class="relative backdrop-blur-xl bg-white/95 border border-white/20 rounded-3xl p-8 shadow-2xl">
            <div class="text-center mb-8">
              <h3 class="text-2xl font-bold text-gray-900 mb-3">Get Matched with Properties</h3>
              <p class="text-gray-600">Tell us your needs and we'll find your perfect space</p>
            </div>
            
            <form name="lead-capture" method="POST" data-netlify="true" action="/contact" class="space-y-6">
              <input type="hidden" name="form-name" value="lead-capture" />
              <input type="hidden" name="source" value="homepage-hero" />
              <input type="hidden" name="bot-field" style="display: none;" />
              
              <div class="grid grid-cols-2 gap-4">
                <div class="form-group">
                  <label class="form-label text-gray-700" for="name">Name</label>
                  <input type="text" id="name" name="name" class="form-input border-gray-200 focus:border-blue-500 focus:ring-blue-500/20" required />
                </div>
                
                <div class="form-group">
                  <label class="form-label text-gray-700" for="phone">Phone</label>
                  <input type="tel" id="phone" name="phone" class="form-input border-gray-200 focus:border-blue-500 focus:ring-blue-500/20" required />
                </div>
              </div>
              
              <div class="form-group">
                <label class="form-label text-gray-700" for="email">Email</label>
                <input type="email" id="email" name="email" class="form-input border-gray-200 focus:border-blue-500 focus:ring-blue-500/20" required />
              </div>
              
              <div class="grid grid-cols-2 gap-4">
                <div class="form-group">
                  <label class="form-label text-gray-700" for="size-range">Size Needed</label>
                  <select id="size-range" name="size-range" class="form-select border-gray-200 focus:border-blue-500 focus:ring-blue-500/20" required>
                    <option value="">Select size</option>
                    <option value="under-5000">Under 5,000 SF</option>
                    <option value="5000-25000">5,000 - 25,000 SF</option>
                    <option value="25000-100000">25,000 - 100,000 SF</option>
                    <option value="over-100000">Over 100,000 SF</option>
                  </select>
                </div>
                
                <div class="form-group">
                  <label class="form-label text-gray-700" for="timing">Timing</label>
                  <select id="timing" name="timing" class="form-select border-gray-200 focus:border-blue-500 focus:ring-blue-500/20" required>
                    <option value="">When needed?</option>
                    <option value="immediate">Immediately</option>
                    <option value="30-days">Within 30 days</option>
                    <option value="90-days">Within 90 days</option>
                    <option value="6-months">Within 6 months</option>
                  </select>
                </div>
              </div>
              
              <button type="submit" class="w-full bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white px-8 py-4 rounded-2xl text-lg font-bold transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
                <span class="flex items-center justify-center">
                  Get Matched
                  <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                  </svg>
                </span>
              </button>
              
              <div class="flex items-center justify-center space-x-6 text-sm text-gray-500">
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  Free consultation
                </div>
                <div class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  No obligation
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-20 bg-white">
    <div class="container container-marketing">
      <div class="grid md:grid-cols-4 gap-8">
        {stats.map((stat, index) => (
          <div class="text-center group" data-aos="fade-up" data-aos-delay={index * 100}>
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300 shadow-lg">
              {stat.icon === 'warehouse' && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              )}
              {stat.icon === 'users' && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              )}
              {stat.icon === 'location' && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                </svg>
              )}
              {stat.icon === 'clock' && (
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              )}
            </div>
            <div class="text-4xl font-bold text-gray-900 mb-2 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
              {stat.value}
            </div>
            <div class="text-gray-600 font-medium">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Properties -->
  <section class="py-20 bg-gradient-to-br from-gray-50 to-blue-50">
    <div class="container container-marketing">
      <div class="text-center mb-16">
        <div class="inline-flex items-center px-4 py-2 bg-blue-100 text-blue-700 rounded-full text-sm font-medium mb-6">
          <span class="w-2 h-2 bg-blue-500 rounded-full mr-3"></span>
          Featured Properties
        </div>
        <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
          Premium Warehouse Spaces
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Explore hand-selected properties across South Florida's most strategic industrial corridors.
        </p>
      </div>
      
      {featuredWarehouses.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
          {featuredWarehouses.map((warehouse, index) => (
            <div class="group bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 overflow-hidden border border-gray-100" data-aos="fade-up" data-aos-delay={index * 100}>
              <div class="relative overflow-hidden">
                {warehouse.data.images && warehouse.data.images[0] ? (
                  <img 
                    src={warehouse.data.images[0]} 
                    alt={warehouse.data.title}
                    class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-700"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-64 bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
                    <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                  </div>
                )}
                
                <div class="absolute top-6 left-6">
                  <div class="flex gap-2">
                    <span class="px-3 py-1 bg-green-500 text-white text-sm font-bold rounded-full">
                      Available
                    </span>
                    {warehouse.data.featured && (
                      <span class="px-3 py-1 bg-gradient-to-r from-yellow-400 to-orange-500 text-white text-sm font-bold rounded-full">
                        Featured
                      </span>
                    )}
                  </div>
                </div>
                
                <div class="absolute top-6 right-6">
                  <button class="w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center hover:bg-white transition-colors duration-300 group">
                    <svg class="w-5 h-5 text-gray-600 group-hover:text-red-500 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                    </svg>
                  </button>
                </div>
              </div>
              
              <div class="p-8">
                <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors duration-300">
                  {warehouse.data.title}
                </h3>
                
                <div class="flex items-center text-gray-600 mb-6">
                  <svg class="w-5 h-5 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  </svg>
                  <span class="font-medium">{warehouse.data.location}</span>
                </div>
                
                <div class="grid grid-cols-2 gap-4 mb-8">
                  <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-4 rounded-2xl text-center border border-blue-200/50">
                    <div class="text-2xl font-bold text-blue-600 mb-1">{warehouse.data.size.toLocaleString()}</div>
                    <div class="text-sm text-blue-600/80 font-medium">Square Feet</div>
                  </div>
                  <div class="bg-gradient-to-br from-green-50 to-green-100 p-4 rounded-2xl text-center border border-green-200/50">
                    <div class="text-lg font-bold text-green-600 mb-1">{warehouse.data.price}</div>
                    <div class="text-sm text-green-600/80 font-medium">per sf/year</div>
                  </div>
                </div>
                
                <div class="flex gap-3">
                  <a href={`/warehouses/${warehouse.data.slug}`} class="flex-1 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white px-6 py-3 rounded-2xl font-bold text-center transition-all duration-300 transform group-hover:scale-105">
                    View Details
                  </a>
                  <a href="tel:+19549379667" class="w-12 h-12 bg-gray-100 hover:bg-green-500 hover:text-white rounded-2xl flex items-center justify-center transition-all duration-300 transform group-hover:scale-105">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      ) : (
        <!-- Sample Properties Placeholder -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
          {[
            { 
              title: "Downtown Miami Logistics Hub", 
              location: "Miami, FL", 
              size: "45,000", 
              price: "$14/sf/yr",
              image: "https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?w=800&h=600&fit=crop"
            },
            { 
              title: "Pompano Industrial Complex", 
              location: "Pompano Beach, FL", 
              size: "28,000", 
              price: "$12/sf/yr",
              image: "https://images.unsplash.com/photo-1581094794329-c8112a89af12?w=800&h=600&fit=crop"
            },
            { 
              title: "West Palm Distribution Center", 
              location: "West Palm Beach, FL", 
              size: "85,000", 
              price: "$11/sf/yr",
              image: "https://images.unsplash.com/photo-1587293852726-70cdb56c2866?w=800&h=600&fit=crop"
            }
          ].map((property, index) => (
            <div class="group bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 overflow-hidden border border-gray-100" data-aos="fade-up" data-aos-delay={index * 100}>
              <div class="relative overflow-hidden">
                <img 
                  src={property.image} 
                  alt={property.title}
                  class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-700"
                  loading="lazy"
                />
                
                <div class="absolute top-6 left-6">
                  <span class="px-3 py-1 bg-green-500 text-white text-sm font-bold rounded-full">
                    Available
                  </span>
                </div>
              </div>
              
              <div class="p-8">
                <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors duration-300">
                  {property.title}
                </h3>
                
                <div class="flex items-center text-gray-600 mb-6">
                  <svg class="w-5 h-5 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  </svg>
                  <span class="font-medium">{property.location}</span>
                </div>
                
                <div class="grid grid-cols-2 gap-4 mb-8">
                  <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-4 rounded-2xl text-center border border-blue-200/50">
                    <div class="text-2xl font-bold text-blue-600 mb-1">{property.size}</div>
                    <div class="text-sm text-blue-600/80 font-medium">Square Feet</div>
                  </div>
                  <div class="bg-gradient-to-br from-green-50 to-green-100 p-4 rounded-2xl text-center border border-green-200/50">
                    <div class="text-lg font-bold text-green-600 mb-1">{property.price}</div>
                    <div class="text-sm text-green-600/80 font-medium">per sf/year</div>
                  </div>
                </div>
                
                <div class="flex gap-3">
                  <a href="/contact" class="flex-1 bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white px-6 py-3 rounded-2xl font-bold text-center transition-all duration-300 transform group-hover:scale-105">
                    Get Details
                  </a>
                  <a href="tel:+19549379667" class="w-12 h-12 bg-gray-100 hover:bg-green-500 hover:text-white rounded-2xl flex items-center justify-center transition-all duration-300 transform group-hover:scale-105">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      )}
      
      <div class="text-center">
        <a href="/warehouses" class="inline-flex items-center bg-gradient-to-r from-gray-900 to-gray-800 hover:from-gray-800 hover:to-gray-700 text-white px-8 py-4 rounded-2xl font-bold text-lg transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
          <span>View All Properties</span>
          <svg class="w-6 h-6 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- How We Work Section -->
  <section class="py-20 bg-white">
    <div class="container container-marketing">
      <div class="text-center mb-16">
        <div class="inline-flex items-center px-4 py-2 bg-purple-100 text-purple-700 rounded-full text-sm font-medium mb-6">
          <span class="w-2 h-2 bg-purple-500 rounded-full mr-3"></span>
          Our Process
        </div>
        <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
          How We Help You Win
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Our proven 4-step process ensures you find the perfect space with expert guidance every step of the way.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {[
          {
            step: "01",
            title: "Discovery Call",
            description: "We learn about your business needs, timeline, and requirements to create a targeted search strategy.",
            icon: "phone",
            gradient: "from-blue-500 to-blue-600"
          },
          {
            step: "02", 
            title: "Property Search",
            description: "We present a curated selection of properties that match your criteria, including off-market opportunities.",
            icon: "search",
            gradient: "from-purple-500 to-purple-600"
          },
          {
            step: "03",
            title: "Tours & Analysis", 
            description: "We coordinate property tours and provide detailed analysis to help you make informed decisions.",
            icon: "eye",
            gradient: "from-green-500 to-green-600"
          },
          {
