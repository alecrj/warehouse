  {
    id: 'warehouse-1',
    title: 'Modern Distribution Center',
    slug: 'modern-distribution-center',
    price: '$12/sq ft/year',
    size: 50000,
    location: 'Miami, FL',
    features: ['Dock High', '24/7 Access', 'Climate Controlled', 'Security System'],
    description: 'Premium warehouse space with modern amenities and excellent highway access.',
    availability: 'available',
    featured: true
  },
  {
