---
// Updated homepage with improved hero layout
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import StandardizedContactForm from '../components/StandardizedContactForm.astro';
import { getCollection } from 'astro:content';

// Define proper types
interface WarehouseData {
  title: string;
  location: string;
  price: string;
  size: number;
  description: string;
  images?: string[];
  features?: string[];
  featured?: boolean;
  availability?: string;
  slug: string;
}

interface Warehouse {
  data: WarehouseData;
}

// Get warehouse data for stats and featured properties
let allWarehouses: Warehouse[] = [];
let availableWarehouses: Warehouse[] = [];
let featuredWarehouses: Warehouse[] = [];
let totalSqFt = 0;
let averageSize = 0;

try {
  allWarehouses = await getCollection('warehouses');
  availableWarehouses = allWarehouses.filter((w: Warehouse) => w.data.availability === 'available');
  featuredWarehouses = allWarehouses.filter((w: Warehouse) => w.data.featured).slice(0, 3);
  totalSqFt = allWarehouses.reduce((sum: number, w: Warehouse) => sum + (w.data.size || 0), 0);
  averageSize = allWarehouses.length > 0 ? Math.round(totalSqFt / allWarehouses.length) : 0;
} catch (error) {
  console.log('No warehouse data yet:', error);
}
---

<BaseLayout 
  title="Find Your Perfect Warehouse in South Florida | Warehouse Locating"
  description="Free tenant representation for warehouse leases—landlords pay our fee. From 500 SF to 500,000 SF across Miami-Dade, Broward, and Palm Beach."
>
  <Navigation />
  
  <main>
    <!-- Hero Section - Above the Fold Optimized (Accounting for Fixed Header) -->
    <section class="relative bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 overflow-hidden flex items-center" style="height: calc(100vh - 64px); margin-top: 64px;">
      <!-- Background Elements -->
      <div class="absolute inset-0">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary-500/10 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-blue-500/10 rounded-full blur-3xl animate-float-reverse"></div>
        <div class="absolute inset-0 bg-pattern-grid opacity-20"></div>
      </div>
      
      <div class="relative z-10 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="grid lg:grid-cols-2 gap-10 items-center">
          
          <!-- Left Column: Hero Content -->
          <div class="animate-on-scroll">
            <h1 class="text-3xl sm:text-4xl lg:text-5xl font-black text-white leading-[0.9] tracking-tight mb-5">
              FIND YOUR PERFECT
              <span class="block bg-gradient-to-r from-primary-400 to-blue-400 bg-clip-text text-transparent">
                WAREHOUSE
              </span>
            </h1>
            
            <p class="text-base lg:text-lg text-gray-300 leading-relaxed mb-5 max-w-xl">
              Free tenant representation for warehouse leases—landlords pay our fee. From 500 SF to 500,000 SF across South Florida.
            </p>

            <!-- Key Value Props -->
            <div class="grid grid-cols-2 gap-4 mb-5">
              <div class="text-center p-3 bg-white/10 backdrop-blur-xl rounded-xl border border-white/20 shadow-xl">
                <div class="text-2xl font-black text-white mb-1">100%</div>
                <div class="text-white/80 text-xs font-semibold uppercase tracking-wider">FREE SERVICE</div>
              </div>
              <div class="text-center p-3 bg-white/10 backdrop-blur-xl rounded-xl border border-white/20 shadow-xl">
                <div class="text-2xl font-black text-white mb-1">{availableWarehouses.length}</div>
                <div class="text-white/80 text-xs font-semibold uppercase tracking-wider">AVAILABLE NOW</div>
              </div>
            </div>

            <!-- Trust Indicators -->
            <div class="space-y-2">
              <div class="flex items-center text-sm text-gray-300">
                <svg class="w-4 h-4 text-green-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                No fees to you—landlords pay our commission
              </div>
              <div class="flex items-center text-sm text-gray-300">
                <svg class="w-4 h-4 text-blue-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Industrial experts with deep local knowledge
              </div>
              <div class="flex items-center text-sm text-gray-300">
                <svg class="w-4 h-4 text-purple-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Fast results—qualified options within 24 hours
              </div>
            </div>
          </div>

          <!-- Right Column: Wider Compact Contact Form -->
          <div class="animate-on-scroll">
            <div class="bg-white/10 backdrop-blur-xl rounded-2xl border border-white/20 shadow-2xl p-5 max-w-lg">
              <div class="text-center mb-4">
                <h2 class="text-xl font-bold text-white mb-1">Find Your Perfect Warehouse Space</h2>
                <p class="text-white/80 text-xs">Fill out the form below and we'll get back to you within 24 hours with qualified options.</p>
              </div>
              
              <form 
                name="warehouse-inquiry" 
                method="POST" 
                data-netlify="true" 
                netlify-honeypot="bot-field"
                action="/success"
                class="space-y-3"
              >
                <!-- Hidden fields -->
                <input type="hidden" name="form-name" value="warehouse-inquiry" />
                <input type="hidden" name="source" value="homepage-hero" />
                <div class="hidden">
                  <input name="bot-field" />
                </div>

                <!-- Name, Email, Phone - 3 columns -->
                <div class="grid grid-cols-3 gap-2">
                  <div>
                    <label class="block text-white/90 text-xs mb-1">Name *</label>
                    <input 
                      type="text" 
                      name="name" 
                      required 
                      class="w-full px-2 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-xs"
                      placeholder="Your Name"
                    />
                  </div>
                  <div>
                    <label class="block text-white/90 text-xs mb-1">Email *</label>
                    <input 
                      type="email" 
                      name="email" 
                      required 
                      class="w-full px-2 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-xs"
                      placeholder="Email"
                    />
                  </div>
                  <div>
                    <label class="block text-white/90 text-xs mb-1">Phone *</label>
                    <input 
                      type="tel" 
                      name="phone" 
                      required
                      class="w-full px-2 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-xs"
                      placeholder="Phone"
                    />
                  </div>
                </div>

                <!-- Company, Size, Timing - 3 columns -->
                <div class="grid grid-cols-3 gap-2">
                  <div>
                    <label class="block text-white/90 text-xs mb-1">Company</label>
                    <input 
                      type="text" 
                      name="company" 
                      class="w-full px-2 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-xs"
                      placeholder="Company"
                    />
                  </div>
                  <div>
                    <label class="block text-white/90 text-xs mb-1">Size (SF)</label>
                    <input 
                      type="text" 
                      name="size-needed" 
                      class="w-full px-2 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-xs"
                      placeholder="10,000"
                    />
                  </div>
                  <div>
                    <label class="block text-white/90 text-xs mb-1">Timing</label>
                    <select 
                      name="timing" 
                      class="w-full px-2 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-xs"
                    >
                      <option value="" class="text-gray-900">Select...</option>
                      <option value="immediate" class="text-gray-900">Immediate</option>
                      <option value="1-3-months" class="text-gray-900">1-3 months</option>
                      <option value="3-6-months" class="text-gray-900">3-6 months</option>
                      <option value="6-12-months" class="text-gray-900">6-12 months</option>
                      <option value="12-months-plus" class="text-gray-900">12+ months</option>
                      <option value="just-exploring" class="text-gray-900">Just exploring</option>
                    </select>
                  </div>
                </div>

                <!-- Warehouse Interested In - Full width -->
                <div>
                  <label class="block text-white/90 text-xs mb-1">Warehouse Interested In *</label>
                  <select 
                    name="warehouse-interested" 
                    required
                    class="w-full px-2 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-xs"
                  >
                    <option value="" class="text-gray-900">Select a warehouse...</option>
                    <option value="any" class="text-gray-900">Any Available Warehouse</option>
                    {allWarehouses.map((warehouse: Warehouse) => (
                      <option value={warehouse.data.slug} class="text-gray-900">
                        {warehouse.data.title}
                      </option>
                    ))}
                  </select>
                </div>

                <!-- Requirements & Message - Smaller -->
                <div>
                  <label class="block text-white/90 text-xs mb-1">Requirements & Message</label>
                  <textarea 
                    name="requirements" 
                    rows="2"
                    class="w-full px-2 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 resize-none text-xs"
                    placeholder="Tell us about your specific requirements..."
                  ></textarea>
                </div>

                <!-- Submit Button -->
                <button 
                  type="submit" 
                  class="w-full bg-gradient-to-r from-primary-600 to-primary-700 text-white px-4 py-2.5 rounded-lg text-sm font-bold hover:from-primary-700 hover:to-primary-800 hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300 transform focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 focus:ring-offset-transparent"
                >
                  Get Matched With Warehouses
                </button>

                <p class="text-xs text-white/60 text-center">
                  Free service • Landlords pay our fees • No obligation
                </p>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Properties -->
    {featuredWarehouses.length > 0 && (
      <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">Featured Properties</h2>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
              Check out some of our premium warehouse spaces available for lease
            </p>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {featuredWarehouses.map((warehouse: Warehouse) => (
              <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
                <div class="relative h-48 overflow-hidden">
                  <img 
                    src={warehouse.data.images && warehouse.data.images[0] ? warehouse.data.images[0] : '/placeholder.jpg'}
                    alt={warehouse.data.title}
                    class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                  />
                  <div class="absolute top-4 left-4">
                    <span class="bg-primary-600 text-white px-3 py-1 rounded-full text-sm font-semibold">
                      Featured
                    </span>
                  </div>
                </div>
                <div class="p-6">
                  <div class="flex items-center justify-between mb-3">
                    <span class="text-lg font-bold text-primary-600">{warehouse.data.price}</span>
                  </div>
                  <h3 class="text-xl font-bold text-gray-900 mb-2">{warehouse.data.title}</h3>
                  <p class="text-gray-600 mb-4">{warehouse.data.location}</p>
                  <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-500">{warehouse.data.size.toLocaleString()} SF</span>
                    <a 
                      href={`/warehouses/${warehouse.data.slug}`}
                      class="bg-primary-600 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-primary-700 transition-colors duration-200"
                    >
                      View Details
                    </a>
                  </div>
                </div>
              </div>
            ))}
          </div>

          <div class="text-center mt-12">
            <a 
              href="/warehouses" 
              class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-8 py-4 rounded-2xl text-lg font-semibold hover:from-primary-700 hover:to-primary-800 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 transform inline-block"
            >
              View All Properties
            </a>
          </div>
        </div>
      </section>
    )}

    <!-- Quick Browse Properties -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Quick Browse Available Properties
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Or view our current inventory and start your search
          </p>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/warehouses" 
            class="bg-primary-600 text-white px-8 py-4 rounded-xl text-lg font-semibold hover:bg-primary-700 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 transform text-center"
          >
            View All Properties
          </a>
          <a 
            href="/services" 
            class="bg-white text-primary-600 border-2 border-primary-600 px-8 py-4 rounded-xl text-lg font-semibold hover:bg-primary-50 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 transform text-center"
          >
            Learn About Our Services
          </a>
        </div>
      </div>
    </section>

    <!-- Social Proof / Trust -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Why Businesses Choose Us
          </h2>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center p-6">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">100% Free</h3>
            <p class="text-gray-600">Landlords pay our fees. Zero cost to you for complete tenant representation.</p>
          </div>

          <div class="text-center p-6">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Industrial Experts</h3>
            <p class="text-gray-600">Focused exclusively on warehouse and industrial properties across South Florida.</p>
          </div>

          <div class="text-center p-6">
            <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Fast Results</h3>
            <p class="text-gray-600">Efficient search process gets you touring qualified properties quickly.</p>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>