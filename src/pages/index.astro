---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get featured warehouses
let featuredWarehouses: any[] = [];
try {
  const warehouses = await getCollection('warehouses');
  featuredWarehouses = warehouses
    .filter(w => w.data.featured && w.data.availability === 'available')
    .slice(0, 3);
} catch (error) {
  console.log('No warehouses found');
}
---

<BaseLayout 
  title="Ariel Realty Group | Premium Industrial Real Estate Solutions"
  description="Discover premium warehouse and industrial spaces across South Florida. Expert tenant representation and cutting-edge technology for your business growth."
>
  <!-- Hero Section with Stunning Animations -->
  <section class="hero-section relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
    <!-- Animated Background Grid -->
    <div class="absolute inset-0 opacity-20">
      <div class="grid-bg absolute inset-0"></div>
    </div>
    
    <!-- Floating Geometric Elements -->
    <div class="floating-elements absolute inset-0 pointer-events-none">
      <div class="floating-circle absolute top-1/4 left-1/4 w-64 h-64 bg-blue-500/10 rounded-full blur-3xl"></div>
      <div class="floating-circle absolute bottom-1/4 right-1/4 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl"></div>
      <div class="floating-rect absolute top-1/2 left-1/2 w-32 h-32 bg-white/5 rotate-45 rounded-2xl"></div>
    </div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <!-- Hero Badge -->
        <div class="hero-badge inline-flex items-center px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 text-white/80 text-sm font-medium mb-8">
          <span class="w-2 h-2 bg-green-400 rounded-full mr-2 animate-pulse"></span>
          Professional Industrial Real Estate
        </div>
        
        <!-- Hero Title with Split Text Animation -->
        <h1 class="hero-title text-6xl md:text-8xl lg:text-9xl font-bold text-white mb-8 leading-none">
          <span class="hero-line block">Industrial</span>
          <span class="hero-line block bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">Spaces</span>
          <span class="hero-line block">Reimagined</span>
        </h1>
        
        <!-- Hero Subtitle -->
        <p class="hero-subtitle text-xl md:text-2xl text-white/70 mb-12 max-w-3xl mx-auto leading-relaxed">
          Discover premium warehouse solutions designed for the future of business. 
          Where innovation meets industrial excellence.
        </p>
        
        <!-- Hero CTAs -->
        <div class="hero-ctas flex flex-col sm:flex-row gap-6 justify-center items-center mb-16">
          <a href="/warehouses" class="cta-primary group relative overflow-hidden bg-white text-slate-900 px-8 py-4 rounded-2xl font-bold text-lg transition-all duration-500 hover:scale-105">
            <span class="relative z-10 flex items-center">
              Explore Properties
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </span>
            <div class="absolute inset-0 bg-gradient-to-r from-blue-500 to-purple-500 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          </a>
          
          <a href="#consultation" class="cta-secondary group backdrop-blur-sm bg-white/10 border border-white/20 text-white px-8 py-4 rounded-2xl font-bold text-lg hover:bg-white/20 transition-all duration-300">
            <span class="flex items-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
              Schedule Consultation
            </span>
          </a>
        </div>
        
        <!-- Hero Stats with Animated Counters -->
        <div class="hero-stats grid grid-cols-1 md:grid-cols-3 gap-8 pt-8 border-t border-white/20">
          <div class="stat-item text-center">
            <div class="stat-number text-4xl md:text-5xl font-bold text-white mb-2" data-count="2500000">0</div>
            <div class="text-white/60 text-sm uppercase tracking-wider">Square Feet Available</div>
          </div>
          <div class="stat-item text-center">
            <div class="stat-number text-4xl md:text-5xl font-bold text-white mb-2" data-count="50">0</div>
            <div class="text-white/60 text-sm uppercase tracking-wider">Premium Properties</div>
          </div>
          <div class="stat-item text-center">
            <div class="stat-number text-4xl md:text-5xl font-bold text-white mb-2" data-count="2">0</div>
            <div class="text-white/60 text-sm uppercase tracking-wider">Hour Response Time</div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="scroll-indicator absolute bottom-8 left-1/2 transform -translate-x-1/2">
      <div class="flex flex-col items-center text-white/60">
        <span class="text-xs uppercase tracking-wider mb-2">Scroll to Explore</span>
        <div class="w-6 h-10 border border-white/30 rounded-full p-1">
          <div class="w-1 h-3 bg-white/60 rounded-full mx-auto scroll-dot"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section with Parallax -->
  <section class="features-section py-32 bg-white relative overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Section Header -->
      <div class="section-header text-center mb-20">
        <div class="section-badge inline-block px-4 py-2 rounded-full bg-slate-100 text-slate-600 text-sm font-medium mb-6">
          Why Choose Ariel Realty
        </div>
        <h2 class="section-title text-5xl md:text-6xl font-bold text-slate-900 mb-6 leading-tight">
          Precision Meets
          <span class="text-gradient bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent"> Innovation</span>
        </h2>
        <p class="section-subtitle text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
          Advanced technology, deep market expertise, and unmatched service quality 
          combine to deliver exceptional industrial real estate solutions.
        </p>
      </div>

      <!-- Features Grid -->
      <div class="features-grid grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="feature-card group relative">
          <div class="feature-content bg-white rounded-3xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 border border-slate-100 hover:border-blue-200">
            <div class="feature-icon w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="feature-title text-2xl font-bold text-slate-900 mb-4">Lightning Fast</h3>
            <p class="feature-description text-slate-600 leading-relaxed mb-6">
              2-hour response guarantee. Advanced search algorithms find your perfect space instantly.
            </p>
            <div class="feature-metrics grid grid-cols-2 gap-4 pt-4 border-t border-slate-100">
              <div class="metric">
                <div class="metric-number text-2xl font-bold text-blue-600">< 2hr</div>
                <div class="metric-label text-xs text-slate-500 uppercase tracking-wider">Response Time</div>
              </div>
              <div class="metric">
                <div class="metric-number text-2xl font-bold text-blue-600">100%</div>
                <div class="metric-label text-xs text-slate-500 uppercase tracking-wider">Success Rate</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Feature 2 -->
        <div class="feature-card group relative">
          <div class="feature-content bg-white rounded-3xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 border border-slate-100 hover:border-purple-200">
            <div class="feature-icon w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="feature-title text-2xl font-bold text-slate-900 mb-4">Verified Quality</h3>
            <p class="feature-description text-slate-600 leading-relaxed mb-6">
              Every property is professionally verified with accurate measurements and documentation.
            </p>
            <div class="feature-metrics grid grid-cols-2 gap-4 pt-4 border-t border-slate-100">
              <div class="metric">
                <div class="metric-number text-2xl font-bold text-purple-600">100%</div>
                <div class="metric-label text-xs text-slate-500 uppercase tracking-wider">Verified</div>
              </div>
              <div class="metric">
                <div class="metric-number text-2xl font-bold text-purple-600">±1%</div>
                <div class="metric-label text-xs text-slate-500 uppercase tracking-wider">Accuracy</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Feature 3 -->
        <div class="feature-card group relative">
          <div class="feature-content bg-white rounded-3xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 border border-slate-100 hover:border-green-200">
            <div class="feature-icon w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
            <h3 class="feature-title text-2xl font-bold text-slate-900 mb-4">AI-Powered Search</h3>
            <p class="feature-description text-slate-600 leading-relaxed mb-6">
              Smart recommendations based on your business needs and location preferences.
            </p>
            <div class="feature-metrics grid grid-cols-2 gap-4 pt-4 border-t border-slate-100">
              <div class="metric">
                <div class="metric-number text-2xl font-bold text-green-600">95%</div>
                <div class="metric-label text-xs text-slate-500 uppercase tracking-wider">Match Rate</div>
              </div>
              <div class="metric">
                <div class="metric-number text-2xl font-bold text-green-600">50%</div>
                <div class="metric-label text-xs text-slate-500 uppercase tracking-wider">Time Saved</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Properties Section -->
  {featuredWarehouses.length > 0 && (
    <section class="properties-section py-32 bg-slate-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="properties-header flex flex-col lg:flex-row lg:items-end lg:justify-between mb-16">
          <div class="properties-header-content">
            <div class="section-badge inline-block px-4 py-2 rounded-full bg-white text-slate-600 text-sm font-medium mb-6">
              Featured Properties
            </div>
            <h2 class="properties-title text-5xl md:text-6xl font-bold text-slate-900 mb-6 leading-tight">
              Premium
              <span class="text-gradient bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent"> Spaces</span>
            </h2>
            <p class="properties-subtitle text-xl text-slate-600 max-w-2xl leading-relaxed">
              Handpicked warehouse and industrial facilities designed for modern business operations.
            </p>
          </div>
          
          <div class="properties-nav mt-8 lg:mt-0">
            <a href="/warehouses" class="view-all-btn group inline-flex items-center px-6 py-3 bg-slate-900 text-white rounded-2xl font-semibold hover:bg-slate-800 transition-all duration-300">
              View All Properties
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Properties Grid -->
        <div class="properties-grid grid grid-cols-1 lg:grid-cols-3 gap-8">
          {featuredWarehouses.map((warehouse, index) => (
            <div class="property-card group" data-aos="fade-up" data-aos-delay={index * 100}>
              <div class="property-content bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 border border-slate-100 hover:border-blue-200">
                <!-- Property Image -->
                <div class="property-image relative aspect-w-16 aspect-h-10 overflow-hidden">
                  <img 
                    src={warehouse.data.images?.[0] || '/images/uploads/placeholder.svg'} 
                    alt={warehouse.data.title}
                    class="property-img w-full h-64 object-cover group-hover:scale-105 transition-transform duration-700"
                    loading="lazy"
                  />
                  
                  <!-- Property Badge -->
                  <div class="property-badge absolute top-4 left-4 px-3 py-1 bg-green-500 text-white text-sm font-medium rounded-full">
                    Available Now
                  </div>
                  
                  <!-- Property Actions -->
                  <div class="property-actions absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <button class="action-btn w-10 h-10 bg-white/90 rounded-full flex items-center justify-center hover:bg-white transition-colors duration-200">
                      <svg class="w-5 h-5 text-slate-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                      </svg>
                    </button>
                  </div>
                </div>
                
                <!-- Property Details -->
                <div class="property-details p-8">
                  <!-- Location -->
                  <div class="property-location flex items-center text-slate-500 mb-3">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    </svg>
                    <span class="text-sm">{warehouse.data.location}</span>
                  </div>
                  
                  <!-- Title -->
                  <h3 class="property-title text-2xl font-bold text-slate-900 mb-4 group-hover:text-blue-600 transition-colors duration-300">
                    {warehouse.data.title}
                  </h3>
                  
                  <!-- Metrics -->
                  <div class="property-metrics grid grid-cols-2 gap-4 mb-6">
                    <div class="metric bg-slate-50 rounded-xl p-4 text-center">
                      <div class="metric-number text-2xl font-bold text-slate-900">
                        {warehouse.data.size.toLocaleString()}
                      </div>
                      <div class="metric-label text-sm text-slate-500">Square Feet</div>
                    </div>
                    <div class="metric bg-slate-50 rounded-xl p-4 text-center">
                      <div class="metric-number text-2xl font-bold text-slate-900">
                        {warehouse.data.price}
                      </div>
                      <div class="metric-label text-sm text-slate-500">per SF/year</div>
                    </div>
                  </div>
                  
                  <!-- Features -->
                  {warehouse.data.features && warehouse.data.features.length > 0 && (
                    <div class="property-features mb-6">
                      <div class="features-list flex flex-wrap gap-2">
                        {warehouse.data.features.slice(0, 3).map((feature: string) => (
                          <span class="feature-tag px-3 py-1 bg-blue-50 text-blue-700 text-sm rounded-full">
                            {feature}
                          </span>
                        ))}
                        {warehouse.data.features.length > 3 && (
                          <span class="feature-tag px-3 py-1 bg-slate-100 text-slate-600 text-sm rounded-full">
                            +{warehouse.data.features.length - 3} more
                          </span>
                        )}
                      </div>
                    </div>
                  )}
                  
                  <!-- CTA -->
                  <a 
                    href={`/warehouses/${warehouse.data.slug}`} 
                    class="property-cta block w-full text-center py-3 bg-slate-900 text-white rounded-xl font-semibold hover:bg-slate-800 transition-colors duration-300"
                  >
                    View Details
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Process Section -->
  <section class="process-section py-32 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Section Header -->
      <div class="process-header text-center mb-20">
        <div class="section-badge inline-block px-4 py-2 rounded-full bg-slate-100 text-slate-600 text-sm font-medium mb-6">
          Our Process
        </div>
        <h2 class="process-title text-5xl md:text-6xl font-bold text-slate-900 mb-6 leading-tight">
          Seamless
          <span class="text-gradient bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent"> Experience</span>
        </h2>
        <p class="process-subtitle text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed">
          From initial consultation to move-in day, we've streamlined every step 
          to deliver exceptional results in record time.
        </p>
      </div>

      <!-- Process Steps -->
      <div class="process-steps relative">
        <!-- Connecting Line -->
        <div class="process-line absolute top-8 left-8 right-8 h-0.5 bg-gradient-to-r from-blue-200 via-purple-200 to-green-200 hidden lg:block"></div>
        
        <div class="steps-grid grid grid-cols-1 lg:grid-cols-4 gap-8">
          <!-- Step 1 -->
          <div class="process-step relative">
            <div class="step-content text-center">
              <div class="step-icon w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6 relative z-10">
                <span class="text-white font-bold text-xl">1</span>
              </div>
              <h3 class="step-title text-xl font-bold text-slate-900 mb-3">Consultation</h3>
              <p class="step-description text-slate-600 leading-relaxed">
                Share your requirements and we'll understand your unique business needs.
              </p>
            </div>
          </div>

          <!-- Step 2 -->
          <div class="process-step relative">
            <div class="step-content text-center">
              <div class="step-icon w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center mx-auto mb-6 relative z-10">
                <span class="text-white font-bold text-xl">2</span>
              </div>
              <h3 class="step-title text-xl font-bold text-slate-900 mb-3">Matching</h3>
              <p class="step-description text-slate-600 leading-relaxed">
                Our AI-powered system finds properties that perfectly match your criteria.
              </p>
            </div>
          </div>

          <!-- Step 3 -->
          <div class="process-step relative">
            <div class="step-content text-center">
              <div class="step-icon w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-6 relative z-10">
                <span class="text-white font-bold text-xl">3</span>
              </div>
              <h3 class="step-title text-xl font-bold text-slate-900 mb-3">Tours</h3>
              <p class="step-description text-slate-600 leading-relaxed">
                Schedule private tours of your shortlisted properties at your convenience.
              </p>
            </div>
          </div>

          <!-- Step 4 -->
          <div class="process-step relative">
            <div class="step-content text-center">
              <div class="step-icon w-16 h-16 bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl flex items-center justify-center mx-auto mb-6 relative z-10">
                <span class="text-white font-bold text-xl">4</span>
              </div>
              <h3 class="step-title text-xl font-bold text-slate-900 mb-3">Move-In</h3>
              <p class="step-description text-slate-600 leading-relaxed">
                We handle negotiations and paperwork so you can focus on your business.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section id="consultation" class="cta-section py-32 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 relative overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 opacity-10">
      <div class="cta-grid absolute inset-0"></div>
    </div>
    
    <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- CTA Content -->
      <div class="cta-content">
        <div class="cta-badge inline-block px-4 py-2 rounded-full bg-white/10 backdrop-blur-sm border border-white/20 text-white/80 text-sm font-medium mb-8">
          Ready to Get Started?
        </div>
        
        <h2 class="cta-title text-5xl md:text-6xl font-bold text-white mb-8 leading-tight">
          Find Your Perfect
          <span class="text-gradient bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent"> Warehouse</span>
        </h2>
        
        <p class="cta-subtitle text-xl text-white/70 mb-12 max-w-2xl mx-auto leading-relaxed">
          Join hundreds of successful businesses who've found their ideal industrial space with our expert guidance.
        </p>
        
        <!-- CTA Buttons -->
        <div class="cta-buttons flex flex-col sm:flex-row gap-6 justify-center mb-16">
          <a href="/warehouses" class="cta-primary group relative overflow-hidden bg-white text-slate-900 px-8 py-4 rounded-2xl font-bold text-lg transition-all duration-500 hover:scale-105">
            <span class="relative z-10 flex items-center justify-center">
              Browse All Properties
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </span>
          </a>
          
          <a href="/contact" class="cta-secondary group backdrop-blur-sm bg-white/10 border border-white/20 text-white px-8 py-4 rounded-2xl font-bold text-lg hover:bg-white/20 transition-all duration-300">
            <span class="flex items-center justify-center">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
              Schedule Consultation
            </span>
          </a>
        </div>
        
        <!-- Contact Info -->
        <div class="cta-contact grid grid-cols-1 md:grid-cols-3 gap-8 pt-8 border-t border-white/20">
          <div class="contact-item text-center">
