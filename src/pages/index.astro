---
// Updated homepage with proper hero sizing and standardized forms
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

// Define proper types
interface WarehouseData {
  title: string;
  location: string;
  price: string;
  size: number;
  description: string;
  images?: string[];
  features?: string[];
  featured?: boolean;
  availability?: string;
  slug: string;
}

interface Warehouse {
  data: WarehouseData;
}

// Get warehouse data for featured properties
let featuredWarehouses: Warehouse[] = [];
try {
  const allWarehouses = await getCollection('warehouses');
  featuredWarehouses = allWarehouses.filter((w: any) => w.data.featured).slice(0, 3);
} catch (error) {
  console.log('No warehouse data yet');
}
---

<BaseLayout 
  title="Find Your Perfect Warehouse in South Florida | Warehouse Locating"
  description="Free tenant representation for warehouse leases—landlords pay our fee. From 500 SF to 500,000 SF across Miami-Dade, Broward, and Palm Beach."
>
  <Navigation />
  
  <main>
    <!-- Hero Section - Better Sized for Desktop -->
    <section class="relative pt-20 pb-12 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 overflow-hidden">
      <!-- Background Elements -->
      <div class="absolute inset-0">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary-500/10 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-blue-500/10 rounded-full blur-3xl animate-float-reverse"></div>
        <div class="absolute inset-0 bg-pattern-grid opacity-20"></div>
      </div>
      
      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-center py-8 lg:py-16">
          
          <!-- Left Column - Hero Content (Better Centered) -->
          <div class="animate-on-scroll flex flex-col justify-center text-center lg:text-left">
            <h1 class="text-3xl sm:text-4xl lg:text-5xl xl:text-6xl font-black text-white leading-tight tracking-tight mb-6">
              FIND YOUR PERFECT
              <span class="block bg-gradient-to-r from-primary-400 to-blue-400 bg-clip-text text-transparent">
                WAREHOUSE
              </span>
              <span class="block text-white">IN SOUTH FLORIDA</span>
            </h1>
            
            <p class="text-lg lg:text-xl text-gray-300 leading-relaxed mb-4 max-w-xl mx-auto lg:mx-0">
              Free tenant representation for warehouse leases—landlords pay our fee.
            </p>

            <p class="text-base text-gray-400 leading-relaxed mb-8 max-w-lg mx-auto lg:mx-0">
              From a 500 SF workshop to a 500,000 SF distribution hub—we've got you covered.
            </p>

            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
              <a 
                href="/contact" 
                class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-6 py-3 rounded-2xl text-base font-semibold hover:from-primary-700 hover:to-primary-800 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 transform text-center"
              >
                Get Free Tenant Representation
              </a>
              <a 
                href="tel:954-937-9667" 
                class="bg-white/10 backdrop-blur-sm text-white border-2 border-white/20 px-6 py-3 rounded-2xl text-base font-semibold hover:bg-white/20 hover:border-white/30 transition-all duration-300 text-center"
              >
                Call (954) 937-9667
              </a>
            </div>
          </div>

          <!-- Right Column - Search Form -->
          <div class="animate-on-scroll">
            <div class="bg-white/10 backdrop-blur-lg border border-white/20 rounded-3xl p-6 lg:p-8 shadow-2xl max-w-lg mx-auto">
              <div class="text-center mb-6">
                <h2 class="text-xl lg:text-2xl font-bold text-white mb-2">Search Warehouses</h2>
                <p class="text-gray-300">Find space that fits—fast</p>
              </div>

              <form 
                id="warehouse-search-form"
                action="/warehouses"
                method="GET"
                class="space-y-4"
              >
                <!-- Size Range -->
                <div>
                  <label for="min-size" class="block text-white text-sm font-semibold mb-2">
                    Size Range (SF)
                  </label>
                  <div class="grid grid-cols-2 gap-3">
                    <input 
                      type="number" 
                      id="min-size"
                      name="min_size" 
                      class="w-full px-3 py-3 rounded-xl bg-white/90 border border-white/30 focus:bg-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300 text-gray-900 text-sm"
                      placeholder="Min SF"
                    />
                    <input 
                      type="number" 
                      id="max-size"
                      name="max_size" 
                      class="w-full px-3 py-3 rounded-xl bg-white/90 border border-white/30 focus:bg-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300 text-gray-900 text-sm"
                      placeholder="Max SF"
                    />
                  </div>
                </div>

                <!-- County -->
                <div>
                  <label for="county" class="block text-white text-sm font-semibold mb-2">
                    County
                  </label>
                  <select 
                    id="county"
                    name="county" 
                    class="w-full px-4 py-3 rounded-xl bg-white/90 border border-white/30 focus:bg-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300 text-gray-900"
                  >
                    <option value="">All Counties</option>
                    <option value="miami-dade">Miami-Dade</option>
                    <option value="broward">Broward</option>
                    <option value="palm-beach">Palm Beach</option>
                  </select>
                </div>

                <!-- Availability -->
                <div>
                  <label for="availability" class="block text-white text-sm font-semibold mb-2">
                    Availability
                  </label>
                  <select 
                    id="availability"
                    name="availability" 
                    class="w-full px-4 py-3 rounded-xl bg-white/90 border border-white/30 focus:bg-white focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300 text-gray-900"
                  >
                    <option value="">All Properties</option>
                    <option value="available">Available Now</option>
                    <option value="pending">Coming Soon</option>
                  </select>
                </div>

                <!-- Submit Button -->
                <button 
                  type="submit" 
                  class="w-full bg-gradient-to-r from-primary-600 to-primary-700 text-white px-8 py-4 rounded-xl text-lg font-semibold hover:from-primary-700 hover:to-primary-800 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 transform"
                >
                  Search Warehouses
                </button>
              </form>

              <!-- Contact Info -->
              <div class="mt-6 pt-6 border-t border-white/20 text-center">
                <p class="text-gray-300 text-sm mb-2">Need help finding space?</p>
                <a 
                  href="tel:954-937-9667" 
                  class="text-white font-bold text-lg hover:text-primary-300 transition-colors duration-200"
                >
                  Call (954) 937-9667
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Form Section - Using general-inquiry form -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16 animate-on-scroll">
          <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
            Ready to Find Your Warehouse?
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            Tell us what you need. We'll send qualified options and set up tours.
          </p>
        </div>

        <div class="max-w-4xl mx-auto">
          <div class="bg-gray-50 rounded-3xl p-8 lg:p-12 shadow-soft animate-on-scroll">
            <form 
              name="general-inquiry" 
              method="POST" 
              data-netlify="true" 
              netlify-honeypot="bot-field"
              action="/success"
              class="space-y-6"
            >
              <!-- Hidden fields -->
              <input type="hidden" name="form-name" value="general-inquiry" />
              <input type="hidden" name="source" value="homepage" />
              <div class="hidden">
                <input name="bot-field" />
              </div>

              <!-- Name & Email Row -->
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">
                    Name *
                  </label>
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required 
                    class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300"
                    placeholder="Your Name"
                  />
                </div>

                <div>
                  <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
                    Email *
                  </label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required 
                    class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300"
                    placeholder="your@email.com"
                  />
                </div>
              </div>

              <!-- Phone & Company Row -->
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">
                    Phone
                  </label>
                  <input 
                    type="tel" 
                    id="phone" 
                    name="phone" 
                    class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300"
                    placeholder="(954) 123-4567"
                  />
                </div>

                <div>
                  <label for="company" class="block text-sm font-semibold text-gray-700 mb-2">
                    Company
                  </label>
                  <input 
                    type="text" 
                    id="company" 
                    name="company" 
                    class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300"
                    placeholder="Company Name"
                  />
                </div>
              </div>

              <!-- Size & Location Row -->
              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="size" class="block text-sm font-semibold text-gray-700 mb-2">
                    Size Needed (SF)
                  </label>
                  <input 
                    type="text" 
                    id="size" 
                    name="size" 
                    class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300"
                    placeholder="e.g., 10,000 SF"
                  />
                </div>

                <div>
                  <label for="timing" class="block text-sm font-semibold text-gray-700 mb-2">
                    Timing
                  </label>
                  <input 
                    type="text" 
                    id="timing" 
                    name="timing" 
                    class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300"
                    placeholder="e.g., 90 days"
                  />
                </div>
              </div>

              <!-- Message -->
              <div>
                <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">
                  Requirements & Message
                </label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="4"
                  class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300 resize-none"
                  placeholder="Tell us about your space requirements: loading docks, yard space, power needs, etc."
                ></textarea>
              </div>

              <!-- Submit Button -->
              <div class="text-center">
                <button 
                  type="submit" 
                  class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-12 py-4 rounded-xl text-lg font-semibold hover:from-primary-700 hover:to-primary-800 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 transform"
                >
                  Get Free Tenant Representation
                </button>
                <p class="text-sm text-gray-500 mt-4">
                  Completely free service. Landlords pay our fees.
                </p>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- Warehouse Hero Image Section -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="relative rounded-3xl overflow-hidden shadow-2xl animate-on-scroll">
          <picture>
            <div class="relative rounded-3xl overflow-hidden shadow-2xl animate-on-scroll">
              <img
                src="/images/uploads/warehouse-hero.png"
                alt="Florida warehouse"
                class="warehouse-hero w-full h-64 md:h-96 object-cover"
                loading="eager"
                fetchpriority="high"
              />

              <!-- Improved text overlay with better contrast -->
              <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/40 to-transparent">
                <div class="absolute bottom-8 left-8">
                  <h3 class="text-2xl md:text-3xl font-black text-white mb-2 drop-shadow-lg">
                    Modern Industrial Facilities
                  </h3>
                  <p class="text-lg font-semibold text-gray-100 drop-shadow-md">
                    Across Miami-Dade, Broward, and Palm Beach Counties
                  </p>
                </div>
              </div>
            </div>
          </picture>
        </div>
      </div>
    </section>

    <!-- How It Works Section -->
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16 animate-on-scroll">
          <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
            How It Works
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            End-to-end tenant representation from search to signing
          </p>
        </div>

        <!-- Services Grid -->
        <div class="grid md:grid-cols-3 gap-8 stagger-children">
          <!-- Step 1 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <span class="text-2xl font-bold text-white">1</span>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Tell us your specs</h3>
            <p class="text-gray-600 leading-relaxed">
              Size, location, timing, budget. We get clear criteria to find exactly what you need.
            </p>
          </div>

          <!-- Step 2 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <span class="text-2xl font-bold text-white">2</span>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">We surface options</h3>
            <p class="text-gray-600 leading-relaxed">
              On- and off-market options and schedule tours. Curated options, scheduled efficiently.
            </p>
          </div>

          <!-- Step 3 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <span class="text-2xl font-bold text-white">3</span>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">We negotiate hard</h3>
            <p class="text-gray-600 leading-relaxed">
              On rent, TI, and terms—at no cost to you. Landlords pay our fee.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Properties -->
    {featuredWarehouses.length > 0 && (
      <section class="py-24 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <!-- Section Header -->
          <div class="text-center mb-16 animate-on-scroll">
            <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
              Find Space That Fits—Fast
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
              Use filters to narrow the search, then request tours in one click.
            </p>
          </div>

          <!-- Properties Grid -->
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 stagger-children">
            {featuredWarehouses.map((warehouse) => (
              <div class="bg-white rounded-3xl shadow-soft hover:shadow-strong transition-all duration-300 overflow-hidden transform hover:-translate-y-2">
                {/* Property Image */}
                <div class="aspect-video bg-gray-200 relative overflow-hidden">
                  {warehouse.data.images && warehouse.data.images[0] ? (
                    <img 
                      src={warehouse.data.images[0]} 
                      alt={warehouse.data.title}
                      class="w-full h-full object-cover"
                    />
                  ) : (
                    <div class="w-full h-full flex items-center justify-center text-gray-400">
                      <svg class="w-16 h-16" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
                      </svg>
                    </div>
                  )}
                  
                  {/* Status Badge */}
                  <div class="absolute top-4 left-4">
                    <span class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ${
                      warehouse.data.availability === 'available' 
                        ? 'bg-green-500 text-white' 
                        : 'bg-gray-400 text-white'
                    }`}>
                      {warehouse.data.availability === 'available' ? 'Available' : 'Pending'}
                    </span>
                  </div>
                </div>

                {/* Property Details */}
                <div class="p-6">
                  <h3 class="text-xl font-bold text-gray-900 mb-2 line-clamp-2">
                    {warehouse.data.title}
                  </h3>
                  
                  <p class="text-gray-600 mb-4 line-clamp-2">
                    {warehouse.data.description}
                  </p>

                  {/* Key Details */}
                  <div class="grid grid-cols-2 gap-4 mb-6 text-sm">
                    <div>
                      <span class="text-gray-500">Size:</span>
                      <div class="font-semibold text-gray-900">{warehouse.data.size.toLocaleString()} SF</div>
                    </div>
                    <div>
                      <span class="text-gray-500">Price:</span>
                      <div class="font-semibold text-gray-900">{warehouse.data.price}</div>
                    </div>
                    <div class="col-span-2">
                      <span class="text-gray-500">Location:</span>
                      <div class="font-semibold text-gray-900">{warehouse.data.location}</div>
                    </div>
                  </div>

                  {/* Features */}
                  {warehouse.data.features && warehouse.data.features.length > 0 && (
                    <div class="mb-6">
                      <div class="flex flex-wrap gap-2">
                        {warehouse.data.features.slice(0, 3).map((feature) => (
                          <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-gray-100 text-gray-700">
                            {feature}
                          </span>
                        ))}
                        {warehouse.data.features.length > 3 && (
                          <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-gray-100 text-gray-500">
                            +{warehouse.data.features.length - 3} more
                          </span>
                        )}
                      </div>
                    </div>
                  )}

                  {/* CTA Buttons */}
                  <div class="flex gap-3">
                    <a 
                      href={`/warehouses/${warehouse.data.slug}`}
                      class="flex-1 bg-gradient-to-r from-primary-600 to-primary-700 text-white px-4 py-3 rounded-xl text-sm font-semibold text-center hover:from-primary-700 hover:to-primary-800 transition-all duration-200"
                    >
                      View Details
                    </a>
                    <a 
                      href="/contact"
                      class="border-2 border-gray-200 text-gray-700 px-4 py-3 rounded-xl text-sm font-semibold text-center hover:bg-gray-50 hover:border-gray-300 transition-all duration-200"
                    >
                      Request Tour
                    </a>
                  </div>
                </div>
              </div>
            ))}
          </div>

          <!-- View All Button -->
          <div class="text-center mt-12 animate-on-scroll">
            <a 
              href="/warehouses" 
              class="inline-flex items-center bg-gray-900 text-white px-8 py-4 rounded-2xl font-semibold hover:bg-gray-800 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 transform"
            >
              View All Properties
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </div>
      </section>
    )}

    <!-- Why Choose Us Section -->
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16 animate-on-scroll">
          <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
            Why Choose Us?
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            Brutally efficient search. Local, connected, industrial-only focus.
          </p>
        </div>

        <!-- Trust Features Grid -->
        <div class="grid md:grid-cols-4 gap-8 stagger-children">
          <!-- Feature 1 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">You Save Money</h3>
            <p class="text-gray-600 leading-relaxed">
              Tighter comps, smarter structure, harder negotiation. Better rent, better TI, better protections.
            </p>
          </div>

          <!-- Feature 2 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">You Pay $0</h3>
            <p class="text-gray-600 leading-relaxed">
              Our fee is paid by the landlord—never by you. Completely free tenant representation.
            </p>
          </div>

          <!-- Feature 3 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
