---
// Updated homepage with improved hero layout and enhanced above-the-fold design + full-width contact form
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

// Define proper types
interface WarehouseData {
  title: string;
  location: string;
  price: string;
  size: number;
  description: string;
  images?: string[];
  features?: string[];
  featured?: boolean;
  availability?: string;
  slug: string;
}

interface Warehouse {
  data: WarehouseData;
}

// Get warehouse data for stats and featured properties
let allWarehouses: Warehouse[] = [];
let availableWarehouses: Warehouse[] = [];
let featuredWarehouses: Warehouse[] = [];
let totalSqFt = 0;
let averageSize = 0;

try {
  allWarehouses = await getCollection('warehouses');
  availableWarehouses = allWarehouses.filter((w: Warehouse) => w.data.availability === 'available');
  featuredWarehouses = allWarehouses.filter((w: Warehouse) => w.data.featured).slice(0, 3);
  totalSqFt = allWarehouses.reduce((sum: number, w: Warehouse) => sum + (w.data.size || 0), 0);
  averageSize = allWarehouses.length > 0 ? Math.round(totalSqFt / allWarehouses.length) : 0;
} catch (error) {
  console.log('No warehouse data yet:', error);
}

// Form dropdown options (matching ContactModal exactly)
const counties = [
  'Miami-Dade County',
  'Broward County', 
  'Palm Beach County'
];

const priceRanges = [
  '$3-5 per SF',
  '$5-7 per SF',
  '$7-10 per SF',
  '$10-15 per SF',
  '$15+ per SF',
  'Negotiable'
];

const sqftRanges = [
  '500-2,000 SF',
  '2,000-5,000 SF',
  '5,000-10,000 SF',
  '10,000-25,000 SF',
  '25,000-50,000 SF',
  '50,000-100,000 SF',
  '100,000+ SF'
];
---

<BaseLayout 
  title="Find Your Perfect Warehouse in South Florida | Warehouse Locating"
  description="Free tenant representation for warehouse leases—landlords pay our fee. From 500 SF to 500,000 SF across Miami-Dade, Broward, and Palm Beach."
>
  <Navigation />
  
  <main>
    <!-- Enhanced Hero Section - Above the Fold -->
    <section class="relative min-h-screen bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 overflow-hidden flex items-center">
      <!-- Background Elements -->
      <div class="absolute inset-0">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-cyan-500/10 rounded-full blur-3xl animate-float-reverse"></div>
        <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>
      </div>
      
      <div class="relative z-10 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="grid lg:grid-cols-2 gap-12 items-center min-h-[85vh]">
          
          <!-- Left Column: Hero Content -->
          <div class="animate-on-scroll">
            <h1 class="text-5xl sm:text-6xl lg:text-7xl font-black text-white leading-[0.85] tracking-tight mb-8">
              FIND YOUR PERFECT
              <span class="block bg-gradient-to-r from-primary-400 to-blue-400 bg-clip-text text-transparent">
                WAREHOUSE SPACE
              </span>
            </h1>
            
            <p class="text-xl lg:text-2xl text-gray-300 leading-relaxed mb-6">
              Free tenant concierge service across Miami-Dade, Broward & Palm Beach counties
            </p>

            <p class="text-base text-gray-400 leading-relaxed mb-10 max-w-3xl">
              <span class="text-white font-semibold">Zero cost to you.</span> Our fee is paid by landlords. 
              From 500 SF to 500,000 SF—we'll find qualified options and negotiate on your behalf.
            </p>

            <!-- Value Props -->
            <div class="space-y-3 mb-10">
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span class="text-white font-medium">
                  100% free service—no cost, no retainer, no obligation
                </span>
              </div>
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span class="text-white font-medium">
                  Industrial experts—warehouses only, deep market knowledge
                </span>
              </div>
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span class="text-white font-medium">
                  Fast results—qualified options within 24 hours
                </span>
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-4">
              <button 
                onclick="openContactModal('hero-main-cta')"
                class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-8 py-4 rounded-2xl text-lg font-bold hover:from-primary-700 hover:to-primary-800 hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 transform text-center"
              >
                Get Matched Today
              </button>
              <a 
                href="tel:954-937-9667" 
                class="bg-white/10 backdrop-blur-sm text-white border-2 border-white/30 px-8 py-4 rounded-2xl text-lg font-bold hover:bg-white/20 hover:border-white/50 transition-all duration-300 text-center"
              >
                Call (954) 937-9667
              </a>
            </div>
          </div>

          <!-- Right Column: Enhanced Contact Form -->
          <div class="animate-on-scroll flex justify-center lg:justify-end">
            <div class="bg-white/10 backdrop-blur-xl rounded-3xl border border-white/20 shadow-2xl p-6 w-full max-w-md">
              <div class="text-center mb-4">
                <h2 class="text-xl font-bold text-white mb-1">Find Your Perfect Warehouse Space</h2>
                <p class="text-white/80 text-xs">We'll get back to you within 24 hours with qualified options.</p>
              </div>
              
              <form 
                name="warehouse-inquiry-modal" 
                method="POST" 
                data-netlify="true" 
                netlify-honeypot="bot-field"
                action="/success"
                class="space-y-3"
              >
                <!-- Hidden fields -->
                <input type="hidden" name="form-name" value="warehouse-inquiry-modal" />
                <input type="hidden" name="source" value="homepage-hero" />
                <div class="hidden">
                  <input name="bot-field" />
                </div>

                <!-- Name & Email Row -->
                <div class="grid grid-cols-2 gap-2">
                  <div>
                    <label class="block text-white/90 text-xs font-medium mb-1">Name *</label>
                    <input 
                      type="text" 
                      name="name" 
                      required 
                      class="w-full px-3 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-sm"
                      placeholder="Your Name"
                    />
                  </div>
                  <div>
                    <label class="block text-white/90 text-xs font-medium mb-1">Email *</label>
                    <input 
                      type="email" 
                      name="email" 
                      required 
                      class="w-full px-3 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-sm"
                      placeholder="your@email.com"
                    />
                  </div>
                </div>

                <!-- Phone & Company Row -->
                <div class="grid grid-cols-2 gap-2">
                  <div>
                    <label class="block text-white/90 text-xs font-medium mb-1">Phone</label>
                    <input 
                      type="tel" 
                      name="phone" 
                      class="w-full px-3 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-sm"
                      placeholder="(555) 123-4567"
                    />
                  </div>
                  <div>
                    <label class="block text-white/90 text-xs font-medium mb-1">Company</label>
                    <input 
                      type="text" 
                      name="company" 
                      class="w-full px-3 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-sm"
                      placeholder="Company Name"
                    />
                  </div>
                </div>

                <!-- Property Interest & County Row -->
                <div class="grid grid-cols-2 gap-2">
                  <div>
                    <label class="block text-white/90 text-xs font-medium mb-1">Property Interest *</label>
                    <select 
                      name="property-interest" 
                      required
                      class="w-full px-3 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-sm"
                    >
                      <option value="" class="bg-gray-800">Select property...</option>
                      <option value="any" class="bg-gray-800">Any Available Property</option>
                      {availableWarehouses.map(warehouse => (
                        <option value={warehouse.data.slug} class="bg-gray-800">
                          {warehouse.data.title}
                        </option>
                      ))}
                    </select>
                  </div>
                  <div>
                    <label class="block text-white/90 text-xs font-medium mb-1">County</label>
                    <select 
                      name="county" 
                      class="w-full px-3 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-sm"
                    >
                      <option value="" class="bg-gray-800">Select county...</option>
                      <option value="any" class="bg-gray-800">Any County</option>
                      {counties.map(county => (
                        <option value={county} class="bg-gray-800">{county}</option>
                      ))}
                    </select>
                  </div>
                </div>

                <!-- Size & Price Range Row -->
                <div class="grid grid-cols-2 gap-2">
                  <div>
                    <label class="block text-white/90 text-xs font-medium mb-1">Size (SF)</label>
                    <select 
                      name="size-needed" 
                      class="w-full px-3 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-sm"
                    >
                      <option value="" class="bg-gray-800">Select size...</option>
                      {sqftRanges.map(range => (
                        <option value={range} class="bg-gray-800">{range}</option>
                      ))}
                    </select>
                  </div>
                  <div>
                    <label class="block text-white/90 text-xs font-medium mb-1">Price Range</label>
                    <select 
                      name="price-range" 
                      class="w-full px-3 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-sm"
                    >
                      <option value="" class="bg-gray-800">Select price...</option>
                      {priceRanges.map(range => (
                        <option value={range} class="bg-gray-800">{range}</option>
                      ))}
                    </select>
                  </div>
                </div>

                <!-- Timing -->
                <div>
                  <label class="block text-white/90 text-xs font-medium mb-1">Timing</label>
                  <select 
                    name="timing" 
                    class="w-full px-3 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 text-sm"
                  >
                    <option value="" class="bg-gray-800">Select timeline...</option>
                    <option value="immediate" class="bg-gray-800">Immediate (0-30 days)</option>
                    <option value="1-3-months" class="bg-gray-800">1-3 months</option>
                    <option value="3-6-months" class="bg-gray-800">3-6 months</option>
                    <option value="6-12-months" class="bg-gray-800">6-12 months</option>
                    <option value="12-months-plus" class="bg-gray-800">12+ months</option>
                    <option value="just-exploring" class="bg-gray-800">Just exploring options</option>
                  </select>
                </div>

                <!-- Requirements & Message -->
                <div>
                  <label class="block text-white/90 text-xs font-medium mb-1">Requirements & Message</label>
                  <textarea 
                    name="requirements" 
                    rows="2"
                    class="w-full px-3 py-2 rounded-lg border border-white/20 bg-white/10 backdrop-blur-sm text-white placeholder-white/60 focus:border-primary-400 focus:ring-1 focus:ring-primary-400/20 transition-all duration-300 resize-vertical text-sm"
                    placeholder="Loading docks, clear height, special features, budget, location preferences..."
                  ></textarea>
                </div>

                <!-- Submit Button -->
                <button 
                  type="submit" 
                  class="w-full bg-gradient-to-r from-primary-600 to-primary-700 text-white px-4 py-3 rounded-lg text-sm font-bold hover:from-primary-700 hover:to-primary-800 hover:shadow-lg hover:-translate-y-0.5 transition-all duration-300 transform focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 focus:ring-offset-transparent"
                >
                  Get Matched With Warehouses
                </button>

                <p class="text-xs text-white/60 text-center">
                  Free service • Landlords pay our fees • No obligation
                </p>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    {featuredWarehouses.length > 0 && (
      <!-- Featured Properties Section -->
      <section class="py-20 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Featured Properties</h2>
            <p class="text-xl text-gray-600">
              A sampling of our available warehouse spaces across South Florida
            </p>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {featuredWarehouses.map((warehouse: Warehouse) => (
              <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
                {warehouse.data.images && warehouse.data.images[0] && (
                  <div class="aspect-w-16 aspect-h-9">
                    <img 
                      src={warehouse.data.images[0]} 
                      alt={warehouse.data.title}
                      class="w-full h-48 object-cover"
                    />
                  </div>
                )}
                
                <div class="p-6">
                  <h3 class="text-xl font-bold text-gray-900 mb-2">{warehouse.data.title}</h3>
                  <p class="text-gray-600 mb-4">{warehouse.data.location}</p>
                  
                  <div class="flex justify-between items-center mb-4">
                    <span class="text-2xl font-bold text-primary-600">{warehouse.data.price}</span>
                    <span class="text-gray-500">{warehouse.data.size?.toLocaleString()} SF</span>
                  </div>
                  
                  <p class="text-gray-600 text-sm mb-4 line-clamp-2">{warehouse.data.description}</p>
                  
                  <div class="flex gap-2">
                    <a 
                      href={`/properties/${warehouse.data.slug}`}
                      class="flex-1 bg-gray-100 text-gray-700 text-center py-3 rounded-xl font-semibold hover:bg-gray-200 transition-colors duration-200"
                    >
                      View Details
                    </a>
                    <button 
                      onclick={`openContactModal('featured-property-${warehouse.data.slug}')`}
                      class="flex-1 bg-primary-600 text-white py-3 rounded-xl font-semibold hover:bg-primary-700 transition-colors duration-200"
                    >
                      Inquire Now
                    </button>
                  </div>
                </div>
              </div>
            ))}
          </div>

          <div class="text-center mt-12">
            <a 
              href="/properties" 
              class="inline-flex items-center bg-gray-900 text-white px-8 py-4 rounded-xl font-semibold hover:bg-gray-800 transition-colors duration-200"
            >
              View All Properties
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
      </section>
    )}

    <!-- Why Choose Us Section with Warehouse Background -->
    <section class="relative py-24 overflow-hidden">
      <!-- Background Image -->
      <div class="absolute inset-0">
        <img 
          src="/images/uploads/warehouse-hero.png" 
          alt="Modern warehouse facility" 
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gray-900/75"></div>
      </div>
      
      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl sm:text-5xl font-bold text-white mb-6">
            Why Businesses Choose Our Representation
          </h2>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto">
            We're not just brokers—we're your advocates in securing the perfect industrial space
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Zero Cost -->
          <div class="text-center p-8 bg-white/10 backdrop-blur-xl rounded-2xl border border-white/20 shadow-2xl hover:bg-white/15 transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">Zero Cost to You</h3>
            <p class="text-gray-300 leading-relaxed">
              Landlords pay all brokerage fees. Complete tenant concierge at no cost, no retainer, no obligation.
            </p>
          </div>

          <!-- Local Expertise -->
          <div class="text-center p-8 bg-white/10 backdrop-blur-xl rounded-2xl border border-white/20 shadow-2xl hover:bg-white/15 transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">South Florida Specialists</h3>
            <p class="text-gray-300 leading-relaxed">
              Deep knowledge of Miami-Dade, Broward, and Palm Beach industrial markets. We know every warehouse.
            </p>
          </div>

          <!-- Fast Results -->
          <div class="text-center p-8 bg-white/10 backdrop-blur-xl rounded-2xl border border-white/20 shadow-2xl hover:bg-white/15 transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">Lightning Fast</h3>
            <p class="text-gray-300 leading-relaxed">
              Tours scheduled efficiently. Deals negotiated quickly and fairly.
            </p>
          </div>
        </div>

        <!-- Call to Action -->
        <div class="text-center mt-16">
          <div class="inline-flex flex-col sm:flex-row gap-4">
            <button 
              onclick="openContactModal('why-choose-us-cta')"
              class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-8 py-4 rounded-2xl text-lg font-semibold hover:from-primary-700 hover:to-primary-800 hover:shadow-xl hover:-translate-y-1 transition-all duration-300 transform"
            >
              Get Free Representation
            </button>
            <a 
              href="tel:954-937-9667" 
              class="bg-white/10 backdrop-blur-sm text-white border-2 border-white/30 px-8 py-4 rounded-2xl text-lg font-semibold hover:bg-white/20 hover:border-white/50 transition-all duration-300"
            >
              Call (954) 937-9667
            </a>
          </div>
          <p class="text-gray-400 text-sm mt-4">
            Available 7 days a week • Free consultation • Fast response
          </p>
        </div>
      </div>
    </section>

    <!-- Full-Width Contact Form Section -->
    <section id="contact-form" class="py-20 bg-white">
      <div class="px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Ready to Find Your Space?</h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Tell us your requirements and we'll get back to you within 24 hours with qualified options.
          </p>
        </div>
        
        <div class="bg-gradient-to-br from-gray-50 to-gray-100 py-16">
          <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
          <form 
            name="warehouse-inquiry-modal" 
            method="POST" 
            data-netlify="true" 
            netlify-honeypot="bot-field"
            action="/success"
            class="space-y-6"
          >
            <!-- Hidden fields -->
            <input type="hidden" name="form-name" value="warehouse-inquiry-modal" />
            <input type="hidden" name="source" value="homepage-secondary" />
            <div class="hidden">
              <input name="bot-field" />
            </div>

            <!-- Name & Email Row -->
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label class="block text-gray-700 text-sm font-medium mb-2">Name *</label>
                <input 
                  type="text" 
                  name="name" 
                  required 
                  class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300"
                  placeholder="Your Name"
                />
              </div>
              <div>
                <label class="block text-gray-700 text-sm font-medium mb-2">Email *</label>
                <input 
                  type="email" 
                  name="email" 
                  required 
                  class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300"
                  placeholder="your@email.com"
                />
              </div>
            </div>

            <!-- Phone & Company Row -->
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label class="block text-gray-700 text-sm font-medium mb-2">Phone</label>
                <input 
                  type="tel" 
                  name="phone" 
                  class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all duration-300"
                  placeholder="(555) 123-4567"
