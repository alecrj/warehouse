---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

// Get all warehouses for stats and featured listings
const warehouses = await getCollection('warehouses');
const availableWarehouses = warehouses.filter((w: CollectionEntry<'warehouses'>) => w.data.availability === 'available');
const featuredWarehouses = availableWarehouses
  .filter((w: CollectionEntry<'warehouses'>) => w.data.featured)
  .slice(0, 3);

// Calculate dynamic stats
const totalProperties = availableWarehouses.length;
const totalSquareFootage = availableWarehouses.reduce((sum, w) => sum + w.data.size, 0);
const uniqueLocations = new Set(availableWarehouses.map(w => w.data.location.split(',')[0].trim())).size;
