// Key stats for animation
const stats = [
  { number: '50+', label: 'Available Properties', icon: 'M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4' },
  { number: '1M+', label: 'Sq Ft Leased', icon: 'M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4' },
  { number: '98%', label: 'Client Satisfaction', icon: 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z' },
  { number: '$0', label: 'Tenant Fees', icon: 'M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1' }
];
---

<BaseLayout 
  title="Premium Warehouse Rentals | Ariel Realty | South Florida Industrial"
  description="Find premium warehouse and industrial space across South Florida. Expert tenant representation with zero fees. Modern facilities, competitive rates, personalized service."
>
  <Navigation />
  
  <main>
    <!-- Hero Section -->
    <section class="relative pt-32 pb-20 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-blue-500/20 rounded-full blur-3xl float"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-cyan-500/20 rounded-full blur-3xl float-reverse"></div>

      <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-5xl lg:text-7xl font-black text-white leading-tight tracking-tight mb-8 gsap-fade-in">
            PREMIUM WAREHOUSE
            <span class="block text-gradient">SOLUTIONS</span>
          </h1>
          <p class="text-xl lg:text-2xl text-slate-300 max-w-4xl mx-auto leading-relaxed mb-12 gsap-fade-in">
            South Florida's premier industrial leasing experts. 
            <span class="text-gradient font-semibold">Zero tenant fees, maximum results.</span>
          </p>
          
          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-6 justify-center gsap-fade-in">
            <a href="/warehouses" class="bg-gradient-to-r from-blue-600 to-cyan-600 text-white px-8 py-4 rounded-2xl font-bold text-lg hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 shadow-xl">
              Browse Properties
            </a>
            <a href="/contact" class="bg-white/10 backdrop-blur-sm text-white border border-white/20 px-8 py-4 rounded-2xl font-semibold text-lg hover:bg-white/20 transition-all duration-300">
              Get Expert Help
            </a>
          </div>
        </div>

        <!-- Quick Stats -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 max-w-4xl mx-auto gsap-stagger">
          {stats.map((stat, index) => (
            <div class="text-center">
              <div class="w-16 h-16 bg-white/10 backdrop-blur-sm rounded-2xl flex items-center justify-center mx-auto mb-4 border border-white/20">
                <svg class="w-8 h-8 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={stat.icon}></path>
                </svg>
              </div>
              <div class="text-3xl lg:text-4xl font-black text-white mb-2">{stat.number}</div>
              <div class="text-slate-400 font-medium">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="relative py-32 bg-white overflow-hidden">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-20">
          <h2 class="text-5xl lg:text-6xl font-black text-slate-900 leading-tight tracking-tight mb-8 gsap-fade-in">
            WHY CHOOSE
            <span class="block text-gradient">ARIEL REALTY</span>
          </h2>
          <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed gsap-fade-in">
            Experience the difference of working with South Florida's most trusted warehouse leasing experts
          </p>
        </div>

        <!-- Benefits Grid -->
        <div class="grid lg:grid-cols-3 gap-12 gsap-stagger">
          <!-- Benefit 1 -->
          <div class="bg-slate-50 rounded-3xl p-8 shadow-premium hover-lift">
            <div class="w-16 h-16 bg-blue-100 rounded-2xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-slate-900 mb-4">Zero Tenant Fees</h3>
            <p class="text-slate-600 leading-relaxed">
              Our services are completely free for tenants. Landlords pay our commission, so you get expert representation at no cost.
            </p>
          </div>

          <!-- Benefit 2 -->
          <div class="bg-slate-50 rounded-3xl p-8 shadow-premium hover-lift">
            <div class="w-16 h-16 bg-green-100 rounded-2xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-slate-900 mb-4">Market Expertise</h3>
            <p class="text-slate-600 leading-relaxed">
              Deep knowledge of South Florida's industrial market helps you find the perfect space faster and negotiate better terms.
            </p>
          </div>

          <!-- Benefit 3 -->
          <div class="bg-slate-50 rounded-3xl p-8 shadow-premium hover-lift">
            <div class="w-16 h-16 bg-purple-100 rounded-2xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-slate-900 mb-4">Dedicated Support</h3>
            <p class="text-slate-600 leading-relaxed">
              Personalized service from initial search through lease signing and beyond. We're your partners in growth.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Properties Section -->
    <section class="relative py-32 bg-slate-50 overflow-hidden">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-20">
          <h2 class="text-5xl lg:text-6xl font-black text-slate-900 leading-tight tracking-tight mb-8 gsap-fade-in">
            FEATURED
            <span class="block text-gradient">PROPERTIES</span>
          </h2>
          <p class="text-xl text-slate-600 max-w-3xl mx-auto leading-relaxed gsap-fade-in">
            Discover premium warehouse spaces across South Florida's most strategic locations
          </p>
        </div>

        <!-- Properties Grid -->
        <div class="grid lg:grid-cols-3 gap-8 mb-12 gsap-stagger">
          {featuredWarehouses.map((warehouse, index) => (
            <div class="bg-white rounded-3xl overflow-hidden shadow-premium hover-lift">
              <div class="relative h-64 bg-gradient-to-br from-slate-200 to-slate-300">
                <div class="absolute inset-0 bg-gradient-to-br from-blue-500/20 to-cyan-500/20"></div>
                <div class="absolute top-4 right-4">
                  <span class="bg-green-500 text-white text-xs font-bold px-3 py-1 rounded-full">
                    AVAILABLE
                  </span>
                </div>
              </div>
              
              <div class="p-8">
                <div class="flex items-start justify-between mb-4">
                  <div>
                    <h3 class="text-xl font-bold text-slate-900 mb-2">{warehouse.title}</h3>
                    <div class="flex items-center text-slate-600 text-sm">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      </svg>
                      <span>{warehouse.location}</span>
                    </div>
                  </div>
                  <div class="text-right">
                    <div class="text-2xl font-black text-gradient">{warehouse.price}</div>
                    <div class="text-sm text-slate-500">{warehouse.size.toLocaleString()} sq ft</div>
                  </div>
                </div>
                
                <p class="text-slate-600 mb-6 leading-relaxed line-clamp-3">
                  {warehouse.description}
                </p>
                
                <!-- Features -->
                <div class="mb-6">
                  <div class="flex flex-wrap gap-2">
                    {warehouse.features.slice(0, 3).map(feature => (
                      <span class="bg-slate-100 text-slate-700 text-xs font-medium px-3 py-1 rounded-full">
                        {feature}
                      </span>
                    ))}
                    {warehouse.features.length > 3 && (
                      <span class="bg-slate-100 text-slate-700 text-xs font-medium px-3 py-1 rounded-full">
                        +{warehouse.features.length - 3} more
                      </span>
                    )}
                  </div>
                </div>
                
                <div class="flex gap-3">
                  <a href={`/warehouses/${warehouse.slug}`} class="flex-1 bg-gradient-to-r from-blue-600 to-cyan-600 text-white text-center py-3 rounded-xl font-semibold hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
                    View Details
                  </a>
                  <a href="/contact" class="px-6 py-3 border border-slate-300 text-slate-700 rounded-xl font-semibold hover:bg-slate-50 hover:border-slate-400 transition-all duration-300">
                    Inquire
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- View All Button -->
        <div class="text-center gsap-fade-in">
          <a href="/warehouses" class="inline-flex items-center bg-slate-900 text-white px-8 py-4 rounded-2xl font-semibold text-lg hover:bg-slate-800 hover:-translate-y-1 transition-all duration-300 shadow-lg">
            View All Properties
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="relative py-32 bg-gradient-to-br from-slate-900 to-slate-800 overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 bg-pattern-grid opacity-10"></div>
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl float"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-cyan-500/10 rounded-full blur-3xl float-reverse"></div>

      <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 text-center">
        <h2 class="text-5xl lg:text-6xl font-black text-white leading-tight tracking-tight mb-8 gsap-fade-in">
          READY TO FIND YOUR
          <span class="block text-gradient">PERFECT SPACE?</span>
        </h2>
        <p class="text-xl text-slate-300 max-w-3xl mx-auto leading-relaxed mb-12 gsap-fade-in">
          Let our experts guide you to the ideal warehouse solution. 
          <span class="text-gradient font-semibold">It's completely free and takes less than 5 minutes to get started.</span>
        </p>
        
        <div class="flex flex-col sm:flex-row gap-6 justify-center gsap-fade-in">
          <a href="/contact" class="bg-gradient-to-r from-blue-600 to-cyan-600 text-white px-8 py-4 rounded-2xl font-bold text-lg hover:shadow-2xl hover:-translate-y-2 transition-all duration-300 shadow-xl">
            Get Expert Help Now
          </a>
          <a href="/warehouses" class="bg-white/10 backdrop-blur-sm text-white border border-white/20 px-8 py-4 rounded-2xl font-semibold text-lg hover:bg-white/20 transition-all duration-300">
            Browse All Properties
          </a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>