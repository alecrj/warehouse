  <!-- Enhanced GSAP Animations Script -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Check if GSAP is loaded
      if (typeof gsap === 'undefined') {
        console.log('GSAP not loaded, using fallback animations');
        return;
      }

      // Register plugins
      gsap.registerPlugin(ScrollTrigger);

      // GSAP Configuration for premium animations
      gsap.config({
        nullTargetWarn: false,
        trialWarn: false
      });

      // Premium Hero Animation Timeline
      const heroTL = gsap.timeline({ delay: 0.3 });

      // Hero Badge
      heroTL.from('.hero-badge', {
        opacity: 0,
        y: 50,
        duration: 1.2,
        ease: 'power4.out'
      });

      // Hero Title Lines with Premium Stagger
      heroTL.from('.hero-line', {
        opacity: 0,
        y: 120,
        duration: 1.8,
        stagger: 0.15,
        ease: 'power4.out'
      }, '-=0.6');

      // Hero Subtitle
      heroTL.from('.hero-subtitle', {
        opacity: 0,
        y: 40,
        duration: 1.4,
        ease: 'power3.out'
      }, '-=1.2');

      // Hero CTAs
      heroTL.from('.cta-primary, .cta-secondary', {
        opacity: 0,
        y: 40,
        duration: 1.2,
        stagger: 0.2,
        ease: 'power3.out'
      }, '-=0.8');

      // Scroll Indicator
      heroTL.from('.scroll-indicator', {
        opacity: 0,
        y: 30,
        duration: 1,
        ease: 'power2.out'
      }, '-=0.5');

      // Premium Features Section Animations
      gsap.utils.toArray('.feature-card').forEach((card: Element, index: number) => {
        gsap.from(card, {
          opacity: 0,
          y: 80,
          duration: 1.5,
          delay: index * 0.2,
          ease: 'power4.out',
          scrollTrigger: {
            trigger: card,
            start: 'top 85%',
            toggleActions: 'play none none reverse'
          }
        });
      });

      // Premium Properties Animation
      gsap.utils.toArray('.property-card').forEach((card: Element, index: number) => {
        gsap.from(card, {
          opacity: 0,
          y: 100,
          duration: 1.6,
          delay: index * 0.15,
          ease: 'power4.out',
          scrollTrigger: {
            trigger: card,
            start: 'top 90%',
            toggleActions: 'play none none reverse'
          }
        });
      });

      // Section Headers Animation
      gsap.utils.toArray('.section-title').forEach((title: Element) => {
        gsap.from(title, {
          opacity: 0,
          y: 60,
          duration: 1.4,
          ease: 'power3.out',
          scrollTrigger: {
            trigger: title,
            start: 'top 85%',
            toggleActions: 'play none none reverse'
          }
        });
      });

      // Contact Options Animation
      gsap.utils.toArray('.contact-option').forEach((option: Element, index: number) => {
        gsap.from(option, {
          opacity: 0,
          y: 50,
          duration: 1.2,
          delay: index * 0.1,
          ease: 'power3.out',
          scrollTrigger: {
            trigger: '.contact-options',
            start: 'top 85%',
            toggleActions: 'play none none reverse'
          }
        });
      });

      // Parallax Effect for Floating Elements
      gsap.utils.toArray('.floating-orb-1, .floating-orb-2, .floating-orb-3').forEach((orb: Element) => {
        gsap.to(orb, {
          y: -100,
          ease: 'none',
          scrollTrigger: {
            trigger: orb,
            start: 'top bottom',
            end: 'bottom top',
            scrub: 1.5
          }
        });
      });

      // Enhanced hover animations for cards
      gsap.utils.toArray('.feature-card, .property-card').forEach((card: Element) => {
        const content = card.querySelector('.feature-content, .property-content');
        if (content) {
          card.addEventListener('mouseenter', () => {
            gsap.to(content, {
              y: -8,
              duration: 0.6,
              ease: 'power2.out'
            });
          });

          card.addEventListener('mouseleave', () => {
            gsap.to(content, {
              y: 0,
              duration: 0.6,
              ease: 'power2.out'
            });
          });
        }
      });

      // Smooth scroll for anchor links
      document.querySelectorAll('a[href^="#"]').forEach((anchor: Element) => {
        anchor.addEventListener('click', function(e: Event) {
          e.preventDefault();
          const href = (this as HTMLAnchorElement).getAttribute('href');
          if (href) {
            const target = document.querySelector(href);
            if (target) {
              gsap.to(window, {
                scrollTo: { y: target, offsetY: 100 },
                duration: 1.5,
                ease: 'power2.inOut'
              });
            }
          }
        });
      });

      console.log('ðŸš€ Premium animations loaded successfully!');
    });
  </script>
