---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get featured warehouses
let warehouses: any[] = [];
let featuredWarehouses: any[] = [];

try {
  warehouses = await getCollection('warehouses');
  featuredWarehouses = warehouses
    .filter(w => w.data.featured && w.data.availability === 'available')
    .slice(0, 6);
} catch (error) {
  console.log('No warehouses found, using empty array');
  warehouses = [];
  featuredWarehouses = [];
}

// Premium stats for Fortune 500 credibility
const stats = [
  { value: '2.5M+', label: 'SF Managed', icon: 'building', delay: '0ms' },
  { value: '150+', label: 'Enterprise Clients', icon: 'users', delay: '200ms' },
  { value: '3', label: 'Counties Served', icon: 'location', delay: '400ms' },
  { value: '< 2hr', label: 'Response Time', icon: 'clock', delay: '600ms' }
];

const services = [
  {
    title: 'Tenant Representation',
    description: 'Expert guidance through every step of your industrial real estate journey. Zero cost to tenants.',
    icon: 'handshake',
    gradient: 'from-blue-600 to-blue-800'
  },
  {
    title: 'Market Intelligence',
    description: 'Access to exclusive off-market opportunities and comprehensive market analytics.',
    icon: 'chart',
    gradient: 'from-slate-600 to-slate-800'
  },
  {
    title: 'Strategic Consulting',
    description: 'Facility planning, lease negotiations, and operational optimization strategies.',
    icon: 'strategy',
    gradient: 'from-indigo-600 to-indigo-800'
  }
];
---

<BaseLayout>
  <!-- Hero Section - Premium Corporate Design -->
  <section class="relative min-h-screen flex items-center overflow-hidden">
    <!-- Dynamic Background with Subtle Animation -->
    <div class="absolute inset-0 gradient-primary">
      <!-- Animated Grid Overlay -->
      <div class="absolute inset-0 bg-grid-pattern opacity-10"></div>
      <div class="absolute inset-0 bg-dot-pattern opacity-5"></div>
      
      <!-- Floating Elements for Depth -->
      <div class="absolute top-20 left-10 w-32 h-32 bg-white/5 rounded-full blur-xl animate-float"></div>
      <div class="absolute bottom-20 right-10 w-40 h-40 bg-blue-500/10 rounded-full blur-xl animate-float" style="animation-delay: -2s;"></div>
      <div class="absolute top-1/2 left-1/4 w-24 h-24 bg-white/5 rounded-full blur-xl animate-float" style="animation-delay: -4s;"></div>
      
      <!-- Gradient Overlay for Professional Depth -->
      <div class="absolute inset-0 bg-gradient-to-r from-slate-900/20 via-transparent to-slate-800/20"></div>
    </div>

    <!-- Hero Content -->
    <div class="relative z-10 w-full">
      <div class="container mx-auto px-4 max-w-7xl">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <!-- Left Column - Main Message -->
          <div class="text-white space-y-8">
            <!-- Eyebrow -->
            <div class="scroll-fade-in">
              <span class="text-label-lg text-blue-300 tracking-wider">
                South Florida Industrial Real Estate
              </span>
            </div>
            
            <!-- Primary Headline -->
            <div class="scroll-fade-in" style="animation-delay: 200ms;">
              <h1 class="text-display-xl lg:text-display-2xl font-bold leading-none">
                <span class="block">Premium</span>
                <span class="block bg-gradient-to-r from-white to-blue-200 bg-clip-text text-transparent">
                  Warehouse Solutions
                </span>
                <span class="block text-heading-xl lg:text-display-lg text-slate-300 mt-4">
                  for Enterprise Teams
                </span>
              </h1>
            </div>
            
            <!-- Value Proposition -->
            <div class="scroll-fade-in" style="animation-delay: 400ms;">
              <p class="text-body-xl text-slate-200 max-w-2xl leading-relaxed">
                Expert tenant representation across Miami-Dade, Broward, and Palm Beach counties. 
                Zero cost to tenants. Maximum value delivered.
              </p>
            </div>
            
            <!-- CTA Buttons -->
            <div class="scroll-fade-in flex flex-col sm:flex-row gap-4" style="animation-delay: 600ms;">
              <a href="/warehouses" class="btn-primary bg-white text-slate-900 hover:bg-slate-100 shadow-2xl">
                <span>Explore Properties</span>
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                </svg>
              </a>
              <a href="#consultation" class="btn-secondary border-white/30 text-white hover:bg-white/10">
                <span>Free Consultation</span>
              </a>
            </div>
          </div>
          
          <!-- Right Column - Interactive Stats -->
          <div class="scroll-slide-left">
            <div class="grid grid-cols-2 gap-6">
              {stats.map((stat, index) => (
                <div 
                  class="card-glass p-8 text-center transform hover:scale-105 transition-all duration-300"
                  style={`animation-delay: ${stat.delay};`}
                >
                  <div class="text-heading-lg font-bold text-white mb-2">
                    {stat.value}
                  </div>
                  <div class="text-body-sm text-slate-300 uppercase tracking-wide">
                    {stat.label}
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-white animate-bounce">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </section>

  <!-- Services Section - Storytelling Through Animation -->
  <section class="py-24 bg-slate-50">
    <div class="container mx-auto px-4 max-w-7xl">
      <!-- Section Header -->
      <div class="text-center mb-20 scroll-fade-in">
        <span class="text-label-lg text-slate-600 mb-4 block">Our Expertise</span>
        <h2 class="text-display-lg font-bold text-slate-900 mb-6">
          Enterprise-Grade<br/>
          <span class="text-blue-600">Real Estate Solutions</span>
        </h2>
        <p class="text-body-xl text-slate-600 max-w-3xl mx-auto">
          Comprehensive tenant representation services designed for businesses 
          that demand excellence and results.
        </p>
      </div>

      <!-- Services Grid -->
      <div class="grid md:grid-cols-3 gap-8">
        {services.map((service, index) => (
          <div class={`scroll-fade-in surface-elevated p-8 hover:shadow-xl transition-all duration-500 group`}
               style={`animation-delay: ${index * 200}ms;`}>
            <!-- Icon -->
            <div class={`w-16 h-16 rounded-2xl bg-gradient-to-br ${service.gradient} flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300`}>
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {service.icon === 'handshake' && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
                )}
                {service.icon === 'chart' && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                )}
                {service.icon === 'strategy' && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                )}
              </svg>
            </div>
            
            <!-- Content -->
            <h3 class="text-heading-md font-semibold text-slate-900 mb-4">
              {service.title}
            </h3>
            <p class="text-body-md text-slate-600 leading-relaxed">
              {service.description}
            </p>
            
            <!-- Learn More Link -->
            <div class="mt-6 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <a href="#" class="text-blue-600 font-medium hover:text-blue-700 inline-flex items-center">
                Learn more
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Properties Section -->
  {featuredWarehouses.length > 0 && (
    <section class="py-24 bg-white">
      <div class="container mx-auto px-4 max-w-7xl">
        <!-- Section Header -->
        <div class="flex justify-between items-end mb-16 scroll-fade-in">
          <div>
            <span class="text-label-lg text-slate-600 mb-4 block">Premium Inventory</span>
            <h2 class="text-display-lg font-bold text-slate-900">
              Featured <span class="text-blue-600">Properties</span>
            </h2>
          </div>
          <a href="/warehouses" class="btn-secondary hidden sm:inline-flex">
            View All Properties
          </a>
        </div>

        <!-- Properties Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuredWarehouses.map((warehouse, index) => (
            <div class={`scroll-scale-up group`} style={`animation-delay: ${index * 150}ms;`}>
              <div class="card-premium overflow-hidden hover:shadow-2xl transition-all duration-500">
                <!-- Image -->
                <div class="relative aspect-w-16 aspect-h-10 overflow-hidden">
                  <img 
                    src={warehouse.data.images?.[0] || '/api/placeholder/400/250'} 
                    alt={warehouse.data.title}
                    class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-500"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                  
                  <!-- Availability Badge -->
                  <div class="absolute top-4 left-4">
                    <span class="px-3 py-1 bg-green-500 text-white text-label-md rounded-full shadow-lg">
                      Available
                    </span>
                  </div>
                  
                  <!-- Quick Actions -->
                  <div class="absolute top-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <button class="w-10 h-10 bg-white/90 rounded-full flex items-center justify-center shadow-lg hover:bg-white transition-colors">
                      <svg class="w-5 h-5 text-slate-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                      </svg>
                    </button>
                  </div>
                </div>
                
                <!-- Content -->
                <div class="p-8">
                  <!-- Location -->
                  <div class="flex items-center text-slate-600 mb-3">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    </svg>
                    <span class="text-body-sm">{warehouse.data.location}</span>
                  </div>
                  
                  <!-- Title -->
                  <h3 class="text-heading-md font-semibold text-slate-900 mb-4 group-hover:text-blue-600 transition-colors">
                    {warehouse.data.title}
                  </h3>
                  
                  <!-- Stats -->
                  <div class="grid grid-cols-2 gap-4 mb-6">
                    <div class="text-center p-3 bg-slate-50 rounded-xl">
                      <div class="text-heading-md font-bold text-slate-900">
                        {warehouse.data.size.toLocaleString()}
                      </div>
                      <div class="text-body-sm text-slate-600">SF</div>
                    </div>
                    <div class="text-center p-3 bg-slate-50 rounded-xl">
                      <div class="text-heading-md font-bold text-slate-900">
                        {warehouse.data.price}
                      </div>
                      <div class="text-body-sm text-slate-600">per SF/year</div>
                    </div>
                  </div>
                  
                  <!-- Features -->
                  {warehouse.data.features && warehouse.data.features.length > 0 && (
                    <div class="mb-6">
                      <div class="flex flex-wrap gap-2">
                        {warehouse.data.features.slice(0, 3).map((feature: string) => (
                          <span class="text-label-md px-3 py-1 bg-blue-50 text-blue-700 rounded-full">
                            {feature}
                          </span>
                        ))}
                        {warehouse.data.features.length > 3 && (
                          <span class="text-label-md px-3 py-1 bg-slate-100 text-slate-600 rounded-full">
                            +{warehouse.data.features.length - 3}
                          </span>
                        )}
                      </div>
                    </div>
                  )}
                  
                  <!-- Actions -->
                  <div class="flex gap-3">
                    <a 
                      href={`/warehouses/${warehouse.data.slug}`} 
                      class="flex-1 btn-secondary text-center py-3 group-hover:border-blue-300 group-hover:text-blue-600 transition-all"
                    >
                      View Details
                    </a>
                    <a 
                      href="tel:+19549379667" 
                      class="btn-accent px-4 py-3"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
        
        <!-- Mobile CTA -->
        <div class="text-center mt-12 sm:hidden">
          <a href="/warehouses" class="btn-primary">
            View All Properties
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section id="consultation" class="py-24 gradient-primary">
    <div class="container mx-auto px-4 max-w-7xl">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- Left Column -->
        <div class="text-white scroll-slide-right">
          <span class="text-label-lg text-blue-300 mb-4 block">Ready to Get Started?</span>
          <h2 class="text-display-lg font-bold mb-6">
            Let's Find Your Perfect
            <span class="text-blue-300">Warehouse Solution</span>
          </h2>
          <p class="text-body-xl text-slate-200 mb-8 leading-relaxed">
            Our expert team is ready to help you navigate the South Florida industrial 
            real estate market. Free consultation, zero obligation.
          </p>
          
          <!-- Contact Options -->
          <div class="space-y-4">
            <a href="tel:+19549379667" class="flex items-center text-white hover:text-blue-300 transition-colors group">
              <div class="w-12 h-12 bg-white/10 rounded-full flex items-center justify-center mr-4 group-hover:bg-white/20 transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <div class="text-body-lg font-semibold">(954) 937-9667</div>
                <div class="text-body-sm text-slate-300">Call now for immediate assistance</div>
              </div>
            </a>
            
            <a href="mailto:info@arielrealty.com" class="flex items-center text-white hover:text-blue-300 transition-colors group">
              <div class="w-12 h-12 bg-white/10 rounded-full flex items-center justify-center mr-4 group-hover:bg-white/20 transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
