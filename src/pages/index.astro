---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get featured warehouses (real listings only)
const warehouses = await getCollection('warehouses');
const featuredWarehouses = warehouses
  .filter(w => w.data.featured && w.data.availability === 'available')
  .slice(0, 6);
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="section bg-surface-alt">
    <div class="container container-marketing">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Hero Content -->
        <div class="reveal">
          <h1 class="mb-6">
            South Florida Industrial<br>
            <span class="text-accent">Tenant Representation</span>
          </h1>
          <p class="text-xl text-muted mb-8 leading-relaxed">
            Expert guidance for warehouse and industrial leasing across Miami-Dade, Broward, and Palm Beach counties. Completely free for tenants.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="tel:+19549379667" class="btn btn-primary btn-lg">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              Call (954) 937-9667
            </a>
            <a href="/warehouses" class="btn btn-secondary btn-lg">
              View Properties
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
        </div>

        <!-- Lead Capture Card -->
        <div class="reveal reveal-stagger">
          <div class="card">
            <div class="card-body">
              <h3 class="mb-6">Get Matched with Properties</h3>
              <form name="lead-capture" method="POST" data-netlify="true" action="/contact" class="space-y-4">
                <input type="hidden" name="form-name" value="lead-capture" />
                <input type="hidden" name="source" value="homepage-hero" />
                <input type="hidden" name="bot-field" style="display: none;" />
                
                <div class="form-group">
                  <label class="form-label" for="name">Name</label>
                  <input type="text" id="name" name="name" class="form-input" required />
                </div>
                
                <div class="form-group">
                  <label class="form-label" for="phone">Phone</label>
                  <input type="tel" id="phone" name="phone" class="form-input" required />
                </div>
                
                <div class="form-group">
                  <label class="form-label" for="email">Email</label>
                  <input type="email" id="email" name="email" class="form-input" required />
                </div>
                
                <div class="grid grid-cols-2 gap-4">
                  <div class="form-group">
                    <label class="form-label" for="size-range">Size Needed</label>
                    <select id="size-range" name="size-range" class="form-select" required>
                      <option value="">Select size</option>
                      <option value="under-5000">Under 5,000 SF</option>
                      <option value="5000-25000">5,000 - 25,000 SF</option>
                      <option value="25000-100000">25,000 - 100,000 SF</option>
                      <option value="over-100000">Over 100,000 SF</option>
                    </select>
                  </div>
                  
                  <div class="form-group">
                    <label class="form-label" for="county">County</label>
                    <select id="county" name="county" class="form-select" required>
                      <option value="">Select county</option>
                      <option value="miami-dade">Miami-Dade</option>
                      <option value="broward">Broward</option>
                      <option value="palm-beach">Palm Beach</option>
                      <option value="multiple">Multiple Counties</option>
                    </select>
                  </div>
                </div>
                
                <div class="form-group">
                  <label class="form-label" for="timing">Timing</label>
                  <select id="timing" name="timing" class="form-select" required>
                    <option value="">When do you need space?</option>
                    <option value="immediate">Immediately</option>
                    <option value="30-days">Within 30 days</option>
                    <option value="90-days">Within 90 days</option>
                    <option value="6-months">Within 6 months</option>
                    <option value="exploring">Just exploring</option>
                  </select>
                </div>
                
                <button type="submit" class="btn btn-accent w-full btn-lg">
                  Get Matched
                  <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                  </svg>
                </button>
              </form>
              
              <p class="text-sm text-muted mt-4 text-center">
                ✓ Free consultation ✓ No obligation ✓ Expert guidance
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Credibility Strip -->
  <section class="py-16 border-b border-black/5">
    <div class="container container-marketing">
      <div class="grid md:grid-cols-4 gap-8 text-center reveal">
        <div>
          <div class="text-3xl font-semibold text-brand mb-2">500K+</div>
          <div class="text-muted">SF Leased</div>
        </div>
        <div>
          <div class="text-3xl font-semibold text-brand mb-2">3</div>
          <div class="text-muted">Counties Served</div>
        </div>
        <div>
          <div class="text-3xl font-semibold text-brand mb-2">24hrs</div>
          <div class="text-muted">Avg Response Time</div>
        </div>
        <div>
          <div class="text-3xl font-semibold text-brand mb-2">100%</div>
          <div class="text-muted">Free for Tenants</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Properties -->
  {featuredWarehouses.length > 0 && (
    <section class="section">
      <div class="container container-marketing">
        <div class="text-center mb-16 reveal">
          <h2 class="mb-6">Featured Properties</h2>
          <p class="text-xl text-muted max-w-3xl mx-auto">
            Explore premium warehouse and industrial spaces available for lease across South Florida.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuredWarehouses.map((warehouse, index) => (
            <div class="card reveal" style={`animation-delay: ${index * 100}ms`}>
              <div class="relative">
                {warehouse.data.images && warehouse.data.images[0] ? (
                  <img 
                    src={warehouse.data.images[0]} 
                    alt={warehouse.data.title}
                    class="w-full h-48 object-cover"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-48 bg-surface-alt flex items-center justify-center">
                    <svg class="w-12 h-12 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                  </div>
                )}
                <div class="absolute top-4 left-4">
                  <span class="chip active">Available</span>
                </div>
              </div>
              
              <div class="card-body">
                <h3 class="mb-3">{warehouse.data.title}</h3>
                <p class="text-muted mb-4 flex items-center">
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  </svg>
                  {warehouse.data.location}
                </p>
                
                <div class="flex items-center justify-between mb-6">
                  <div>
                    <div class="text-lg font-semibold">{warehouse.data.size.toLocaleString()} SF</div>
                    <div class="text-sm text-muted">{warehouse.data.price}</div>
                  </div>
                </div>
                
                <div class="flex gap-3">
                  <a href={`/warehouses/${warehouse.data.slug}`} class="btn btn-secondary flex-1">
                    View Details
                  </a>
                  <a href="tel:+19549379667" class="btn btn-primary">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
        
        <div class="text-center mt-12 reveal">
          <a href="/warehouses" class="btn btn-primary btn-lg">
            View All Properties
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Process Section -->
  <section class="section bg-surface-alt">
    <div class="container container-marketing">
      <div class="text-center mb-16 reveal">
        <h2 class="mb-6">How We Work</h2>
        <p class="text-xl text-muted max-w-3xl mx-auto">
          Our proven 3-step process ensures you find the perfect space with expert guidance every step of the way.
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-12">
        <div class="text-center reveal">
          <div class="w-16 h-16 bg-brand rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="text-2xl font-bold text-white">1</span>
          </div>
          <h3 class="mb-4">Discovery</h3>
          <p class="text-muted">
            We learn about your business needs, timeline, and requirements to create a targeted search strategy.
          </p>
        </div>
        
        <div class="text-center reveal reveal-stagger">
          <div class="w-16 h-16 bg-brand rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="text-2xl font-bold text-white">2</span>
          </div>
          <h3 class="mb-4">Shortlist</h3>
          <p class="text-muted">
            We present a curated selection of properties that match your criteria, including off-market opportunities.
          </p>
        </div>
        
        <div class="text-center reveal reveal-stagger">
          <div class="w-16 h-16 bg-brand rounded-full flex items-center justify-center mx-auto mb-6">
            <span class="text-2xl font-bold text-white">3</span>
          </div>
          <h3 class="mb-4">Tours & Negotiate</h3>
          <p class="text-muted">
            We coordinate property tours and handle all lease negotiations to secure the best terms for your business.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="section">
    <div class="container container-marketing">
      <div class="text-center mb-16 reveal">
        <h2 class="mb-6">What Our Clients Say</h2>
        <p class="text-xl text-muted max-w-3xl mx-auto">
          Hear from businesses we've helped find their perfect industrial space.
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="card reveal">
          <div class="card-body">
            <div class="flex mb-4">
              {[...Array(5)].map(() => (
                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              ))}
            </div>
            <blockquote class="mb-4">
              "Ariel Realty helped us find 25,000 SF in Doral. Their expertise saved us months of searching and got us under market rate."
            </blockquote>
            <footer class="text-muted">
              — M.R., Logistics Company
            </footer>
          </div>
        </div>
        
        <div class="card reveal reveal-stagger">
          <div class="card-body">
            <div class="flex mb-4">
              {[...Array(5)].map(() => (
                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              ))}
            </div>
            <blockquote class="mb-4">
              "Professional service from start to finish. They found us the perfect warehouse in Pompano Beach with dock doors and office space."
            </blockquote>
            <footer class="text-muted">
              — J.S., Manufacturing
            </footer>
          </div>
        </div>
        
        <div class="card reveal reveal-stagger">
          <div class="card-body">
            <div class="flex mb-4">
              {[...Array(5)].map(() => (
                <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              ))}
            </div>
            <blockquote class="mb-4">
              "Their market knowledge is exceptional. Found us an off-market property in Miami that was perfect for our distribution needs."
            </blockquote>
            <footer class="text-muted">
              — T.K., Distribution
            </footer>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Bottom CTA -->
  <section class="py-16 bg-brand text-white">
    <div class="container container-marketing">
      <div class="text-center reveal">
        <h2 class="text-white mb-6">Ready to Find Your Space?</h2>
        <p class="text-xl text-white/80 mb-8 max-w-3xl mx-auto">
          Get expert guidance for your warehouse search. Completely free for tenants.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="tel:+19549379667" class="btn btn-accent btn-lg">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Call (954) 937-9667
          </a>
          <a href="/contact" class="btn btn-secondary btn-lg bg-white text-brand hover:bg-white/90">
            Get Matched
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>