---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get featured warehouses
let warehouses: any[] = [];
let featuredWarehouses: any[] = [];

try {
  warehouses = await getCollection('warehouses');
  featuredWarehouses = warehouses
    .filter(w => w.data.featured && w.data.availability === 'available')
    .slice(0, 6);
} catch (error) {
  console.log('No warehouses found, using empty array');
  warehouses = [];
  featuredWarehouses = [];
}

// Service highlights for hero section
const services = [
  {
    title: 'Tenant Representation',
    description: 'Expert guidance at zero cost to tenants. We negotiate the best terms for your business.',
    icon: 'handshake',
    gradient: 'from-blue-600 to-blue-700'
  },
  {
    title: 'Market Intelligence',
    description: 'Access exclusive off-market properties and comprehensive market analytics.',
    icon: 'chart',
    gradient: 'from-slate-600 to-slate-700'
  },
  {
    title: 'Strategic Advisory',
    description: 'Facility planning, lease optimization, and long-term growth strategies.',
    icon: 'strategy',
    gradient: 'from-indigo-600 to-indigo-700'
  }
];
---

<BaseLayout>
  <!-- Hero Section - Premium Design with Consultation Form -->
  <section class="relative min-h-screen flex items-center overflow-hidden bg-gradient-to-br from-slate-900 via-slate-800 to-blue-900">
    <!-- Sophisticated Background Elements -->
    <div class="absolute inset-0">
      <!-- Animated Grid Overlay -->
      <div class="absolute inset-0" style="background-image: linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px), linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px); background-size: 80px 80px;"></div>
      
      <!-- Floating Elements for Depth -->
      <div class="hero-float-1 absolute top-20 left-10 w-32 h-32 bg-blue-500/10 rounded-full blur-xl"></div>
      <div class="hero-float-2 absolute bottom-20 right-10 w-40 h-40 bg-white/5 rounded-full blur-2xl"></div>
      <div class="hero-float-3 absolute top-1/2 left-1/4 w-24 h-24 bg-indigo-500/10 rounded-full blur-xl"></div>
      
      <!-- Professional Gradient Overlay -->
      <div class="absolute inset-0 bg-gradient-to-br from-slate-900/90 via-transparent to-blue-900/80"></div>
    </div>

    <!-- Hero Content -->
    <div class="relative z-10 w-full">
      <div class="container mx-auto px-6 lg:px-8 max-w-7xl">
        <div class="grid lg:grid-cols-12 gap-16 lg:gap-20 items-center min-h-screen py-20">
          
          <!-- Left Column - Brand Message (7 columns) -->
          <div class="lg:col-span-7 text-white space-y-10">
            <!-- Eyebrow -->
            <div class="hero-eyebrow opacity-0">
              <div class="inline-flex items-center px-4 py-2 bg-white/10 backdrop-blur-md rounded-full border border-white/20">
                <div class="w-2 h-2 bg-emerald-400 rounded-full mr-3 animate-pulse"></div>
                <span class="text-sm font-semibold tracking-wide text-blue-100">
                  South Florida's Premier Industrial Real Estate
                </span>
              </div>
            </div>
            
            <!-- Primary Headline -->
            <div class="hero-headline opacity-0">
              <h1 class="text-5xl lg:text-7xl xl:text-8xl font-black leading-[0.9] tracking-tight">
                <span class="block text-white">Premium</span>
                <span class="block bg-gradient-to-r from-blue-400 via-blue-300 to-cyan-300 bg-clip-text text-transparent">
                  Warehouse
                </span>
                <span class="block text-white">Solutions</span>
              </h1>
            </div>
            
            <!-- Value Proposition -->
            <div class="hero-description opacity-0">
              <p class="text-xl lg:text-2xl text-slate-300 leading-relaxed max-w-2xl font-light">
                Expert tenant representation across <span class="text-white font-semibold">Miami-Dade, Broward, and Palm Beach</span> counties. 
                Zero cost to tenants. Maximum value delivered.
              </p>
            </div>
            
            <!-- Trust Indicators -->
            <div class="hero-trust opacity-0">
              <div class="flex flex-wrap items-center gap-8 text-slate-400">
                <div class="flex items-center gap-3">
                  <svg class="w-5 h-5 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-sm font-medium">Licensed Brokers</span>
                </div>
                <div class="flex items-center gap-3">
                  <svg class="w-5 h-5 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-sm font-medium">15+ Years Experience</span>
                </div>
                <div class="flex items-center gap-3">
                  <svg class="w-5 h-5 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  <span class="text-sm font-medium">$500M+ Transacted</span>
                </div>
              </div>
            </div>
            
            <!-- Primary CTA -->
            <div class="hero-cta opacity-0">
              <div class="flex flex-col sm:flex-row gap-6">
                <a href="/warehouses" class="group inline-flex items-center justify-center px-8 py-4 bg-white text-slate-900 font-bold text-lg rounded-2xl hover:bg-slate-100 transition-all duration-300 transform hover:scale-105 shadow-2xl">
                  <span>Explore Properties</span>
                  <svg class="w-5 h-5 ml-3 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                  </svg>
                </a>
                <a href="tel:+19549379667" class="group inline-flex items-center justify-center px-8 py-4 border-2 border-white/30 text-white font-bold text-lg rounded-2xl hover:bg-white/10 hover:border-white/50 transition-all duration-300 backdrop-blur-sm">
                  <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                  <span>(954) 937-9667</span>
                </a>
              </div>
            </div>
          </div>
          
          <!-- Right Column - Consultation Form (5 columns) -->
          <div class="lg:col-span-5">
            <div class="hero-form opacity-0 bg-white/95 backdrop-blur-xl rounded-3xl p-8 lg:p-10 shadow-2xl border border-white/20">
              <div class="mb-8">
                <h2 class="text-2xl lg:text-3xl font-bold text-slate-900 mb-3">
                  Get Expert Consultation
                </h2>
                <p class="text-slate-600 leading-relaxed">
                  Connect with our industrial real estate experts. Free consultation, personalized recommendations.
                </p>
              </div>
              
              <form name="hero-consultation" method="POST" data-netlify="true" class="space-y-6">
                <input type="hidden" name="form-name" value="hero-consultation" />
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div class="space-y-2">
                    <label for="hero-name" class="block text-sm font-semibold text-slate-700">
                      Full Name *
                    </label>
                    <input 
                      type="text" 
                      id="hero-name" 
                      name="name" 
                      required 
                      class="w-full px-4 py-4 bg-white border border-slate-300 rounded-xl text-slate-900 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all duration-200"
                      placeholder="John Smith"
                    />
                  </div>
                  
                  <div class="space-y-2">
                    <label for="hero-company" class="block text-sm font-semibold text-slate-700">
                      Company
                    </label>
                    <input 
                      type="text" 
                      id="hero-company" 
                      name="company" 
                      class="w-full px-4 py-4 bg-white border border-slate-300 rounded-xl text-slate-900 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all duration-200"
                      placeholder="Company Name"
                    />
                  </div>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div class="space-y-2">
                    <label for="hero-email" class="block text-sm font-semibold text-slate-700">
                      Email Address *
                    </label>
                    <input 
                      type="email" 
                      id="hero-email" 
                      name="email" 
                      required 
                      class="w-full px-4 py-4 bg-white border border-slate-300 rounded-xl text-slate-900 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all duration-200"
                      placeholder="john@company.com"
                    />
                  </div>
                  
                  <div class="space-y-2">
                    <label for="hero-phone" class="block text-sm font-semibold text-slate-700">
                      Phone Number
                    </label>
                    <input 
                      type="tel" 
                      id="hero-phone" 
                      name="phone" 
                      class="w-full px-4 py-4 bg-white border border-slate-300 rounded-xl text-slate-900 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent transition-all duration-200"
                      placeholder="(954) 123-4567"
                    />
                  </div>
                </div>
                
                <div class="space-y-2">
                  <label for="hero-requirements" class="block text-sm font-semibold text-slate-700">
                    Space Requirements
                  </label>
                  <textarea 
                    id="hero-requirements" 
                    name="requirements" 
                    rows="4" 
                    class="w-full px-4 py-4 bg-white border border-slate-300 rounded-xl text-slate-900 placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:border-transparent resize-none transition-all duration-200"
                    placeholder="Tell us about your ideal warehouse space, size requirements, location preferences, and timeline..."
                  ></textarea>
                </div>
                
                <button 
                  type="submit" 
                  class="w-full bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-bold py-4 px-6 rounded-xl transition-all duration-300 transform hover:scale-[1.02] shadow-lg hover:shadow-xl"
                >
                  Request Free Consultation
                </button>
                
                <p class="text-xs text-slate-500 text-center leading-relaxed">
                  By submitting this form, you agree to be contacted by our team. 
                  <span class="font-semibold">100% free consultation</span> - no obligations.
                </p>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 text-white/60 animate-bounce">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </section>

  <!-- Services Section - Professional Spacing -->
  <section class="py-32 bg-gradient-to-b from-white to-slate-50">
    <div class="container mx-auto px-6 lg:px-8 max-w-7xl">
      <!-- Section Header -->
      <div class="text-center mb-24">
        <div class="services-eyebrow opacity-0">
          <span class="inline-flex items-center px-4 py-2 bg-blue-100 text-blue-700 rounded-full text-sm font-semibold mb-6">
            Our Expertise
          </span>
        </div>
        <div class="services-headline opacity-0">
          <h2 class="text-4xl lg:text-6xl font-bold text-slate-900 mb-8 leading-tight">
            Enterprise-Grade<br/>
            <span class="bg-gradient-to-r from-blue-600 to-blue-700 bg-clip-text text-transparent">
              Real Estate Solutions
            </span>
          </h2>
        </div>
        <div class="services-description opacity-0">
          <p class="text-xl lg:text-2xl text-slate-600 max-w-4xl mx-auto leading-relaxed">
            Comprehensive tenant representation services designed for businesses 
            that demand excellence and results.
          </p>
        </div>
      </div>

      <!-- Services Grid -->
      <div class="grid lg:grid-cols-3 gap-12 lg:gap-16">
        {services.map((service, index) => (
          <div class={`service-card opacity-0 group`}>
            <div class="relative bg-white rounded-3xl p-10 lg:p-12 shadow-lg hover:shadow-2xl transition-all duration-500 border border-slate-100 h-full">
              <!-- Icon -->
              <div class={`w-20 h-20 rounded-2xl bg-gradient-to-br ${service.gradient} flex items-center justify-center mb-8 group-hover:scale-110 group-hover:rotate-3 transition-all duration-500`}>
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  {service.icon === 'handshake' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
                  )}
                  {service.icon === 'chart' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                  )}
                  {service.icon === 'strategy' && (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                  )}
                </svg>
              </div>
              
              <!-- Content -->
              <div class="space-y-6">
                <h3 class="text-2xl lg:text-3xl font-bold text-slate-900 leading-tight">
                  {service.title}
                </h3>
                <p class="text-lg text-slate-600 leading-relaxed">
                  {service.description}
                </p>
                
                <!-- Learn More Link -->
                <div class="pt-4">
                  <a href="/services" class="inline-flex items-center text-blue-600 hover:text-blue-700 font-semibold group-hover:gap-3 gap-2 transition-all duration-300">
                    <span>Learn more</span>
                    <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Properties Section -->
  {featuredWarehouses.length > 0 && (
    <section class="py-32 bg-white">
      <div class="container mx-auto px-6 lg:px-8 max-w-7xl">
        <!-- Section Header -->
        <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between mb-20 gap-8">
          <div class="flex-1">
            <div class="properties-eyebrow opacity-0">
              <span class="inline-flex items-center px-4 py-2 bg-emerald-100 text-emerald-700 rounded-full text-sm font-semibold mb-6">
                Premium Inventory
              </span>
            </div>
            <div class="properties-headline opacity-0">
              <h2 class="text-4xl lg:text-6xl font-bold text-slate-900 leading-tight">
                Featured <br class="lg:hidden"/>
                <span class="bg-gradient-to-r from-blue-600 to-blue-700 bg-clip-text text-transparent">
                  Properties
                </span>
              </h2>
            </div>
          </div>
          <div class="properties-cta opacity-0">
            <a href="/warehouses" class="inline-flex items-center px-8 py-4 bg-slate-900 hover:bg-slate-800 text-white font-bold rounded-2xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
              <span>View All Properties</span>
              <svg class="w-5 h-5 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Properties Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-10 lg:gap-12">
          {featuredWarehouses.map((warehouse, index) => (
            <div class={`property-card opacity-0 group`}>
              <div class="bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 overflow-hidden border border-slate-100">
                <!-- Image -->
                <div class="relative aspect-w-16 aspect-h-10 overflow-hidden">
                  <img 
                    src={warehouse.data.images?.[0] || '/api/placeholder/400/250'} 
                    alt={warehouse.data.title}
                    class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-700"
                    loading="lazy"
                  />
                  
                  <!-- Overlay -->
                  <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                  
                  <!-- Status Badge -->
                  <div class="absolute top-6 left-6">
                    <span class="inline-flex items-center px-3 py-2 bg-emerald-500 text-white text-sm font-bold rounded-full shadow-lg">
                      <div class="w-2 h-2 bg-white rounded-full mr-2"></div>
                      Available Now
                    </span>
                  </div>
                  
                  <!-- Quick Actions -->
                  <div class="absolute top-6 right-6 opacity-0 group-hover:opacity-100 transition-all duration-300 flex gap-2">
                    <button class="w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center shadow-lg hover:bg-white transition-colors" title="Save Property">
                      <svg class="w-5 h-5 text-slate-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                      </svg>
                    </button>
                    <button class="w-10 h-10 bg-white/90 backdrop-blur-sm rounded-full flex items-center justify-center shadow-lg hover:bg-white transition-colors" title="Share Property">
                      <svg class="w-5 h-5 text-slate-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"/>
                      </svg>
                    </button>
                  </div>
                </div>
                
                <!-- Content -->
                <div class="p-8 lg:p-10">
                  <!-- Location -->
                  <div class="flex items-center text-slate-600 mb-4">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    </svg>
                    <span class="text-sm font-medium">{warehouse.data.location}</span>
                  </div>
                  
                  <!-- Title -->
                  <h3 class="text-xl lg:text-2xl font-bold text-slate-900 mb-6 leading-tight group-hover:text-blue-600 transition-colors duration-300">
                    {warehouse.data.title}
                  </h3>
                  
                  <!-- Stats -->
                  <div class="grid grid-cols-2 gap-4 mb-8">
                    <div class="text-center p-4 bg-slate-50 rounded-xl border border-slate-100">
                      <div class="text-xl lg:text-2xl font-bold text-slate-900">
                        {warehouse.data.size.toLocaleString()}
                      </div>
                      <div class="text-sm text-slate-600 font-medium">Square Feet</div>
                    </div>
                    <div class="text-center p-4 bg-slate-50 rounded-xl border border-slate-100">
                      <div class="text-xl lg:text-2xl font-bold text-slate-900">
                        {warehouse.data.price}
                      </div>
                      <div class="text-sm text-slate-600 font-medium">per SF/year</div>
                    </div>
                  </div>
                  
                  <!-- Features -->
                  {warehouse.data.features && warehouse.data.features.length > 0 && (
                    <div class="mb-8">
                      <div class="flex flex-wrap gap-2">
                        {warehouse.data.features.slice(0, 3).map((feature: string) => (
                          <span class="px-3 py-1 bg-blue-50 text-blue-700 text-sm font-medium rounded-full border border-blue-100">
                            {feature}
                          </span>
                        ))}
                        {warehouse.data.features.length > 3 && (
                          <span class="px-3 py-1 bg-slate-100 text-slate-600 text-sm font-medium rounded-full border border-slate-200">
                            +{warehouse.data.features.length - 3} more
                          </span>
                        )}
                      </div>
                    </div>
                  )}
                  
                  <!-- Actions -->
                  <div class="flex gap-4">
                    <a 
                      href={`/warehouses/${warehouse.data.slug}`} 
                      class="flex-1 text-center px-6 py-4 border-2 border-slate-300 text-slate-700 font-bold rounded-xl hover:border-blue-300 hover:text-blue-600 transition-all duration-300 group-hover:border-blue-300 group-hover:text-blue-600"
                    >
                      View Details
                    </a>
                    <a 
                      href="tel:+19549379667" 
                      class="px-6 py-4 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
                      title="Call Now"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Section -->
  <section class="py-32 bg-gradient-to-br from-slate-900 via-slate-800 to-blue-900 relative overflow-hidden">
