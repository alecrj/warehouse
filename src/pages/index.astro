<script>
  // Scroll-triggered animations
  const animateOnScroll = () => {
    const elements = document.querySelectorAll('.animate-on-scroll');
    
    elements.forEach(element => {
      const elementTop = element.getBoundingClientRect().top;
      const elementVisible = 150;
      
      if (elementTop < window.innerHeight - elementVisible) {
        element.classList.add('animated');
      }
    });
  };

  // Run on page load and scroll
  window.addEventListener('scroll', animateOnScroll);
  window.addEventListener('load', animateOnScroll);
  
  // Initial check
  animateOnScroll();

  // Handle hero form submission
  document.addEventListener('DOMContentLoaded', function() {
    const heroForm = document.querySelector('form[name="warehouse-inquiry-hero"]');
    const warehouseSelect = document.getElementById('hero-property-interest');
    const warehouseIdInput = document.getElementById('hero-warehouse-id');
    
    // Handle warehouse selection to populate warehouse_id
    if (warehouseSelect && warehouseIdInput) {
      warehouseSelect.addEventListener('change', function() {
        const selectedOption = this.options[this.selectedIndex];
        const warehouseId = selectedOption.getAttribute('data-warehouse-id');
        warehouseIdInput.value = warehouseId || '';
      });
    }

    // Handle hero form submission via process-lead function
    if (heroForm) {
      heroForm.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const submitBtn = heroForm.querySelector('button[type="submit"]');
        const originalText = submitBtn.textContent;
        
        // Show loading state
        submitBtn.disabled = true;
        submitBtn.textContent = 'Submitting...';
        
        try {
          // Collect form data
          const formData = new FormData(heroForm);
          const data = Object.fromEntries(formData.entries());
          
          // Add source
          data.source = 'hero_form';
          
          // Submit to our CRM function
          const response = await fetch('/.netlify/functions/process-lead', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
          });

          if (response.ok) {
            // Show success message
            submitBtn.textContent = 'Success! We\'ll contact you soon.';
            submitBtn.style.backgroundColor = '#10b981';
            
            // Reset form after delay
            setTimeout(() => {
              heroForm.reset();
              submitBtn.disabled = false;
              submitBtn.textContent = originalText;
              submitBtn.style.backgroundColor = '';
            }, 3000);
          } else {
            throw new Error('Submission failed');
          }
        } catch (error) {
          console.error('Error submitting form:', error);
          alert('There was an error submitting your inquiry. Please try again or call us directly at (954) 937-9667.');
          
          // Reset button state
          submitBtn.disabled = false;
          submitBtn.textContent = originalText;
        }
      });
    }
  });
</script>