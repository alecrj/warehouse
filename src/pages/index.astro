---
// Clean homepage with proper TypeScript and consistent design
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import { getCollection } from 'astro:content';

// Define proper types
interface WarehouseData {
  title: string;
  location: string;
  price: string;
  size: number;
  description: string;
  images?: string[];
  features?: string[];
  featured?: boolean;
  availability?: string;
  slug: string;
}

interface Warehouse {
  data: WarehouseData;
}

// Get warehouse data for featured properties
let featuredWarehouses: Warehouse[] = [];
try {
  const allWarehouses = await getCollection('warehouses');
  featuredWarehouses = allWarehouses.filter((w: any) => w.data.featured).slice(0, 3);
} catch (error) {
  console.log('No warehouse data yet');
}
---

<BaseLayout 
  title="Premium Warehouse Solutions | Ariel Realty Group"
  description="South Florida's premier industrial tenant representation firm. Find your perfect warehouse space with zero fees and expert guidance."
>
  <Navigation />
  
  <main>
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 overflow-hidden">
      <!-- Background Elements -->
      <div class="absolute inset-0">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary-500/10 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-blue-500/10 rounded-full blur-3xl animate-float-reverse"></div>
        <div class="absolute inset-0 bg-pattern-grid opacity-20"></div>
      </div>

      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
        <div class="text-center space-y-8">
          <!-- Main Headline -->
          <h1 class="text-5xl sm:text-6xl lg:text-7xl font-black text-white leading-tight tracking-tight animate-on-scroll">
            FIND YOUR PERFECT
            <span class="block bg-gradient-to-r from-primary-400 to-blue-400 bg-clip-text text-transparent">
              WAREHOUSE SPACE
            </span>
          </h1>

          <!-- Subheading -->
          <p class="text-xl sm:text-2xl text-gray-300 max-w-4xl mx-auto leading-relaxed animate-on-scroll">
            South Florida's premier industrial tenant representation firm. 
            <span class="text-white font-semibold">Zero fees. Expert guidance. Perfect matches.</span>
          </p>

          <!-- Trust Indicators -->
          <div class="flex flex-wrap justify-center items-center gap-6 text-gray-400 text-sm animate-on-scroll">
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
              <span>100% Free Service</span>
            </div>
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>Expert Representation</span>
            </div>
            <div class="flex items-center space-x-2">
              <svg class="w-5 h-5 text-purple-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
              </svg>
              <span>20+ Years Experience</span>
            </div>
          </div>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center animate-on-scroll">
            <a 
              href="/contact" 
              class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-8 py-4 rounded-2xl text-lg font-semibold hover:from-primary-700 hover:to-primary-800 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 transform"
            >
              Get Expert Help Now
            </a>
            <a 
              href="/warehouses" 
              class="bg-white/10 backdrop-blur-sm text-white border-2 border-white/20 px-8 py-4 rounded-2xl text-lg font-semibold hover:bg-white/20 hover:border-white/30 transition-all duration-300"
            >
              Browse Properties
            </a>
          </div>
        </div>
      </div>

      <!-- Scroll Indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <svg class="w-6 h-6 text-white/60" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
      </div>
    </section>

    <!-- Services Preview -->
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16 animate-on-scroll">
          <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
            Why Choose Ariel Realty?
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            We specialize in industrial tenant representation across South Florida, 
            offering comprehensive services at no cost to tenants.
          </p>
        </div>

        <!-- Services Grid -->
        <div class="grid md:grid-cols-3 gap-8 stagger-children">
          <!-- Service 1 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">100% Free Service</h3>
            <p class="text-gray-600 leading-relaxed">
              Our comprehensive tenant representation services are completely free. 
              We're compensated by landlords, never by tenants.
            </p>
          </div>

          <!-- Service 2 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Expert Negotiation</h3>
            <p class="text-gray-600 leading-relaxed">
              20+ years of experience negotiating the best terms for tenants. 
              We know the market and fight for your interests.
            </p>
          </div>

          <!-- Service 3 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Perfect Matches</h3>
            <p class="text-gray-600 leading-relaxed">
              We understand your unique requirements and find properties that 
              perfectly match your operational needs and budget.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Properties -->
    {featuredWarehouses.length > 0 && (
      <section class="py-24 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <!-- Section Header -->
          <div class="text-center mb-16 animate-on-scroll">
            <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
              Featured Properties
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
              Discover premium warehouse spaces across South Florida, 
              from small bay warehouses to large distribution centers.
            </p>
          </div>

          <!-- Properties Grid -->
          <div class="grid lg:grid-cols-3 gap-8 stagger-children">
            {featuredWarehouses.map((warehouse: Warehouse) => (
              <div class="bg-white rounded-3xl overflow-hidden shadow-md hover:shadow-xl hover:-translate-y-2 transition-all duration-300 transform">
                <!-- Property Image -->
                <div class="relative h-64 bg-gradient-to-br from-gray-200 to-gray-300">
                  {warehouse.data.images && warehouse.data.images.length > 0 ? (
                    <img 
                      src={warehouse.data.images[0]} 
                      alt={warehouse.data.title}
                      class="w-full h-full object-cover"
                      loading="lazy"
                    />
                  ) : (
                    <div class="w-full h-full flex items-center justify-center">
                      <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                      </svg>
                    </div>
                  )}
                  
                  <!-- Featured Badge -->
                  <div class="absolute top-4 left-4">
                    <span class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-3 py-1 rounded-full text-sm font-semibold">
                      Featured
                    </span>
                  </div>
                </div>

                <!-- Property Details -->
                <div class="p-6">
                  <div class="flex justify-between items-start mb-4">
                    <div>
                      <h3 class="text-xl font-bold text-gray-900 mb-2 line-clamp-1">
                        {warehouse.data.title}
                      </h3>
                      <p class="text-gray-600 font-medium">
                        {warehouse.data.location}
                      </p>
                    </div>
                    <div class="text-right">
                      <div class="text-2xl font-bold text-primary-600">
                        {warehouse.data.price}
                      </div>
                      <div class="text-sm text-gray-500">
                        {warehouse.data.size?.toLocaleString()} sq ft
                      </div>
                    </div>
                  </div>

                  <p class="text-gray-600 mb-6 leading-relaxed line-clamp-2">
                    {warehouse.data.description}
                  </p>

                  <!-- Features -->
                  {warehouse.data.features && warehouse.data.features.length > 0 && (
                    <div class="mb-6">
                      <div class="flex flex-wrap gap-2">
                        {warehouse.data.features.slice(0, 3).map((feature: string) => (
                          <span class="bg-gray-100 text-gray-700 text-xs font-medium px-3 py-1 rounded-full">
                            {feature}
                          </span>
                        ))}
                        {warehouse.data.features.length > 3 && (
                          <span class="bg-gray-100 text-gray-700 text-xs font-medium px-3 py-1 rounded-full">
                            +{warehouse.data.features.length - 3} more
                          </span>
                        )}
                      </div>
                    </div>
                  )}

                  <!-- Action Buttons -->
                  <div class="flex gap-3">
                    <a 
                      href={`/warehouses/${warehouse.data.slug}`} 
                      class="flex-1 bg-gradient-to-r from-primary-600 to-primary-700 text-white text-center py-3 rounded-xl font-semibold hover:from-primary-700 hover:to-primary-800 hover:shadow-lg hover:-translate-y-0.5 transition-all duration-200 transform"
                    >
                      View Details
                    </a>
                    <a 
                      href="/contact" 
                      class="px-6 py-3 border-2 border-gray-200 text-gray-700 rounded-xl font-semibold hover:bg-gray-50 hover:border-gray-300 transition-all duration-200"
                    >
                      Inquire
                    </a>
                  </div>
                </div>
              </div>
            ))}
          </div>

          <!-- View All Button -->
          <div class="text-center mt-12 animate-on-scroll">
            <a 
              href="/warehouses" 
              class="inline-flex items-center bg-gray-900 text-white px-8 py-4 rounded-2xl font-semibold hover:bg-gray-800 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 transform"
            >
              View All Properties
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </div>
      </section>
    )}

    <!-- Call to Action -->
    <section class="py-24 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl sm:text-5xl font-bold text-white mb-6 animate-on-scroll">
          Ready to Find Your
          <span class="block bg-gradient-to-r from-primary-400 to-blue-400 bg-clip-text text-transparent">
            Perfect Warehouse?
          </span>
        </h2>
        
        <p class="text-xl text-gray-300 mb-10 animate-on-scroll">
          Let our experts guide you to the ideal warehouse solution. 
          <span class="text-white font-semibold">It's completely free and takes less than 5 minutes to get started.</span>
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center animate-on-scroll">
          <a 
            href="/contact" 
            class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-8 py-4 rounded-2xl text-lg font-semibold hover:from-primary-700 hover:to-primary-800 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 transform"
          >
            Get Expert Help Now
          </a>
          <a 
            href="/warehouses" 
            class="bg-white/10 backdrop-blur-sm text-white border-2 border-white/20 px-8 py-4 rounded-2xl text-lg font-semibold hover:bg-white/20 hover:border-white/30 transition-all duration-300"
          >
            Browse All Properties
          </a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>