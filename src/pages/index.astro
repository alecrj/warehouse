---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get featured warehouses from CMS
const allWarehouses = await getCollection('warehouses');
const featuredWarehouses = allWarehouses
  .filter(warehouse => warehouse.data.featured && warehouse.data.availability === 'available')
  .slice(0, 3);

// If no featured warehouses, show first 3 available
const displayWarehouses = featuredWarehouses.length > 0 
  ? featuredWarehouses 
  : allWarehouses.filter(w => w.data.availability === 'available').slice(0, 3);
---

<BaseLayout 
  title="Find Your Perfect Warehouse in South Florida | Ariel Realty Group"
  description="Free tenant representation for your next warehouse lease, powered by Ariel Realty Group. From 500 SF to 500,000 SF - we've got you covered in South Florida."
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900 min-h-screen flex items-center">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.1"%3E%3Cpath d="M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] bg-repeat"></div>
    </div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 py-20">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- Hero Content -->
        <div class="scroll-fade-in">
          <div class="mb-8">
            <span class="inline-flex items-center px-4 py-2 rounded-full bg-blue-500/20 text-blue-300 text-sm font-medium border border-blue-400/30 backdrop-blur-sm">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              South Florida Industrial Experts
            </span>
          </div>

          <h1 class="text-5xl lg:text-7xl font-black text-white leading-tight mb-8">
            Find Your Perfect <span class="bg-gradient-to-r from-blue-400 to-cyan-400 bg-clip-text text-transparent">Warehouse</span> in South Florida
          </h1>
          
          <p class="text-xl lg:text-2xl text-slate-300 font-light leading-relaxed mb-6">
            Free tenant representation for your next warehouse lease, powered by <span class="font-semibold text-white">Ariel Realty Group</span>.
          </p>

          <p class="text-lg text-slate-400 mb-12 leading-relaxed">
            Whether you need a small 500 SF workshop or a 500,000 SF distribution space, we've got you covered.
          </p>

          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-6 mb-12">
            <a 
              href="#search" 
              class="btn-accent text-lg px-8 py-4 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-bold rounded-2xl transition-all duration-300 transform hover:scale-105 shadow-2xl inline-flex items-center justify-center group"
            >
              <span>Get Free Tenant Representation</span>
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </a>
            
            <a 
              href="tel:954-937-9667" 
              class="btn-secondary text-lg px-8 py-4 border-2 border-white/30 text-white hover:border-white hover:bg-white/10 font-semibold rounded-2xl transition-all duration-300 backdrop-blur-sm inline-flex items-center justify-center group"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <span>Call: 954-937-9667</span>
            </a>
          </div>

          <!-- Trust Indicators -->
          <div class="flex flex-wrap gap-8 text-white/70">
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="font-medium">500,000+ SF Leased</span>
            </div>
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="font-medium">Completely Free Service</span>
            </div>
            <div class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="font-medium">Local Market Experts</span>
            </div>
          </div>
        </div>

        <!-- Hero Visual -->
        <div class="scroll-scale-up">
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-blue-600/20 to-indigo-600/20 rounded-3xl blur-3xl"></div>
            <div class="relative bg-white/10 backdrop-blur-xl rounded-3xl p-8 border border-white/20">
              <div class="grid grid-cols-2 gap-4">
                <div class="text-center p-4 bg-white/10 rounded-2xl">
                  <div class="text-3xl font-bold text-white mb-1">500</div>
                  <div class="text-sm text-slate-300">SF Minimum</div>
                </div>
                <div class="text-center p-4 bg-white/10 rounded-2xl">
                  <div class="text-3xl font-bold text-white mb-1">500K</div>
                  <div class="text-sm text-slate-300">SF Maximum</div>
                </div>
                <div class="text-center p-4 bg-white/10 rounded-2xl">
                  <div class="text-3xl font-bold text-white mb-1">Free</div>
                  <div class="text-sm text-slate-300">For Tenants</div>
                </div>
                <div class="text-center p-4 bg-white/10 rounded-2xl">
                  <div class="text-3xl font-bold text-white mb-1">Expert</div>
                  <div class="text-sm text-slate-300">Negotiation</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Search Section -->
  <section id="search" class="py-16 bg-white relative">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl lg:text-5xl font-bold text-slate-900 mb-4">
          Start Your <span class="bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">Warehouse Search</span>
        </h2>
        <p class="text-xl text-slate-600 max-w-2xl mx-auto">
          Tell us what you need and we'll match you with perfect properties across South Florida
        </p>
      </div>

      <!-- Search Form -->
      <div class="max-w-4xl mx-auto">
        <form class="card-premium p-8 bg-gradient-to-r from-slate-50 to-blue-50" action="/contact" method="GET">
          <div class="grid md:grid-cols-3 gap-6 mb-8">
            <div>
              <label for="size" class="block text-sm font-semibold text-slate-700 mb-2">Square Footage Needed</label>
              <select name="size" id="size" class="w-full px-4 py-3 rounded-xl border-2 border-slate-200 focus:border-blue-500 focus:outline-none transition-colors">
                <option value="">Select size range</option>
                <option value="500-5000">500 - 5,000 SF</option>
                <option value="5000-25000">5,000 - 25,000 SF</option>
                <option value="25000-100000">25,000 - 100,000 SF</option>
                <option value="100000+">100,000+ SF</option>
              </select>
            </div>
            
            <div>
              <label for="location" class="block text-sm font-semibold text-slate-700 mb-2">Preferred Location</label>
              <select name="location" id="location" class="w-full px-4 py-3 rounded-xl border-2 border-slate-200 focus:border-blue-500 focus:outline-none transition-colors">
                <option value="">Any location</option>
                <option value="miami-dade">Miami-Dade County</option>
                <option value="broward">Broward County</option>
                <option value="palm-beach">Palm Beach County</option>
              </select>
            </div>
            
            <div>
              <label for="budget" class="block text-sm font-semibold text-slate-700 mb-2">Budget per SF/Year</label>
              <select name="budget" id="budget" class="w-full px-4 py-3 rounded-xl border-2 border-slate-200 focus:border-blue-500 focus:outline-none transition-colors">
                <option value="">Select budget</option>
                <option value="0-10">Under $10</option>
                <option value="10-15">$10 - $15</option>
                <option value="15-20">$15 - $20</option>
                <option value="20+">$20+</option>
              </select>
            </div>
          </div>
          
          <div class="text-center">
            <button 
              type="submit" 
              class="btn-accent px-8 py-4 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-bold text-lg rounded-2xl transition-all duration-300 transform hover:scale-105 shadow-xl inline-flex items-center group"
            >
              <span>Get Matched with Warehouses</span>
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>

  <!-- Featured Properties -->
  {displayWarehouses.length > 0 && (
    <section class="py-20 bg-slate-50">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl lg:text-5xl font-bold text-slate-900 mb-4">
            Featured <span class="bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">Properties</span>
          </h2>
          <p class="text-xl text-slate-600 max-w-2xl mx-auto mb-8">
            Premium warehouse spaces with expert representation by Ariel Realty Group
          </p>
          <a 
            href="/warehouses" 
            class="inline-flex items-center text-blue-600 hover:text-blue-700 font-semibold group"
          >
            <span>View All Properties</span>
            <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {displayWarehouses.map((warehouse, index) => (
            <div 
              class="property-card scroll-scale-up group"
              style={`animation-delay: ${index * 100}ms;`}
            >
              <div class="card-premium overflow-hidden hover:shadow-2xl transition-all duration-500">
                <!-- Image -->
                <div class="relative aspect-w-16 aspect-h-10 overflow-hidden">
                  <img 
                    src={warehouse.data.images?.[0] || '/images/warehouse-placeholder.jpg'}
                    alt={warehouse.data.title}
                    class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-700"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent"></div>
                  <div class="absolute top-4 left-4">
                    <span class={`px-3 py-1 rounded-full text-sm font-medium ${
                      warehouse.data.availability === 'available' 
                        ? 'bg-green-500 text-white' 
                        : 'bg-amber-500 text-white'
                    }`}>
                      {warehouse.data.availability === 'available' ? 'Available' : 'Coming Soon'}
                    </span>
                  </div>
                  {warehouse.data.featured && (
                    <div class="absolute top-4 right-4">
                      <span class="px-3 py-1 bg-blue-500 text-white text-sm font-medium rounded-full">
                        Featured
                      </span>
                    </div>
                  )}
                </div>
                
                <!-- Content -->
                <div class="p-6">
                  <div class="flex items-center text-slate-600 mb-2">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    </svg>
                    <span class="text-sm">{warehouse.data.location}</span>
                  </div>
                  
                  <h3 class="text-xl font-bold text-slate-900 mb-4 group-hover:text-blue-600 transition-colors">
                    {warehouse.data.title}
                  </h3>
                  
                  <!-- Stats -->
                  <div class="grid grid-cols-2 gap-4 mb-6">
                    <div class="text-center p-3 bg-slate-50 rounded-lg">
                      <div class="text-lg font-bold text-slate-900">
                        {warehouse.data.size.toLocaleString()}
                      </div>
                      <div class="text-sm text-slate-600">Square Feet</div>
                    </div>
                    <div class="text-center p-3 bg-slate-50 rounded-lg">
                      <div class="text-lg font-bold text-slate-900">
                        {warehouse.data.price}
                      </div>
                      <div class="text-sm text-slate-600">per SF/year</div>
                    </div>
                  </div>
                  
                  <!-- Features -->
                  {warehouse.data.features && warehouse.data.features.length > 0 && (
                    <div class="mb-6">
                      <div class="flex flex-wrap gap-2">
                        {warehouse.data.features.slice(0, 2).map((feature: string) => (
                          <span class="text-sm px-3 py-1 bg-blue-50 text-blue-700 rounded-full">
                            {feature}
                          </span>
                        ))}
                        {warehouse.data.features.length > 2 && (
                          <span class="text-sm px-3 py-1 bg-slate-100 text-slate-600 rounded-full">
                            +{warehouse.data.features.length - 2} more
                          </span>
                        )}
                      </div>
                    </div>
                  )}
                  
                  <!-- Action -->
                  <a 
                    href={`/warehouses/${warehouse.data.slug}`} 
                    class="w-full btn-secondary border-2 border-slate-200 text-slate-700 hover:border-blue-300 hover:text-blue-600 font-semibold py-3 rounded-xl transition-colors text-center inline-block group"
                  >
                    <span>View Details</span>
                    <svg class="w-4 h-4 ml-2 inline group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
        
        <div class="text-center mt-12">
          <a 
            href="/warehouses" 
            class="btn-accent px-8 py-4 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-bold text-lg rounded-2xl transition-all duration-300 transform hover:scale-105 shadow-xl inline-flex items-center group"
          >
            <span>View All Properties</span>
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- About Us Section -->
  <section id="about" class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="scroll-fade-in">
          <h2 class="text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
            About <span class="bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">Ariel Realty Group</span>
          </h2>
          <p class="text-xl text-slate-600 mb-8 leading-relaxed">
            Ariel Realty Group specializes in industrial tenant representation with over 500,000 SF leased for tenants across South Florida.
          </p>
          <div class="space-y-6">
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-slate-900 mb-2">Local Expertise</h3>
                <p class="text-slate-600">Deep South Florida market knowledge and strong relationships with landlords and developers.</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-slate-900 mb-2">Completely Free Service</h3>
                <p class="text-slate-600">Concierge-style tenant representation at no cost to you - landlords pay our fees.</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-slate-900 mb-2">Proven Track Record</h3>
                <p class="text-slate-600">Over 500,000 SF successfully leased for tenants with expert negotiation and market guidance.</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="scroll-scale-up">
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-r from-blue-600/20 to-indigo-600/20 rounded-3xl blur-3xl"></div>
            <div class="relative bg-gradient-to-br from-slate-50 to-blue-50 rounded-3xl p-8 border border-slate-200">
              <div class="grid grid-cols-2 gap-6">
                <div class="text-center">
                  <div class="text-4xl font-bold text-blue-600 mb-2">500K+</div>
                  <div class="text-sm text-slate-600">SF Leased</div>
                </div>
                <div class="text-center">
                  <div class="text-4xl font-bold text-green-600 mb-2">Free</div>
                  <div class="text-sm text-slate-600">For Tenants</div>
                </div>
                <div class="text-center">
                  <div class="text-4xl font-bold text-purple-600 mb-2">Expert</div>
                  <div class="text-sm text-slate-600">Negotiation</div>
                </div>
                <div class="text-center">
                  <div class="text-4xl font-bold text-indigo-600 mb-2">Local</div>
                  <div class="text-sm text-slate-600">Market Focus</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-20 bg-slate-50">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl lg:text-5xl font-bold text-slate-900 mb-4">
          Our <span class="bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">Services</span>
        </h2>
        <p class="text-xl text-slate-600 max-w-2xl mx-auto">
          Comprehensive tenant representation from search to signing - provided by Ariel Realty Group at no cost to the tenant
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="scroll-scale-up text-center">
          <div class="w-16 h-16 bg-blue-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-slate-900 mb-4">Property Search</h3>
          <p class="text-slate-600">Access to both on-market & off-market opportunities across South Florida.</p>
        </div>
        
        <div class="scroll-scale-up text-center" style="animation-delay: 100ms;">
          <div class="w-16 h-16 bg-green-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-slate-900 mb-4">Lease Negotiation</h3>
