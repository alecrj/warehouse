---
import BaseLayout from '../layouts/BaseLayout.astro';

// Enhanced type definitions for warehouse data
interface WarehouseData {
  id: string;
  title: string;
  slug: string;
  price: string;
  size: number;
  location: string;
  address: string;
  features: string[];
  images: string[];
  description: string;
  availability: 'available' | 'leased' | 'pending';
  featured: boolean;
  createdAt: string;
}

interface WarehouseCollection {
  data: WarehouseData;
  id: string;
  collection: string;
}

// Load warehouses with proper typing
const displayWarehouses: WarehouseCollection[] = [
  {
    id: 'warehouse-1',
    collection: 'warehouses',
    data: {
      id: 'warehouse-1',
      title: 'Modern Distribution Center',
      slug: 'modern-distribution-center',
      price: '$12/sq ft/year',
      size: 50000,
      location: 'Miami, FL',
      address: '123 Industrial Blvd, Miami, FL 33178',
      features: ['Dock High', '24/7 Access', 'Climate Controlled'],
      images: ['/images/warehouse-1.jpg', '/images/warehouse-1-2.jpg'],
      description: 'Premium warehouse space with modern amenities',
      availability: 'available' as const,
      featured: true,
      createdAt: '2024-01-15'
    }
  },
  {
    id: 'warehouse-2', 
    collection: 'warehouses',
    data: {
      id: 'warehouse-2',
      title: 'Flex Space Industrial',
      slug: 'flex-space-industrial',
      price: '$15/sq ft/year',
      size: 25000,
      location: 'Fort Lauderdale, FL',
      address: '456 Commerce Way, Fort Lauderdale, FL 33309',
      features: ['Office Space', 'Loading Docks', 'Parking'],
      images: ['/images/warehouse-2.jpg'],
      description: 'Flexible industrial space perfect for growing businesses',
      availability: 'available' as const,
      featured: true,
      createdAt: '2024-01-20'
    }
  },
  {
    id: 'warehouse-3',
    collection: 'warehouses', 
    data: {
      id: 'warehouse-3',
      title: 'Logistics Hub Premium',
      slug: 'logistics-hub-premium',
      price: '$18/sq ft/year',
      size: 75000,
      location: 'Doral, FL',
      address: '789 Logistics Dr, Doral, FL 33172',
      features: ['Rail Access', 'Cross Dock', 'Security'],
      images: ['/images/warehouse-3.jpg'],
      description: 'State-of-the-art logistics facility with premium features',
      availability: 'pending' as const,
      featured: true,
      createdAt: '2024-01-25'
    }
  }
];

// Filter to only featured warehouses for homepage
const featuredWarehouses = displayWarehouses.filter(warehouse => warehouse.data.featured);
---

<BaseLayout 
  title="Premium Warehouse Leasing | Ariel Realty Group"
  description="Find your perfect warehouse space in South Florida. Expert tenant representation, premium properties, and unmatched service."
>
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900">
    <!-- Background Pattern -->
    <div class="absolute inset-0 bg-pattern-grid opacity-20"></div>
    
    <!-- Floating Elements -->
    <div class="absolute top-20 left-10 w-20 h-20 bg-blue-500/20 rounded-full blur-xl float"></div>
    <div class="absolute bottom-32 right-16 w-32 h-32 bg-cyan-500/20 rounded-full blur-xl float-reverse"></div>
    <div class="absolute top-1/2 left-1/4 w-16 h-16 bg-purple-500/20 rounded-full blur-xl float"></div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8 text-center">
      <!-- Hero Content -->
      <div class="gsap-fade-in">
        <h1 class="text-5xl lg:text-7xl font-black text-white leading-tight tracking-tight mb-8">
          PREMIUM
          <span class="block text-gradient">WAREHOUSE</span>
          <span class="block text-white">LEASING</span>
        </h1>
      </div>
      
      <div class="gsap-fade-in">
        <p class="text-xl lg:text-2xl text-slate-300 max-w-4xl mx-auto mb-12 leading-relaxed">
          Expert tenant representation for South Florida's most sought-after industrial properties. 
          <span class="text-gradient font-semibold">Zero fees. Maximum value.</span>
        </p>
      </div>

      <!-- CTA Buttons -->
      <div class="gsap-fade-in flex flex-col sm:flex-row gap-6 justify-center items-center">
        <a href="/warehouses" class="group bg-gradient-to-r from-blue-600 to-cyan-600 text-white px-8 py-4 rounded-2xl font-bold text-lg hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 btn-premium">
          <span class="flex items-center gap-3">
            Explore Properties
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </span>
        </a>
        
        <a href="/contact" class="group bg-white/10 backdrop-blur-xl text-white border border-white/20 px-8 py-4 rounded-2xl font-bold text-lg hover:bg-white/20 hover:-translate-y-1 transition-all duration-300">
