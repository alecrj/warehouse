---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Ariel Realty - Professional Warehouse & Industrial Spaces">
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-primary-900 via-primary-800 to-primary-900">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"0.1\"%3E%3Ccircle cx=\"30\" cy=\"30\" r=\"1\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>
    
    <!-- Floating Elements -->
    <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-accent-600 opacity-10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-accent-400 opacity-5 rounded-full blur-3xl animate-pulse" style="animation-delay: 3s;"></div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- Hero Content -->
      <div class="max-w-4xl mx-auto">
        <div class="hero-eyebrow text-accent-400 text-sm font-semibold uppercase tracking-wider mb-6 scroll-fade-in">
          Professional Industrial Spaces
        </div>
        
        <h1 class="hero-title text-5xl md:text-7xl font-bold text-white mb-8 leading-tight scroll-fade-in">
          We have reinvented<br>warehouse leasing
        </h1>
        
        <p class="hero-subtitle text-xl md:text-2xl text-primary-200 mb-12 max-w-3xl mx-auto leading-relaxed scroll-fade-in">
          Moving business forward by making warehouse solutions seamless.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-16 scroll-fade-in">
          <a href="/warehouses" class="hero-button btn-primary text-lg px-8 py-4 w-full sm:w-auto">
            Browse Warehouses
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
          <a href="/contact" class="hero-button btn-secondary text-lg px-8 py-4 w-full sm:w-auto">
            Get Started
          </a>
        </div>
        
        <!-- Hero Stats -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 pt-8 border-t border-primary-700 border-opacity-50 scroll-fade-in">
          <div class="hero-stat text-center">
            <div class="stat-number text-4xl font-bold text-white mb-2">50+</div>
            <div class="text-primary-300">Active Listings</div>
          </div>
          <div class="hero-stat text-center">
            <div class="stat-number text-4xl font-bold text-white mb-2">2M+</div>
            <div class="text-primary-300">Square Feet Available</div>
          </div>
          <div class="hero-stat text-center">
            <div class="stat-number text-4xl font-bold text-white mb-2">24</div>
            <div class="text-primary-300">Hour Response Time</div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 text-primary-300 animate-bounce">
      <div class="text-sm mb-2">Scroll to explore</div>
      <svg class="w-6 h-6 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-16 scroll-fade-in">
        <h2 class="text-4xl md:text-5xl font-bold text-primary-900 mb-6">
          A single solution for<br>
          <span class="text-accent-600">maximum efficiency</span>
        </h2>
        <p class="text-xl text-primary-600 max-w-3xl mx-auto leading-relaxed">
          Deep market knowledge and cutting-edge technology combine to deliver 
          comprehensive warehouse solutions that scale with your business needs.
        </p>
      </div>

      <!-- Features Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="feature-card bg-white rounded-2xl p-8 text-center shadow-lg hover:shadow-xl transition-all duration-300 scroll-fade-in">
          <div class="w-16 h-16 bg-gradient-to-br from-accent-500 to-accent-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary-900 mb-4">Smart Search</h3>
          <p class="text-primary-600 leading-relaxed">
            Advanced filtering and AI-powered recommendations help you find the perfect warehouse space in minutes.
          </p>
        </div>

        <div class="feature-card bg-white rounded-2xl p-8 text-center shadow-lg hover:shadow-xl transition-all duration-300 scroll-fade-in">
          <div class="w-16 h-16 bg-gradient-to-br from-success-500 to-success-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary-900 mb-4">Rapid Response</h3>
          <p class="text-primary-600 leading-relaxed">
            Get responses within 2 hours. Our dedicated team ensures you never miss an opportunity.
          </p>
        </div>

        <div class="feature-card bg-white rounded-2xl p-8 text-center shadow-lg hover:shadow-xl transition-all duration-300 scroll-fade-in">
          <div class="w-16 h-16 bg-gradient-to-br from-warning-500 to-warning-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-primary-900 mb-4">Verified Properties</h3>
          <p class="text-primary-600 leading-relaxed">
            Every listing is professionally verified with accurate measurements and up-to-date information.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <!-- Content -->
        <div class="scroll-fade-in">
          <div class="text-accent-600 text-sm font-semibold uppercase tracking-wider mb-4">
            Professional Services
          </div>
          <h2 class="text-4xl font-bold text-primary-900 mb-6">
            Easy, scalable<br>
            warehouse solutions
          </h2>
          <p class="text-lg text-primary-600 mb-8 leading-relaxed">
            Ariel Realty was designed from the ground up for seamless operations. 
            Easy to work with and highly responsive, we provide a modern experience 
            that's efficient for businesses from day one.
          </p>

          <div class="space-y-6">
            <div class="flex items-start space-x-4">
              <div class="w-6 h-6 bg-success-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-primary-900 mb-1">Warehouse Leasing</h3>
                <p class="text-primary-600">Flexible lease terms adapted to your business cycle</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-6 h-6 bg-success-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-primary-900 mb-1">Distribution Centers</h3>
                <p class="text-primary-600">Strategic locations for optimal logistics</p>
              </div>
            </div>

            <div class="flex items-start space-x-4">
              <div class="w-6 h-6 bg-success-100 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-primary-900 mb-1">Manufacturing Spaces</h3>
                <p class="text-primary-600">Purpose-built facilities for production needs</p>
              </div>
            </div>
          </div>

          <div class="mt-8">
            <a href="/warehouses" class="btn-primary">
              Explore Warehouses
            </a>
          </div>
        </div>

        <!-- Image Placeholder -->
        <div class="scroll-fade-in">
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-br from-accent-500 to-primary-900 opacity-20 rounded-3xl transform rotate-6"></div>
            <div class="relative bg-gradient-to-br from-gray-100 to-gray-200 rounded-3xl shadow-2xl w-full h-96 flex items-center justify-center">
              <div class="text-center text-gray-500">
                <svg class="w-16 h-16 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
                <p>Warehouse Image</p>
              </div>
            </div>
            <div class="absolute -bottom-6 -right-6 bg-white rounded-2xl p-6 shadow-xl">
              <div class="text-2xl font-bold text-primary-900">2M+</div>
              <div class="text-sm text-primary-600">Sq Ft Available</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-br from-primary-900 to-primary-800 relative overflow-hidden">
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"0.1\"%3E%3Ccircle cx=\"30\" cy=\"30\" r=\"1\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    </div>
    
    <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="scroll-fade-in">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Ready to find your<br>
          <span class="text-accent-400">perfect warehouse?</span>
        </h2>
        <p class="text-xl text-primary-200 mb-8 max-w-2xl mx-auto">
          Join hundreds of businesses who trust Ariel Realty for their warehouse and distribution needs.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/warehouses" class="btn-primary text-lg px-8 py-4">
            Browse Available Spaces
          </a>
          <a href="/contact" class="btn-secondary bg-white bg-opacity-10 border-white border-opacity-20 text-white hover:bg-white hover:bg-opacity-20 text-lg px-8 py-4">
            Schedule Consultation
          </a>
        </div>
        
        <!-- Trust Indicators -->
        <div class="grid grid-cols-3 gap-8 mt-16 pt-8 border-t border-primary-700 border-opacity-50">
          <div class="text-center">
            <div class="w-12 h-12 bg-white bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <div class="font-bold text-white">(555) 123-4567</div>
            <div class="text-sm text-primary-300">Call for immediate assistance</div>
          </div>
          
          <div class="text-center">
            <div class="w-12 h-12 bg-white bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 7.89a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <div class="font-bold text-white">info@arielrealty.com</div>
            <div class="text-sm text-primary-300">Email us your requirements</div>
          </div>
          
          <div class="text-center">
            <div class="w-12 h-12 bg-white bg-opacity-10 rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div class="font-bold text-white">< 2 Hour Response</div>
            <div class="text-sm text-primary-300">Fast professional service</div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>