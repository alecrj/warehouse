---
// Updated services page with consistent hero and glassmorphism cards
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout 
  title="End-to-End Tenant Representation Services | Warehouse Locating"
  description="Comprehensive industrial tenant representation from needs analysis to move-in coordination. Completely free service - landlords pay our fee."
>
  <Navigation />
  
  <main>
    <!-- Hero Section - Consistent Sizing with Glassmorphism Cards -->
    <section class="relative min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 overflow-hidden flex items-center">
      <!-- Background Elements -->
      <div class="absolute inset-0">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary-500/10 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-blue-500/10 rounded-full blur-3xl animate-float-reverse"></div>
        <div class="absolute inset-0 bg-pattern-grid opacity-20"></div>
      </div>
      
      <div class="relative z-10 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="text-center">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black text-white leading-tight tracking-tight mb-6 animate-on-scroll">
            END-TO-END TENANT
            <span class="block bg-gradient-to-r from-primary-400 to-blue-400 bg-clip-text text-transparent">
              REPRESENTATION
            </span>
          </h1>
          <p class="text-lg lg:text-xl text-gray-300 max-w-4xl mx-auto leading-relaxed mb-2 animate-on-scroll">
            Complete industrial tenant representation services across South Florida. 
          </p>
          <p class="text-base text-gray-400 leading-relaxed mb-8 max-w-3xl mx-auto animate-on-scroll">
            <span class="text-white font-semibold">Cost to tenant: $0. Landlords pay brokerage fees.</span>
          </p>
          
          <!-- Service Quality Stats - Now in Hero with Glassmorphism -->
          <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 animate-on-scroll mt-12">
            <div class="group text-center p-8 bg-white/10 backdrop-blur-xl rounded-3xl border border-white/20 shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-105 hover:bg-white/15 relative overflow-hidden before:absolute before:inset-0 before:bg-gradient-to-br before:from-white/20 before:via-transparent before:to-transparent before:opacity-0 hover:before:opacity-100 before:transition-opacity before:duration-500">
              <div class="relative z-10">
                <div class="text-4xl font-black text-white mb-3 drop-shadow-lg group-hover:text-primary-200 transition-colors duration-300">
                  100%
                </div>
                <div class="text-white/80 text-sm font-semibold uppercase tracking-wider drop-shadow-sm">Free Service</div>
              </div>
            </div>
            <div class="group text-center p-8 bg-white/10 backdrop-blur-xl rounded-3xl border border-white/20 shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-105 hover:bg-white/15 relative overflow-hidden before:absolute before:inset-0 before:bg-gradient-to-br before:from-white/20 before:via-transparent before:to-transparent before:opacity-0 hover:before:opacity-100 before:transition-opacity before:duration-500">
              <div class="relative z-10">
                <div class="text-4xl font-black text-white mb-3 drop-shadow-lg group-hover:text-green-200 transition-colors duration-300">
                  South FL
                </div>
                <div class="text-white/80 text-sm font-semibold uppercase tracking-wider drop-shadow-sm">Coverage</div>
              </div>
            </div>
            <div class="group text-center p-8 bg-white/10 backdrop-blur-xl rounded-3xl border border-white/20 shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-105 hover:bg-white/15 relative overflow-hidden before:absolute before:inset-0 before:bg-gradient-to-br before:from-white/20 before:via-transparent before:to-transparent before:opacity-0 hover:before:opacity-100 before:transition-opacity before:duration-500">
              <div class="relative z-10">
                <div class="text-4xl font-black text-white mb-3 drop-shadow-lg group-hover:text-blue-200 transition-colors duration-300">
                  Local
                </div>
                <div class="text-white/80 text-sm font-semibold uppercase tracking-wider drop-shadow-sm">Expertise</div>
              </div>
            </div>
            <div class="group text-center p-8 bg-white/10 backdrop-blur-xl rounded-3xl border border-white/20 shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-105 hover:bg-white/15 relative overflow-hidden before:absolute before:inset-0 before:bg-gradient-to-br before:from-white/20 before:via-transparent before:to-transparent before:opacity-0 hover:before:opacity-100 before:transition-opacity before:duration-500">
              <div class="relative z-10">
                <div class="text-4xl font-black text-white mb-3 drop-shadow-lg group-hover:text-purple-200 transition-colors duration-300">
                  Industrial
                </div>
                <div class="text-white/80 text-sm font-semibold uppercase tracking-wider drop-shadow-sm">Only</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Main Services -->
    <section class="py-24 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16 animate-on-scroll">
          <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
            Complete Tenant Representation Services
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            From initial needs analysis to move-in coordination, we provide comprehensive 
            tenant representation to secure the perfect warehouse space for your business.
          </p>
        </div>

        <!-- Services Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 stagger-children">
          <!-- Service 1 -->
          <div class="text-center p-8 rounded-3xl bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Needs Analysis</h3>
            <p class="text-gray-600 leading-relaxed">
              Power, clear height, loading, yard, office %, zoning, sprinkler, trailer parking requirements analysis.
            </p>
          </div>

          <!-- Service 2 -->
          <div class="text-center p-8 rounded-3xl bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Inventory Access</h3>
            <p class="text-gray-600 leading-relaxed">
              On-market + off-market outreach to owners and brokers for comprehensive market coverage.
            </p>
          </div>

          <!-- Service 3 -->
          <div class="text-center p-8 rounded-3xl bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Tours & Shortlist</h3>
            <p class="text-gray-600 leading-relaxed">
              Curated options, scheduled efficiently to maximize your time and minimize disruption.
            </p>
          </div>

          <!-- Service 4 -->
          <div class="text-center p-8 rounded-3xl bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Financials & Comps</h3>
            <p class="text-gray-600 leading-relaxed">
              Market rent comps, OpEx/CAM review, escalation modeling for informed decision making.
            </p>
          </div>

          <!-- Service 5 -->
          <div class="text-center p-8 rounded-3xl bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Negotiation</h3>
            <p class="text-gray-600 leading-relaxed">
              Base rent, free rent, tenant improvements, options, assignment/sublet, caps on CAM negotiation.
            </p>
          </div>

          <!-- Service 6 -->
          <div class="text-center p-8 rounded-3xl bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-red-500 to-red-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Documentation Support</h3>
            <p class="text-gray-600 leading-relaxed">
              LOI strategy and lease term guidance (with your attorney) to protect your interests.
            </p>
          </div>

          <!-- Service 7 -->
          <div class="text-center p-8 rounded-3xl bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Move-In Coordination</h3>
            <p class="text-gray-600 leading-relaxed">
              Vendor intros for racking, security, utilities, and permits to ensure smooth transition.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Property Types -->
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16 animate-on-scroll">
          <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
            From 500 SF to 500,000 SF
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            Any size, any stage: Start-ups, expansions, consolidations, relocations, renewals.
          </p>
        </div>

        <!-- Property Types Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 stagger-children">
          <div class="text-center p-6 bg-gray-50 rounded-2xl hover:bg-white hover:shadow-lg transition-all duration-300">
            <div class="text-2xl font-bold text-primary-600 mb-2">Distribution</div>
            <div class="text-gray-600 text-sm">High cube, dock high, multi-tenant</div>
          </div>
          <div class="text-center p-6 bg-gray-50 rounded-2xl hover:bg-white hover:shadow-lg transition-all duration-300">
            <div class="text-2xl font-bold text-green-600 mb-2">Manufacturing</div>
            <div class="text-gray-600 text-sm">Production, assembly, processing</div>
          </div>
          <div class="text-center p-6 bg-gray-50 rounded-2xl hover:bg-white hover:shadow-lg transition-all duration-300">
            <div class="text-2xl font-bold text-blue-600 mb-2">Flex/R&D</div>
            <div class="text-gray-600 text-sm">Office/warehouse combinations</div>
          </div>
          <div class="text-center p-6 bg-gray-50 rounded-2xl hover:bg-white hover:shadow-lg transition-all duration-300">
            <div class="text-2xl font-bold text-purple-600 mb-2">Cold Storage</div>
            <div class="text-gray-600 text-sm">Temperature-controlled facilities</div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>