---
// Clean services page with consistent design system
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
---

<BaseLayout 
  title="Industrial Tenant Representation Services | Ariel Realty Group"
  description="Comprehensive warehouse and industrial tenant representation services in South Florida. From property search to lease negotiation - completely free for tenants."
>
  <Navigation />
  
  <main>
    <!-- Hero Section -->
    <section class="relative pt-20 pb-16 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 overflow-hidden">
      <!-- Background Elements -->
      <div class="absolute inset-0">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary-500/10 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-blue-500/10 rounded-full blur-3xl animate-float-reverse"></div>
        <div class="absolute inset-0 bg-pattern-grid opacity-20"></div>
      </div>
      
      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black text-white leading-tight tracking-tight mb-6 animate-on-scroll">
            OUR
            <span class="block bg-gradient-to-r from-primary-400 to-blue-400 bg-clip-text text-transparent">
              SERVICES
            </span>
          </h1>
          <p class="text-lg lg:text-xl text-gray-300 max-w-4xl mx-auto leading-relaxed animate-on-scroll">
            Comprehensive tenant representation from search to signing - 
            <span class="text-white font-semibold">provided by Ariel Realty Group at no cost to the tenant.</span>
          </p>
        </div>

        <!-- Service Stats -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 animate-on-scroll">
          <div class="text-center p-6 bg-white/10 backdrop-blur-sm rounded-2xl border border-white/20">
            <div class="text-3xl font-bold text-white mb-2">100%</div>
            <div class="text-gray-300 text-sm">Free Service</div>
          </div>
          <div class="text-center p-6 bg-white/10 backdrop-blur-sm rounded-2xl border border-white/20">
            <div class="text-3xl font-bold text-green-400 mb-2">20+</div>
            <div class="text-gray-300 text-sm">Years Experience</div>
          </div>
          <div class="text-center p-6 bg-white/10 backdrop-blur-sm rounded-2xl border border-white/20">
            <div class="text-3xl font-bold text-blue-400 mb-2">500+</div>
            <div class="text-gray-300 text-sm">Successful Deals</div>
          </div>
          <div class="text-center p-6 bg-white/10 backdrop-blur-sm rounded-2xl border border-white/20">
            <div class="text-3xl font-bold text-purple-400 mb-2">24/7</div>
            <div class="text-gray-300 text-sm">Support</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Main Services -->
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16 animate-on-scroll">
          <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
            Complete Tenant Representation
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            From initial search to lease signing, we provide comprehensive services 
            to secure the perfect warehouse space for your business.
          </p>
        </div>

        <!-- Services Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 stagger-children">
          <!-- Service 1 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Property Search</h3>
            <p class="text-gray-600 leading-relaxed">
              Comprehensive market search to identify properties that match your specific 
              operational requirements, budget, and timeline.
            </p>
          </div>

          <!-- Service 2 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Market Analysis</h3>
            <p class="text-gray-600 leading-relaxed">
              Detailed market analysis including comparable properties, rental rates, 
              and market trends to ensure you get the best deal.
            </p>
          </div>

          <!-- Service 3 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Lease Negotiation</h3>
            <p class="text-gray-600 leading-relaxed">
              Expert negotiation to secure favorable lease terms, rental rates, 
              and tenant improvements on your behalf.
            </p>
          </div>

          <!-- Service 4 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Due Diligence</h3>
            <p class="text-gray-600 leading-relaxed">
              Thorough property evaluation including zoning compliance, 
              environmental assessments, and infrastructure analysis.
            </p>
          </div>

          <!-- Service 5 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Space Planning</h3>
            <p class="text-gray-600 leading-relaxed">
              Professional space planning to optimize your warehouse layout 
              for maximum efficiency and operational flow.
            </p>
          </div>

          <!-- Service 6 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-red-500 to-red-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Ongoing Support</h3>
            <p class="text-gray-600 leading-relaxed">
              Continued support throughout the lease term for renewals, 
              expansions, or additional space requirements.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Property Types -->
    <section class="py-24 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16 animate-on-scroll">
          <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
            Property Types We Specialize In
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            From small bay warehouses to large distribution centers, 
            we have expertise across all industrial property types.
          </p>
        </div>

        <!-- Property Types Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 stagger-children">
          <!-- Type 1 -->
          <div class="bg-white rounded-3xl p-6 shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <h3 class="text-xl font-bold text-gray-900 mb-3">Distribution Centers</h3>
            <p class="text-gray-600 mb-4 text-sm">Large-scale facilities for regional distribution</p>
            <ul class="text-sm text-gray-500 space-y-2">
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                100,000+ sq ft
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Multiple dock doors
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Cross-dock capability
              </li>
            </ul>
          </div>

          <!-- Type 2 -->
          <div class="bg-white rounded-3xl p-6 shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <h3 class="text-xl font-bold text-gray-900 mb-3">Manufacturing</h3>
            <p class="text-gray-600 mb-4 text-sm">Facilities designed for production and assembly</p>
            <ul class="text-sm text-gray-500 space-y-2">
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                High power availability
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Office integration
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Flexible layouts
              </li>
            </ul>
          </div>

          <!-- Type 3 -->
          <div class="bg-white rounded-3xl p-6 shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <h3 class="text-xl font-bold text-gray-900 mb-3">Cold Storage</h3>
            <p class="text-gray-600 mb-4 text-sm">Temperature-controlled storage facilities</p>
            <ul class="text-sm text-gray-500 space-y-2">
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Refrigerated storage
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Freezer capabilities
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Food-grade facilities
              </li>
            </ul>
          </div>

          <!-- Type 4 -->
          <div class="bg-white rounded-3xl p-6 shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <h3 class="text-xl font-bold text-gray-900 mb-3">Small Bay</h3>
            <p class="text-gray-600 mb-4 text-sm">Smaller warehouse and workshop spaces</p>
            <ul class="text-sm text-gray-500 space-y-2">
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                500 - 10,000 SF
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Roll-up doors
              </li>
              <li class="flex items-center">
                <svg class="w-4 h-4 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Flexible use
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Our Services -->
    <section class="py-24 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16 animate-on-scroll">
          <h2 class="text-4xl sm:text-5xl font-bold text-white mb-6">
            Why Choose Our Services?
          </h2>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
            Experience the Ariel Realty Group difference in industrial tenant representation
          </p>
        </div>
        
        <!-- Benefits Grid -->
        <div class="grid md:grid-cols-3 gap-8 stagger-children">
          <!-- Benefit 1 -->
          <div class="text-center p-8 bg-white/10 backdrop-blur-sm rounded-3xl border border-white/20">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-white mb-4">Completely Free</h3>
            <p class="text-gray-300 leading-relaxed">
              Our comprehensive services are completely free for tenants. 
              We're compensated by landlords, ensuring no conflict of interest.
            </p>
          </div>

          <!-- Benefit 2 -->
          <div class="text-center p-8 bg-white/10 backdrop-blur-sm rounded-3xl border border-white/20">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-white mb-4">Expert Knowledge</h3>
            <p class="text-gray-300 leading-relaxed">
              20+ years of South Florida industrial market expertise. 
              We know the properties, the landlords, and the best deals.
            </p>
          </div>

          <!-- Benefit 3 -->
          <div class="text-center p-8 bg-white/10 backdrop-blur-sm rounded-3xl border border-white/20">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-white mb-4">Personalized Service</h3>
            <p class="text-gray-300 leading-relaxed">
              Dedicated attention to your unique requirements. 
              We work exclusively for you, not the landlord.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-24 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6 animate-on-scroll">
          Ready to Get Started?
        </h2>
        <p class="text-xl text-gray-600 mb-10 animate-on-scroll">
          Let our experts help you find the perfect warehouse space. 
          <span class="font-semibold text-gray-900">Contact us today for a free consultation.</span>
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center animate-on-scroll">
          <a 
            href="/contact" 
            class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-8 py-4 rounded-2xl text-lg font-semibold hover:from-primary-700 hover:to-primary-800 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 transform"
          >
            Get Expert Help Now
          </a>
          <a 
            href="/warehouses" 
            class="border-2 border-gray-200 text-gray-700 px-8 py-4 rounded-2xl text-lg font-semibold hover:bg-gray-50 hover:border-gray-300 transition-all duration-200"
          >
            Browse Properties
          </a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>