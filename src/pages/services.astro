---
// Updated services page with real copy and warehouselocating.com branding
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout 
  title="End-to-End Tenant Representation Services | Warehouse Locating"
  description="Comprehensive industrial tenant representation from needs analysis to move-in coordination. Completely free service - landlords pay our fee."
>
  <Navigation />
  
  <main>
    <!-- Hero Section -->
    <section class="relative pt-20 pb-16 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 overflow-hidden">
      <!-- Background Elements -->
      <div class="absolute inset-0">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary-500/10 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-blue-500/10 rounded-full blur-3xl animate-float-reverse"></div>
        <div class="absolute inset-0 bg-pattern-grid opacity-20"></div>
      </div>
      
      <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-black text-white leading-tight tracking-tight mb-6 animate-on-scroll">
            END-TO-END TENANT
            <span class="block bg-gradient-to-r from-primary-400 to-blue-400 bg-clip-text text-transparent">
              REPRESENTATION
            </span>
          </h1>
          <p class="text-lg lg:text-xl text-gray-300 max-w-4xl mx-auto leading-relaxed animate-on-scroll">
            Complete industrial tenant representation services across South Florida. 
            <span class="text-white font-semibold">Cost to tenant: $0. Landlords pay brokerage fees.</span>
          </p>
        </div>

        <!-- Service Quality Stats -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 animate-on-scroll">
          <div class="text-center p-6 bg-white/10 backdrop-blur-sm rounded-2xl border border-white/20">
            <div class="text-3xl font-bold text-white mb-2">100%</div>
            <div class="text-gray-300 text-sm">Free Service</div>
          </div>
          <div class="text-center p-6 bg-white/10 backdrop-blur-sm rounded-2xl border border-white/20">
            <div class="text-3xl font-bold text-green-400 mb-2">South FL</div>
            <div class="text-gray-300 text-sm">Coverage</div>
          </div>
          <div class="text-center p-6 bg-white/10 backdrop-blur-sm rounded-2xl border border-white/20">
            <div class="text-3xl font-bold text-blue-400 mb-2">Local</div>
            <div class="text-gray-300 text-sm">Expertise</div>
          </div>
          <div class="text-center p-6 bg-white/10 backdrop-blur-sm rounded-2xl border border-white/20">
            <div class="text-3xl font-bold text-purple-400 mb-2">Industrial</div>
            <div class="text-gray-300 text-sm">Only</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Main Services -->
    <section class="py-24 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16 animate-on-scroll">
          <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
            Complete Tenant Representation Services
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            From initial needs analysis to move-in coordination, we provide comprehensive 
            tenant representation to secure the perfect warehouse space for your business.
          </p>
        </div>

        <!-- Services Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 stagger-children">
          <!-- Service 1 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Needs Analysis</h3>
            <p class="text-gray-600 leading-relaxed">
              Power, clear height, loading, yard, office %, zoning, sprinkler, trailer parking requirements analysis.
            </p>
          </div>

          <!-- Service 2 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Inventory Access</h3>
            <p class="text-gray-600 leading-relaxed">
              On-market + off-market outreach to owners and brokers for comprehensive market coverage.
            </p>
          </div>

          <!-- Service 3 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Tours & Shortlist</h3>
            <p class="text-gray-600 leading-relaxed">
              Curated options, scheduled efficiently to maximize your time and minimize disruption.
            </p>
          </div>

          <!-- Service 4 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Financials & Comps</h3>
            <p class="text-gray-600 leading-relaxed">
              Market rent comps, OpEx/CAM review, escalation modeling for informed decision making.
            </p>
          </div>

          <!-- Service 5 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-orange-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Negotiation</h3>
            <p class="text-gray-600 leading-relaxed">
              Base rent, free rent, tenant improvements, options, assignment/sublet, caps on CAM negotiation.
            </p>
          </div>

          <!-- Service 6 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-red-500 to-red-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Documentation Support</h3>
            <p class="text-gray-600 leading-relaxed">
              LOI strategy and lease term guidance (with your attorney) to protect your interests.
            </p>
          </div>

          <!-- Service 7 -->
          <div class="text-center p-8 rounded-3xl bg-gray-50 hover:bg-white hover:shadow-lg transition-all duration-300 transform hover:-translate-y-2">
            <div class="w-16 h-16 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-4">Move-In Coordination</h3>
            <p class="text-gray-600 leading-relaxed">
              Vendor intros for racking, security, utilities, and permits to ensure smooth transition.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Property Types -->
    <section class="py-24 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16 animate-on-scroll">
          <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
            From 500 SF to 500,000 SF
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            Any size, any stage: Start-ups, expansions, consolidations, relocations, renewals.
          </p>
        </div>

        <!-- Listing Card Fields Info -->
        <div class="bg-white rounded-3xl p-8 shadow-soft mb-16 animate-on-scroll">
          <h3 class="text-2xl font-bold text-gray-900 mb-6 text-center">What We Analyze for Every Property</h3>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="space-y-2">
              <h4 class="font-semibold text-gray-900">Space Details</h4>
              <ul class="text-gray-600 text-sm space-y-1">
                <li>• Total SF & divisible SF</li>
                <li>• Clear height</li>
                <li>• Office percentage</li>
                <li>• Column spacing</li>
              </ul>
            </div>
            
            <div class="space-y-2">
              <h4 class="font-semibold text-gray-900">Loading & Access</h4>
              <ul class="text-gray-600 text-sm space-y-1">
                <li>• Dock doors & drive-ins</li>
                <li>• Trailer positions</li>
                <li>• Lot/yard size</li>
                <li>• Outside storage options</li>
              </ul>
            </div>
            
            <div class="space-y-2">
              <h4 class="font-semibold text-gray-900">Infrastructure</h4>
              <ul class="text-gray-600 text-sm space-y-1">
                <li>• Power (amps/phase)</li>
                <li>• Sprinkler type</li>
                <li>• Zoning/use notes</li>
                <li>• Availability date</li>
              </ul>
            </div>
            
            <div class="space-y-2">
              <h4 class="font-semibold text-gray-900">Financial Terms</h4>
              <ul class="text-gray-600 text-sm space-y-1">
                <li>• Asking rent</li>
                <li>• Estimated OpEx/CAM</li>
                <li>• Term flexibility</li>
                <li>• Tenant improvement allowance</li>
              </ul>
            </div>
            
            <div class="space-y-2">
              <h4 class="font-semibold text-gray-900">Filters Available</h4>
              <ul class="text-gray-600 text-sm space-y-1">
                <li>• Dock-High • Drive-In</li>
                <li>• Yard • 3-Phase Power</li>
                <li>• Sprinklered • Food-Grade</li>
                <li>• Size & budget ranges</li>
              </ul>
            </div>
            
            <div class="space-y-2">
              <h4 class="font-semibold text-gray-900">Market Intelligence</h4>
              <ul class="text-gray-600 text-sm space-y-1">
                <li>• Current market rates</li>
                <li>• Comparable properties</li>
                <li>• Availability trends</li>
                <li>• Pricing changes</li>
              </ul>
            </div>
          </div>
          
          <div class="mt-8 p-4 bg-blue-50 rounded-xl">
            <p class="text-blue-800 font-medium text-center">
              <strong>Note:</strong> Availability and pricing change quickly. Request current status and a full options list.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Our Services -->
    <section class="py-24 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Section Header -->
        <div class="text-center mb-16 animate-on-scroll">
          <h2 class="text-4xl sm:text-5xl font-bold text-white mb-6">
            Why Choose Us?
          </h2>
          <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
            Local, connected, industrial-only focus with brutally efficient search process
          </p>
        </div>
        
        <!-- Benefits Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 stagger-children">
          <!-- Benefit 1 -->
          <div class="text-center p-8 bg-white/10 backdrop-blur-sm rounded-3xl border border-white/20">
            <div class="w-16 h-16 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">Brutally Efficient Search</h3>
            <p class="text-gray-300 leading-relaxed">
              We eliminate junk, surface the right spaces, and get you touring fast.
            </p>
          </div>

          <!-- Benefit 2 -->
          <div class="text-center p-8 bg-white/10 backdrop-blur-sm rounded-3xl border border-white/20">
            <div class="w-16 h-16 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">You Save Money</h3>
            <p class="text-gray-300 leading-relaxed">
              Tighter comps, smarter structure, harder negotiation. Better rent, better TI, better protections.
            </p>
          </div>

          <!-- Benefit 3 -->
          <div class="text-center p-8 bg-white/10 backdrop-blur-sm rounded-3xl border border-white/20">
            <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">You Pay $0</h3>
            <p class="text-gray-300 leading-relaxed">
              Our fee is paid by the landlord—never by you. Completely free tenant representation.
            </p>
          </div>

          <!-- Benefit 4 -->
          <div class="text-center p-8 bg-white/10 backdrop-blur-sm rounded-3xl border border-white/20">
            <div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">Local, Connected, Industrial-Only</h3>
            <p class="text-gray-300 leading-relaxed">
              We live this market. Real off-market reach and fewer surprises.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-24 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6 animate-on-scroll">
          Ready to Get Started?
        </h2>
        <p class="text-xl text-gray-600 mb-10 animate-on-scroll">
          Call (954) 937-9667 or get free tenant representation now.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center animate-on-scroll">
          <a 
            href="/contact" 
            class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-8 py-4 rounded-2xl text-lg font-semibold hover:from-primary-700 hover:to-primary-800 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 transform"
          >
            Get Free Tenant Representation
          </a>
          <a 
            href="tel:954-937-9667" 
            class="border-2 border-gray-200 text-gray-700 px-8 py-4 rounded-2xl text-lg font-semibold hover:bg-gray-50 hover:border-gray-300 transition-all duration-200"
          >
            Call (954) 937-9667
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>