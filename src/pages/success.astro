---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get available warehouses for the CTA section
const warehouses = await getCollection('warehouses');
const availableWarehouses = warehouses.filter(w => w.data.availability === 'available').slice(0, 3);
---

<BaseLayout title="Thank You | WarehouseHub - Your Inquiry Has Been Received">
  <!-- Enhanced Success Hero with Professional Animation -->
  <section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-900 via-blue-900 to-slate-800 overflow-hidden">
    <!-- Professional Background Effects -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-br from-emerald-600/20 to-blue-600/20"></div>
      <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 30px 30px;"></div>
      </div>
      
      <!-- Animated Success Elements -->
      <div class="absolute top-20 left-10 w-24 h-24 bg-emerald-500/20 rounded-full blur-xl animate-float"></div>
      <div class="absolute bottom-20 right-10 w-32 h-32 bg-blue-500/20 rounded-full blur-xl animate-float-delay"></div>
      <div class="absolute top-1/2 left-1/4 w-16 h-16 bg-purple-500/20 rounded-full blur-xl animate-float-slow"></div>
    </div>
    
    <div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- Enhanced Success Icon -->
      <div class="mb-12 animate-scale-in">
        <div class="mx-auto w-32 h-32 bg-gradient-to-br from-emerald-400 to-emerald-600 rounded-full flex items-center justify-center shadow-2xl animate-pulse-success">
          <svg class="w-16 h-16 text-white animate-check-draw" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
      </div>
      
      <!-- Professional Success Message -->
      <div class="backdrop-blur-xl bg-white/10 rounded-3xl p-8 md:p-16 border border-white/20 shadow-2xl animate-slide-up">
        <h1 class="text-4xl md:text-7xl font-bold text-white mb-8 leading-tight">
          Thank You for Your Inquiry!
        </h1>
        
        <p class="text-xl md:text-2xl text-blue-100 mb-12 leading-relaxed max-w-4xl mx-auto">
          We've received your message and our team of industrial real estate experts 
          <span class="text-white font-bold">will get back to you within 2 business hours</span>.
        </p>

        <!-- Professional Process Timeline -->
        <div class="bg-white/20 backdrop-blur-sm rounded-3xl p-8 md:p-12 mb-12 text-left border border-white/30">
          <h2 class="text-3xl font-bold text-white mb-10 text-center">What Happens Next?</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="flex flex-col items-center text-center">
              <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-full w-16 h-16 flex items-center justify-center mb-6 shadow-lg">
                <span class="text-white font-bold text-xl">1</span>
              </div>
              <div>
                <h3 class="text-white font-bold mb-3 text-lg">Initial Review</h3>
                <p class="text-blue-100 leading-relaxed">Our team will review your requirements and property preferences within 2 hours</p>
              </div>
            </div>
            
            <div class="flex flex-col items-center text-center">
              <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-full w-16 h-16 flex items-center justify-center mb-6 shadow-lg">
                <span class="text-white font-bold text-xl">2</span>
              </div>
              <div>
                <h3 class="text-white font-bold mb-3 text-lg">Expert Consultation</h3>
                <p class="text-blue-100 leading-relaxed">A licensed real estate professional will contact you to discuss your specific needs</p>
              </div>
            </div>
            
            <div class="flex flex-col items-center text-center">
              <div class="bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-full w-16 h-16 flex items-center justify-center mb-6 shadow-lg">
                <span class="text-white font-bold text-xl">3</span>
              </div>
              <div>
                <h3 class="text-white font-bold mb-3 text-lg">Property Tours</h3>
                <p class="text-blue-100 leading-relaxed">We'll schedule private tours of properties that match your criteria</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Enhanced Immediate Actions -->
        <div class="flex flex-col sm:flex-row gap-6 justify-center mb-12">
          <a 
            href="tel:(555)123-4567"
            class="group relative overflow-hidden bg-gradient-to-r from-emerald-600 to-emerald-700 hover:from-emerald-700 hover:to-emerald-800 text-white px-12 py-6 rounded-2xl text-xl font-bold transition-all duration-300 transform hover:scale-105 hover:shadow-2xl"
          >
            <span class="relative z-10 flex items-center justify-center">
              <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
              </svg>
              Call Us Now: (555) 123-4567
            </span>
            <div class="absolute inset-0 bg-gradient-to-r from-emerald-500 to-emerald-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </a>
          
          <a 
            href="/warehouses" 
            class="group backdrop-blur-xl bg-white/20 hover:bg-white/30 text-white border-2 border-white/30 hover:border-white/50 px-12 py-6 rounded-2xl text-xl font-bold transition-all duration-300 transform hover:scale-105"
          >
            <span class="flex items-center justify-center">
              <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              Continue Browsing Properties
            </span>
          </a>
        </div>

        <!-- Professional Trust Indicators -->
        <div class="flex flex-wrap justify-center items-center gap-8 text-emerald-200/80 text-sm">
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            Licensed Brokers
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            10+ Years Experience
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            2-Hour Response Time
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Professional Contact Information Section -->
  <section class="bg-white py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-6">Need Immediate Assistance?</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">Our team of industrial real estate experts is standing by to help with your warehouse and distribution needs</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        <!-- Direct Contact -->
        <div class="text-center p-10 bg-gradient-to-br from-blue-50 to-blue-100 rounded-3xl hover:shadow-lg transition-all duration-300 group border border-blue-200">
          <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-3xl w-20 h-20 flex items-center justify-center mx-auto mb-8 group-hover:scale-110 transition-transform duration-300 shadow-lg">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Direct Line</h3>
          <p class="text-gray-600 mb-6 text-lg">Speak directly with our experts</p>
          <a href="tel:(555)123-4567" class="text-3xl font-bold text-blue-600 hover:text-blue-700 transition-colors duration-300 block mb-4">(555) 123-4567</a>
          <p class="text-sm text-gray-500">Mon-Fri: 8AM-6PM EST</p>
        </div>
        
        <!-- Email Support -->
        <div class="text-center p-10 bg-gradient-to-br from-purple-50 to-purple-100 rounded-3xl hover:shadow-lg transition-all duration-300 group border border-purple-200">
          <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-3xl w-20 h-20 flex items-center justify-center mx-auto mb-8 group-hover:scale-110 transition-transform duration-300 shadow-lg">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Email Support</h3>
          <p class="text-gray-600 mb-6 text-lg">Professional correspondence</p>
          <a href="mailto:info@warehousehub.com" class="text-xl font-bold text-purple-600 hover:text-purple-700 transition-colors duration-300 block mb-4">info@warehousehub.com</a>
          <p class="text-sm text-gray-500">Response within 2 hours</p>
        </div>
        
        <!-- Priority Support -->
        <div class="text-center p-10 bg-gradient-to-br from-emerald-50 to-emerald-100 rounded-3xl hover:shadow-lg transition-all duration-300 group border border-emerald-200">
          <div class="bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-3xl w-20 h-20 flex items-center justify-center mx-auto mb-8 group-hover:scale-110 transition-transform duration-300 shadow-lg">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Quick Response</h3>
          <p class="text-gray-600 mb-6 text-lg">Time-sensitive requirements</p>
          <a href="tel:(555)123-9999" class="text-xl font-bold text-emerald-600 hover:text-emerald-700 transition-colors duration-300 block mb-4">(555) 123-9999</a>
          <p class="text-sm text-gray-500">Priority Support Line</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Continue Exploring Section -->
  {availableWarehouses.length > 0 && (
    <section class="bg-gray-50 py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-6">While You Wait, Explore More Properties</h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">Discover other premium warehouse facilities that might interest you while our team prepares your personalized response</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
          {availableWarehouses.map((warehouse) => (
            <div class="group bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-4 border border-gray-100 overflow-hidden">
              <div class="relative h-64 overflow-hidden">
                {warehouse.data.images && warehouse.data.images[0] ? (
                  <img 
                    src={warehouse.data.images[0]} 
                    alt={warehouse.data.title}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
                    <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                  </div>
                )}
                
                <div class="absolute top-6 right-6">
                  <div class="bg-gradient-to-r from-emerald-500 to-emerald-600 text-white px-4 py-2 rounded-full text-sm font-bold shadow-lg">
                    Available
                  </div>
                </div>
              </div>
              
              <div class="p-8">
                <h3 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors duration-300">{warehouse.data.title}</h3>
                
                <div class="flex items-center text-gray-600 mb-6">
                  <svg class="w-5 h-5 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <span class="font-semibold text-lg">{warehouse.data.location}</span>
                </div>
                
                <div class="grid grid-cols-2 gap-4 mb-8">
                  <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-4 rounded-2xl border border-blue-200/50">
                    <div class="text-2xl font-bold text-blue-600 mb-1">{warehouse.data.price}</div>
                    <div class="text-sm text-blue-600/80 font-medium">per sq ft/year</div>
                  </div>
                  <div class="bg-gradient-to-br from-purple-50 to-purple-100 p-4 rounded-2xl border border-purple-200/50">
                    <div class="text-2xl font-bold text-purple-600 mb-1">{warehouse.data.size.toLocaleString()}</div>
                    <div class="text-sm text-purple-600/80 font-medium">sq ft</div>
                  </div>
                </div>
                
                <a 
                  href={`/warehouses/${warehouse.data.slug}`}
                  class="block text-center bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white px-8 py-4 rounded-2xl font-bold transition-all duration-300 transform group-hover:scale-105"
                >
                  View Details
                </a>
              </div>
            </div>
          ))}
        </div>

        <div class="text-center mt-16">
          <a 
            href="/warehouses" 
            class="inline-flex items-center bg-gradient-to-r from-gray-900 to-gray-800 hover:from-gray-800 hover:to-gray-700 text-white px-12 py-5 rounded-2xl font-bold text-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl group"
          >
            <span>View All Properties</span>
            <svg class="w-6 h-6 ml-3 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  )}

  <style>
    /* Professional success page animations */
    @keyframes float {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      50% { transform: translateY(-12px) rotate(1deg); }
    }
    
    @keyframes float-delay {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      50% { transform: translateY(-18px) rotate(-1deg); }
    }
    
    @keyframes float-slow {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      50% { transform: translateY(-8px) rotate(0.5deg); }
    }
    
    @keyframes scale-in {
      from { opacity: 0; transform: scale(0.5) rotate(-10deg); }
      to { opacity: 1; transform: scale(1) rotate(0deg); }
    }
    
    @keyframes slide-up {
      from { opacity: 0; transform: translateY(50px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    @keyframes check-draw {
      0% { stroke-dasharray: 0 100; opacity: 0; }
      50% { opacity: 1; }
      100% { stroke-dasharray: 100 0; opacity: 1; }
    }
    
    @keyframes pulse-success {
      0%, 100% { transform: scale(1); box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.4); }
      50% { transform: scale(1.05); box-shadow: 0 0 0 20px rgba(16, 185, 129, 0); }
    }
    
    .animate-float {
      animation: float 8s ease-in-out infinite;
    }
    
    .animate-float-delay {
      animation: float-delay 10s ease-in-out infinite;
    }
    
    .animate-float-slow {
      animation: float-slow 12s ease-in-out infinite;
    }
    
    .animate-scale-in {
      animation: scale-in 1s ease-out 0.5s both;
    }
    
    .animate-slide-up {
      animation: slide-up 1s ease-out 0.3s both;
    }
    
    .animate-check-draw {
      stroke-dasharray: 100;
      animation: check-draw 1.5s ease-out 1.5s both;
    }
    
    .animate-pulse-success {
      animation: pulse-success 3s ease-out infinite;
    }
  </style>

  <script>
    // Enhanced interactions and animations
    document.addEventListener('DOMContentLoaded', () => {
      // Professional scroll animations
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animate-fadeIn');
          }
        });
      }, observerOptions);

      // Observe elements for scroll animations
      document.querySelectorAll('.group, .card, h2, h3').forEach(el => {
        observer.observe(el);
      });

      // Professional confetti effect (subtle)
      function createConfetti() {
        const colors = ['#10b981', '#3b82f6', '#8b5cf6'];
        const confettiCount = 50;
        
        for (let i = 0; i < confettiCount; i++) {
          const confetti = document.createElement('div');
          confetti.style.position = 'fixed';
          confetti.style.width = '6px';
          confetti.style.height = '6px';
          confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
          confetti.style.left = Math.random() * window.innerWidth + 'px';
          confetti.style.top = '-10px';
          confetti.style.borderRadius = '50%';
          confetti.style.pointerEvents = 'none';
          confetti.style.zIndex = '1000';
          confetti.style.opacity = '0.8';
          
          document.body.appendChild(confetti);
          
          const animationDuration = Math.random() * 2000 + 1000;
          const horizontalMovement = (Math.random() - 0.5) * 200;
          
          confetti.animate([
            { transform: 'translateY(-10px) translateX(0px) rotate(0deg)', opacity: 0.8 },
            { transform: `translateY(${window.innerHeight + 10}px) translateX(${horizontalMovement}px) rotate(360deg)`, opacity: 0 }
          ], {
            duration: animationDuration,
            easing: 'cubic-bezier(0.25, 0.46, 0.45, 0.94)'
          }).onfinish = () => {
            confetti.remove();
          };
        }
      }

      // Trigger confetti after page load
      setTimeout(createConfetti, 2000);

      // Professional page analytics (placeholder)
      // Only call if gtag is available
      if (typeof (window as any).gtag !== 'undefined') {
        (window as any).gtag('event', 'conversion', {
          'send_to': 'AW-CONVERSION_ID/CONVERSION_LABEL',
          'value': 1.0,
          'currency': 'USD'
        });
      }

      // Enhanced user experience
      console.log('✅ Success page loaded - Professional experience activated');
    });
  </script>
</BaseLayout>