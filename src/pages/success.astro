---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get available warehouses for the CTA section
const warehouses = await getCollection('warehouses');
const availableWarehouses = warehouses.filter(w => w.data.availability === 'available').slice(0, 3);
---

<BaseLayout title="Thank You | WarehouseHub - Your Inquiry Has Been Received">
  <!-- Enhanced Success Hero with Professional Animation -->
  <section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 overflow-hidden">
    <!-- Professional Background Effects -->
    <div class="absolute inset-0">
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary-500/10 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-blue-500/10 rounded-full blur-3xl animate-float-reverse"></div>
      <div class="absolute inset-0 bg-pattern-grid opacity-20"></div>
      
      <!-- Animated Success Elements -->
      <div class="absolute top-20 left-10 w-24 h-24 bg-emerald-500/20 rounded-full blur-xl animate-float"></div>
      <div class="absolute bottom-20 right-10 w-32 h-32 bg-blue-500/20 rounded-full blur-xl animate-float-delay"></div>
      <div class="absolute top-1/2 left-1/4 w-16 h-16 bg-purple-500/20 rounded-full blur-xl animate-float-slow"></div>
    </div>
    
    <div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- Enhanced Success Icon -->
      <div class="mb-12 animate-scale-in">
        <div class="mx-auto w-32 h-32 bg-gradient-to-br from-emerald-400 to-emerald-600 rounded-full flex items-center justify-center shadow-2xl animate-pulse-success">
          <svg class="w-16 h-16 text-white animate-check-draw" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
      </div>
      
      <!-- Professional Success Message -->
      <div class="backdrop-blur-xl bg-white/10 rounded-3xl p-8 md:p-16 border border-white/20 shadow-2xl animate-slide-up">
        <h1 class="text-4xl md:text-7xl font-bold text-white mb-8 leading-tight">
          Thank You for Your Inquiry!
        </h1>
        
        <p class="text-xl md:text-2xl text-blue-100 mb-12 leading-relaxed max-w-4xl mx-auto">
          We've received your message and our team of industrial real estate experts 
          <span class="text-white font-bold">will get back to you within 2 business hours</span>.
        </p>
        
        <!-- Professional Confirmation Details -->
        <div class="grid md:grid-cols-3 gap-8 mb-12">
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            Licensed Brokers
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            Local Market Experts
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-emerald-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            2-Hour Response Time
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Professional Contact Information Section -->
  <section class="bg-white py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-6">Need Immediate Assistance?</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">Our team of industrial real estate experts is standing by to help with your warehouse and distribution needs</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        <!-- Direct Contact -->
        <div class="text-center p-10 bg-gradient-to-br from-blue-50 to-blue-100 rounded-3xl hover:shadow-lg transition-all duration-300 group border border-blue-200">
          <div