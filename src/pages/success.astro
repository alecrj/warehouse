---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Get available warehouses for the CTA section
const warehouses = await getCollection('warehouses');
const availableWarehouses = warehouses.filter(w => w.data.availability === 'available').slice(0, 3);
---

<BaseLayout title="Thank You | WarehouseHub - Your Inquiry Has Been Received">
  <!-- Premium Success Hero -->
  <section class="relative min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-900 via-blue-900 to-slate-800 overflow-hidden">
    <!-- Animated Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-blue-600/20 to-purple-600/20"></div>
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 20px 20px;"></div>
    </div>
    
    <!-- Floating Elements -->
    <div class="absolute top-20 left-10 w-20 h-20 bg-blue-500/20 rounded-full blur-xl animate-float"></div>
    <div class="absolute bottom-20 right-10 w-32 h-32 bg-purple-500/20 rounded-full blur-xl animate-float-delay"></div>
    
    <div class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- Success Icon with Animation -->
      <div class="mb-8 animate-scale-in">
        <div class="mx-auto w-24 h-24 bg-gradient-to-br from-green-400 to-green-600 rounded-full flex items-center justify-center shadow-2xl">
          <svg class="w-12 h-12 text-white animate-check-draw" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
      </div>
      
      <!-- Success Message -->
      <div class="backdrop-blur-xl bg-white/10 rounded-3xl p-8 md:p-16 border border-white/20 shadow-2xl animate-slide-up">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
          Thank You for Your Inquiry!
        </h1>
        
        <p class="text-xl md:text-2xl text-blue-100 mb-8 leading-relaxed">
          We've received your message and our team of industrial real estate experts 
          <span class="text-white font-semibold">will get back to you within 2 business hours</span>.
        </p>

        <!-- What's Next Section -->
        <div class="bg-white/20 backdrop-blur-sm rounded-2xl p-8 mb-8 text-left">
          <h2 class="text-2xl font-bold text-white mb-6 text-center">What Happens Next?</h2>
          <div class="space-y-4">
            <div class="flex items-start">
              <div class="bg-blue-500 rounded-full w-8 h-8 flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                <span class="text-white font-bold text-sm">1</span>
              </div>
              <div>
                <h3 class="text-white font-semibold mb-1">Initial Review</h3>
                <p class="text-blue-100">Our team will review your requirements and property preferences within 2 hours</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-blue-500 rounded-full w-8 h-8 flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                <span class="text-white font-bold text-sm">2</span>
              </div>
              <div>
                <h3 class="text-white font-semibold mb-1">Expert Consultation</h3>
                <p class="text-blue-100">A real estate professional will contact you to discuss your specific needs</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="bg-blue-500 rounded-full w-8 h-8 flex items-center justify-center mr-4 mt-1 flex-shrink-0">
                <span class="text-white font-bold text-sm">3</span>
              </div>
              <div>
                <h3 class="text-white font-semibold mb-1">Property Tours</h3>
                <p class="text-blue-100">We'll schedule private tours of properties that match your criteria</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Immediate Actions -->
        <div class="flex flex-col sm:flex-row gap-6 justify-center mb-8">
          <a 
            href="tel:(555)123-4567"
            class="group relative overflow-hidden bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 text-white px-10 py-5 rounded-2xl text-lg font-semibold transition-all duration-300 transform hover:scale-105 hover:shadow-2xl"
          >
            <span class="relative z-10 flex items-center justify-center">
              <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
              </svg>
              Call Us Now: (555) 123-4567
            </span>
            <div class="absolute inset-0 bg-gradient-to-r from-green-500 to-green-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </a>
          
          <a 
            href="/warehouses" 
            class="group backdrop-blur-xl bg-white/20 hover:bg-white/30 text-white border-2 border-white/30 hover:border-white/50 px-10 py-5 rounded-2xl text-lg font-semibold transition-all duration-300 transform hover:scale-105"
          >
            <span class="flex items-center justify-center">
              <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              Continue Browsing Properties
            </span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Professional Contact Information -->
  <section class="bg-white py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Need Immediate Assistance?</h2>
        <p class="text-xl text-gray-600">Our team is standing by to help with your industrial real estate needs</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Direct Contact -->
        <div class="text-center p-8 bg-gradient-to-br from-blue-50 to-blue-100 rounded-3xl hover:shadow-lg transition-all duration-300 group">
          <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl w-16 h-16 flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Direct Line</h3>
          <p class="text-gray-600 mb-4">Speak directly with our experts</p>
          <a href="tel:(555)123-4567" class="text-2xl font-bold text-blue-600 hover:text-blue-700 transition-colors duration-300">(555) 123-4567</a>
          <p class="text-sm text-gray-500 mt-2">Mon-Fri: 8AM-6PM EST</p>
        </div>
        
        <!-- Email Support -->
        <div class="text-center p-8 bg-gradient-to-br from-purple-50 to-purple-100 rounded-3xl hover:shadow-lg transition-all duration-300 group">
          <div class="bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl w-16 h-16 flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Email Support</h3>
          <p class="text-gray-600 mb-4">Professional correspondence</p>
          <a href="mailto:info@warehousehub.com" class="text-lg font-semibold text-purple-600 hover:text-purple-700 transition-colors duration-300">info@warehousehub.com</a>
          <p class="text-sm text-gray-500 mt-2">Response within 2 hours</p>
        </div>
        
        <!-- Emergency Line -->
        <div class="text-center p-8 bg-gradient-to-br from-green-50 to-green-100 rounded-3xl hover:shadow-lg transition-all duration-300 group">
          <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-2xl w-16 h-16 flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-2">Quick Response</h3>
          <p class="text-gray-600 mb-4">Time-sensitive requirements</p>
          <a href="tel:(555)123-9999" class="text-lg font-semibold text-green-600 hover:text-green-700 transition-colors duration-300">(555) 123-9999</a>
          <p class="text-sm text-gray-500 mt-2">Priority Support Line</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Continue Exploring Section -->
  {availableWarehouses.length > 0 && (
    <section class="bg-gray-50 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">While You Wait, Explore More Properties</h2>
          <p class="text-xl text-gray-600">Discover other premium warehouse facilities that might interest you</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {availableWarehouses.map((warehouse) => (
            <div class="group bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-gray-100 overflow-hidden">
              <div class="relative h-48 overflow-hidden">
                {warehouse.data.images && warehouse.data.images[0] ? (
                  <img 
                    src={warehouse.data.images[0]} 
                    alt={warehouse.data.title}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
                    <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                  </div>
                )}
                
                <div class="absolute top-4 right-4">
                  <div class="bg-green-500 text-white px-3 py-1 rounded-full text-sm font-semibold shadow-lg">
                    Available
                  </div>
                </div>
              </div>
              
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors duration-300">{warehouse.data.title}</h3>
                
                <div class="flex items-center text-gray-600 mb-4">
                  <svg class="w-4 h-4 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <span class="font-medium">{warehouse.data.location}</span>
                </div>
                
                <div class="flex justify-between items-center mb-6">
                  <div>
                    <div class="text-2xl font-bold text-blue-600">{warehouse.data.price}</div>
                    <div class="text-sm text-gray-500">per sq ft/year</div>
                  </div>
                  <div class="text-right">
                    <div class="text-xl font-bold text-gray-900">{warehouse.data.size.toLocaleString()}</div>
                    <div class="text-sm text-gray-500">sq ft</div>
                  </div>
                </div>
                
                <a 
                  href={`/warehouses/${warehouse.data.slug}`}
                  class="block text-center bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white px-6 py-3 rounded-2xl font-semibold transition-all duration-300 transform group-hover:scale-105"
                >
                  View Details
                </a>
              </div>
            </div>
          ))}
        </div>

        <div class="text-center mt-12">
          <a 
            href="/warehouses" 
            class="inline-flex items-center bg-gradient-to-r from-gray-900 to-gray-800 hover:from-gray-800 hover:to-gray-700 text-white px-8 py-4 rounded-2xl font-semibold text-lg transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl group"
          >
            <span>View All Properties</span>
            <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  )}

  <style>
    /* Success page animations */
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }
    
    @keyframes float-delay {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-15px); }
    }
    
    @keyframes scale-in {
      from { opacity: 0; transform: scale(0.5); }
      to { opacity: 1; transform: scale(1); }
    }
    
    @keyframes slide-up {
      from { opacity: 0; transform: translateY(50px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    @keyframes check-draw {
      0% { stroke-dasharray: 0 50; }
      100% { stroke-dasharray: 50 0; }
    }
    
    .animate-float {
      animation: float 6s ease-in-out infinite;
    }
    
    .animate-float-delay {
      animation: float-delay 8s ease-in-out infinite;
    }
    
    .animate-scale-in {
      animation: scale-in 0.8s ease-out 0.5s both;
    }
    
    .animate-slide-up {
      animation: slide-up 1s ease-out 0.3s both;
    }
    
    .animate-check-draw {
      stroke-dasharray: 50;
      animation: check-draw 1s ease-out 1.5s both;
    }
  </style>

  <script>
    // Add any additional interactivity here
    document.addEventListener('DOMContentLoaded', () => {
      // Smooth reveal animations for elements
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animate-fade-in');
          }
        });
      }, observerOptions);

      // Observe elements for scroll animations
      document.querySelectorAll('.group').forEach(el => {
        observer.observe(el);
      });
    });
  </script>
</BaseLayout>