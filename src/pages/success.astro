---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout 
  title="Thank You! | Warehouse Locating"
  description="Thanks for your inquiry. We'll be in touch within 24 hours with qualified warehouse options."
>
  <Navigation />
  
  <main>
    <!-- Hero Section -->
    <section class="relative pt-20 pb-16 bg-gradient-to-br from-green-900 via-green-800 to-green-900 overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 bg-pattern-dots opacity-10"></div>
      <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-green-500/20 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-emerald-500/20 rounded-full blur-3xl animate-float-reverse"></div>
      
      <div class="relative z-10 max-w-7xl mx-auto px-6 lg:px-8">
        <div class="text-center">
          <!-- Success Icon -->
          <div class="w-24 h-24 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-8 animate-on-scroll">
            <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </div>

          <h1 class="text-4xl lg:text-6xl font-black text-white leading-tight tracking-tight mb-6 animate-on-scroll">
            THANK YOU!
            <span class="block bg-gradient-to-r from-green-400 to-emerald-400 bg-clip-text text-transparent">MESSAGE RECEIVED</span>
          </h1>
          
          <p class="text-lg lg:text-xl text-green-100 max-w-4xl mx-auto leading-relaxed animate-on-scroll mb-8">
            We've received your warehouse inquiry and will be in touch within 24 hours with qualified options that match your requirements.
          </p>

          <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 max-w-2xl mx-auto animate-on-scroll">
            <h2 class="text-xl font-bold text-white mb-4">What Happens Next?</h2>
            <div class="grid md:grid-cols-3 gap-6 text-center">
              <div>
                <div class="w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center mx-auto mb-3">
                  <span class="text-white font-bold">1</span>
                </div>
                <h3 class="font-semibold text-white mb-1">Review Your Needs</h3>
                <p class="text-sm text-green-100">We analyze your requirements</p>
              </div>
              <div>
                <div class="w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center mx-auto mb-3">
                  <span class="text-white font-bold">2</span>
                </div>
                <h3 class="font-semibold text-white mb-1">Find Matches</h3>
                <p class="text-sm text-green-100">Search our network for options</p>
              </div>
              <div>
                <div class="w-12 h-12 bg-green-500 rounded-xl flex items-center justify-center mx-auto mb-3">
                  <span class="text-white font-bold">3</span>
                </div>
                <h3 class="font-semibold text-white mb-1">Schedule Tours</h3>
                <p class="text-sm text-green-100">Set up property visits</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Information -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          
          <!-- Left Column - Contact Info -->
          <div class="animate-on-scroll">
            <h2 class="text-3xl font-bold text-gray-900 mb-8">
              Need to Reach Us Immediately?
            </h2>
            
            <div class="space-y-6">
              <!-- Phone -->
              <div class="flex items-center space-x-4">
                <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
                  <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-semibold text-gray-700">Call Us Direct</p>
                  <a href="tel:954-937-9667" class="text-2xl font-bold text-green-600 hover:text-green-700 transition-colors duration-200">
                    (954) 937-9667
                  </a>
                </div>
              </div>

            

              <!-- Email -->
              <div class="flex items-center space-x-4">
                <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
                  <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-semibold text-gray-700">Email Us</p>
                  <a href="mailto:info@warehouselocating.com" class="text-2xl font-bold text-green-600 hover:text-green-700 transition-colors duration-200">
                    info@warehouselocating.com
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Right Column - Additional Info -->
          <div class="animate-on-scroll">
            <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-3xl p-8">
              <h3 class="text-2xl font-bold text-gray-900 mb-6">
                Why We're Different
              </h3>
              
              <div class="space-y-4">
                <div class="flex items-start space-x-3">
                  <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                  <div>
                    <p class="font-semibold text-gray-900">Completely Free to You</p>
                    <p class="text-sm text-gray-600">Landlords pay all of our feesâ€”100% free tenant representation</p>
                  </div>
                </div>

                <div class="flex items-start space-x-3">
                  <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                  <div>
                    <p class="font-semibold text-gray-900">Industrial-Only Focus</p>
                    <p class="text-sm text-gray-600">We specialize exclusively in warehouse and industrial properties</p>
                  </div>
                </div>

                <div class="flex items-start space-x-3">
                  <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                  <div>
                    <p class="font-semibold text-gray-900">Local South Florida Experts</p>
                    <p class="text-sm text-gray-600">Deep knowledge of Miami-Dade, Broward, and Palm Beach markets</p>
                  </div>
                </div>

                <div class="flex items-start space-x-3">
                  <div class="w-6 h-6 bg-green-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                  <div>
                    <p class="font-semibold text-gray-900">Network Access</p>
                    <p class="text-sm text-gray-600">On-market and off-market properties through our broker network</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Browse Properties Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center animate-on-scroll">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">
            Browse Available Properties
          </h2>
          <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
            While you wait for our response, feel free to browse our current warehouse listings
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a 
              href="/warehouses" 
              class="bg-gradient-to-r from-primary-600 to-primary-700 text-white px-8 py-4 rounded-2xl text-lg font-semibold hover:from-primary-700 hover:to-primary-800 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 transform inline-block"
            >
              View All Properties
            </a>
            <a 
              href="/" 
              class="bg-white text-gray-900 border-2 border-gray-200 px-8 py-4 rounded-2xl text-lg font-semibold hover:bg-gray-50 hover:border-gray-300 transition-all duration-300 inline-block"
            >
              Back to Homepage
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>