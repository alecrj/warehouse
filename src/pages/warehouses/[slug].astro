---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ImageGallery from '../../components/ImageGallery.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const warehouses = await getCollection('warehouses');
  return warehouses.map((warehouse: CollectionEntry<'warehouses'>) => ({
    params: { slug: warehouse.data.slug },
    props: { warehouse },
  }));
}

interface Props {
  warehouse: CollectionEntry<'warehouses'>;
}

const { warehouse } = Astro.props;
const { title, price, size, location, address, features, images, description, availability, metaTitle, metaDescription } = warehouse.data;

// Get related properties
const allWarehouses = await getCollection('warehouses');
const relatedProperties = allWarehouses
  .filter(w => w.data.slug !== warehouse.data.slug && w.data.availability === 'available')
  .slice(0, 3);
---

<BaseLayout 
  title={metaTitle || `${title} - Premium Warehouse Space | WarehouseHub`}
  description={metaDescription || `${size.toLocaleString()} sq ft premium warehouse facility in ${location}. Modern infrastructure, strategic location. ${description.substring(0, 150)}...`}
>
  <!-- Enhanced Hero Section with Breadcrumb -->
  <section class="relative bg-gradient-to-br from-slate-900 via-blue-900 to-slate-800 pt-24 pb-12 overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.05"%3E%3Ccircle cx="30" cy="30" r="2"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] animate-pulse"></div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Premium Breadcrumb -->
      <nav class="mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-sm">
          <li><a href="/" class="text-blue-200 hover:text-white transition-colors duration-300">Home</a></li>
          <li><span class="text-blue-300">•</span></li>
          <li><a href="/warehouses" class="text-blue-200 hover:text-white transition-colors duration-300">Properties</a></li>
          <li><span class="text-blue-300">•</span></li>
          <li class="text-white font-semibold">{title}</li>
        </ol>
      </nav>

      <!-- Hero Content -->
      <div class="max-w-4xl">
        <!-- Status Badge -->
        <div class="inline-flex items-center mb-6">
          <div class={`px-4 py-2 rounded-full text-sm font-semibold shadow-lg backdrop-blur-sm border ${
            availability === 'available' ? 'bg-green-500/20 text-green-300 border-green-500/30' :
            availability === 'pending' ? 'bg-yellow-500/20 text-yellow-300 border-yellow-500/30' :
            'bg-red-500/20 text-red-300 border-red-500/30'
          }`}>
            <svg class="w-4 h-4 mr-2 inline" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            {availability === 'available' ? 'Available Now' :
             availability === 'pending' ? 'Pending Lease' : 'Recently Leased'}
          </div>
        </div>

        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">{title}</h1>
        
        <div class="flex items-center text-blue-200 mb-8 text-lg">
          <svg class="w-6 h-6 mr-3 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
          <span class="font-semibold">{address}</span>
        </div>

        <!-- Key Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <div class="backdrop-blur-xl bg-white/10 rounded-2xl p-4 border border-white/20">
            <div class="text-2xl md:text-3xl font-bold text-white mb-1">{price}</div>
            <div class="text-blue-200 text-sm font-medium">per sq ft/year</div>
          </div>
          <div class="backdrop-blur-xl bg-white/10 rounded-2xl p-4 border border-white/20">
            <div class="text-2xl md:text-3xl font-bold text-white mb-1">{size.toLocaleString()}</div>
            <div class="text-blue-200 text-sm font-medium">sq ft</div>
          </div>
          <div class="backdrop-blur-xl bg-white/10 rounded-2xl p-4 border border-white/20">
            <div class="text-2xl md:text-3xl font-bold text-white mb-1">{Math.ceil(size / 1000)}K</div>
            <div class="text-blue-200 text-sm font-medium">capacity</div>
          </div>
          <div class="backdrop-blur-xl bg-white/10 rounded-2xl p-4 border border-white/20">
            <div class="text-2xl md:text-3xl font-bold text-white mb-1">{location.split(',')[0]}</div>
            <div class="text-blue-200 text-sm font-medium">market</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Main Content Column -->
        <div class="lg:col-span-2 space-y-12">
          <!-- Enhanced Image Gallery -->
          <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-gray-100">
            <div class="p-8">
              <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-gray-900">Property Gallery</h2>
                <div class="flex items-center space-x-3">
                  <button id="fullscreenBtn" class="bg-gray-100 hover:bg-gray-200 text-gray-700 p-3 rounded-xl transition-colors duration-300">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"></path>
                    </svg>
                  </button>
                  <button id="shareBtn" class="bg-blue-100 hover:bg-blue-200 text-blue-700 p-3 rounded-xl transition-colors duration-300">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
                    </svg>
                  </button>
                </div>
              </div>
              <ImageGallery 
                images={images} 
                title={title}
                availability={availability}
              />
            </div>
          </div>

          <!-- Property Details -->
          <div class="bg-white rounded-3xl shadow-xl p-8 border border-gray-100">
            <h2 class="text-3xl font-bold text-gray-900 mb-8">Property Overview</h2>
            
            <!-- Quick Stats Grid -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-10">
              <div class="text-center p-6 bg-gradient-to-br from-blue-50 to-blue-100 rounded-2xl">
                <div class="text-3xl font-bold text-blue-600 mb-2">{size.toLocaleString()}</div>
                <div class="text-blue-700 font-semibold text-sm">Total Square Feet</div>
              </div>
              <div class="text-center p-6 bg-gradient-to-br from-purple-50 to-purple-100 rounded-2xl">
                <div class="text-3xl font-bold text-purple-600 mb-2">{Math.ceil(size / 40)}</div>
                <div class="text-purple-700 font-semibold text-sm">Loading Docks</div>
              </div>
              <div class="text-center p-6 bg-gradient-to-br from-green-50 to-green-100 rounded-2xl">
                <div class="text-3xl font-bold text-green-600 mb-2">32'</div>
                <div class="text-green-700 font-semibold text-sm">Clear Height</div>
              </div>
              <div class="text-center p-6 bg-gradient-to-br from-orange-50 to-orange-100 rounded-2xl">
                <div class="text-3xl font-bold text-orange-600 mb-2">24/7</div>
                <div class="text-orange-700 font-semibold text-sm">Access</div>
              </div>
            </div>

            <!-- Features Section -->
            <div class="mb-10">
              <h3 class="text-2xl font-bold text-gray-900 mb-6">Premium Features & Amenities</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {features.map((feature: string) => (
                  <div class="flex items-center p-4 bg-gray-50 rounded-2xl hover:bg-gray-100 transition-colors duration-300 group">
                    <div class="bg-green-100 group-hover:bg-green-200 p-2 rounded-xl mr-4 transition-colors duration-300">
                      <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                    </div>
                    <span class="font-semibold text-gray-900">{feature}</span>
                  </div>
                ))}
              </div>
            </div>

            <!-- Description -->
            <div>
              <h3 class="text-2xl font-bold text-gray-900 mb-6">Property Description</h3>
              <div class="prose prose-lg max-w-none text-gray-700 leading-relaxed" set:html={description}></div>
            </div>
          </div>

          <!-- Location & Accessibility -->
          <div class="bg-white rounded-3xl shadow-xl p-8 border border-gray-100">
            <h2 class="text-3xl font-bold text-gray-900 mb-8">Location & Accessibility</h2>
            
            <!-- Map Placeholder -->
            <div class="bg-gradient-to-br from-gray-100 to-gray-200 rounded-2xl h-64 mb-8 flex items-center justify-center">
              <div class="text-center">
                <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <p class="text-gray-600 font-semibold">Interactive map coming soon</p>
                <p class="text-gray-500 text-sm">{address}</p>
              </div>
            </div>

            <!-- Transportation Access -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <div class="text-center p-6 bg-blue-50 rounded-2xl">
                <svg class="w-8 h-8 text-blue-600 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-1.447-.894L15 9m0 11V9m0 0L9 7"></path>
                </svg>
                <h4 class="font-bold text-gray-900 mb-2">Highway Access</h4>
                <p class="text-gray-600 text-sm">Direct access to major interstates</p>
              </div>
              <div class="text-center p-6 bg-green-50 rounded-2xl">
                <svg class="w-8 h-8 text-green-600 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                </svg>
                <h4 class="font-bold text-gray-900 mb-2">Rail Connectivity</h4>
                <p class="text-gray-600 text-sm">Rail spur available on-site</p>
              </div>
              <div class="text-center p-6 bg-purple-50 rounded-2xl">
                <svg class="w-8 h-8 text-purple-600 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                </svg>
                <h4 class="font-bold text-gray-900 mb-2">Airport Proximity</h4>
                <p class="text-gray-600 text-sm">15 minutes to major airport</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <!-- Contact Form -->
          <div class="sticky top-24 space-y-8">
            <div class="bg-white rounded-3xl shadow-xl p-8 border border-gray-100">
              <div class="text-center mb-8">
                <h3 class="text-2xl font-bold text-gray-900 mb-3">Interested in This Property?</h3>
                <p class="text-gray-600">Get detailed information and schedule a private tour</p>
              </div>

              {availability === 'available' ? (
                <form 
                  name="property-inquiry" 
                  method="POST" 
                  data-netlify="true"
                  data-netlify-honeypot="bot-field"
                  action="/success"
                  class="space-y-6"
                >
                  <input type="hidden" name="form-name" value="property-inquiry" />
                  <input type="hidden" name="propertyInterested" value={title} />
                  <input type="hidden" name="source" value={`property-page-${warehouse.data.slug}`} />
                  <div class="hidden">
                    <label>Don't fill this out: <input name="bot-field" /></label>
                  </div>
                  
                  <div>
                    <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">Full Name *</label>
                    <input 
                      type="text" 
                      id="name" 
                      name="name" 
                      required
                      class="w-full px-4 py-3 border-2 border-gray-200 rounded-2xl focus:ring-4 focus:ring-blue-500/20 focus:border-blue-500 transition-all duration-300"
                    />
                  </div>

                  <div>
                    <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">Email Address *</label>
                    <input 
                      type="email" 
                      id="email" 
                      name="email" 
                      required
                      class="w-full px-4 py-3 border-2 border-gray-200 rounded-2xl focus:ring-4 focus:ring-blue-500/20 focus:border-blue-500 transition-all duration-300"
                    />
                  </div>

                  <div>
                    <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">Phone Number *</label>
                    <input 
                      type="tel" 
                      id="phone" 
                      name="phone" 
                      required
                      class="w-full px-4 py-3 border-2 border-gray-200 rounded-2xl focus:ring-4 focus:ring-blue-500/20 focus:border-blue-500 transition-all duration-300"
                    />
                  </div>

                  <div>
                    <label for="company" class="block text-sm font-semibold text-gray-700 mb-2">Company</label>
                    <input 
                      type="text" 
                      id="company" 
                      name="company" 
                      class="w-full px-4 py-3 border-2 border-gray-200 rounded-2xl focus:ring-4 focus:ring-blue-500/20 focus:border-blue-500 transition-all duration-300"
                    />
                  </div>

                  <div>
                    <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">Message *</label>
                    <textarea 
                      id="message" 
                      name="message" 
                      rows="4" 
                      required
                      placeholder="I'm interested in learning more about this property and scheduling a tour..."
                      class="w-full px-4 py-3 border-2 border-gray-200 rounded-2xl focus:ring-4 focus:ring-blue-500/20 focus:border-blue-500 transition-all duration-300 resize-none"
                    ></textarea>
                  </div>

                  <button 
                    type="submit"
                    class="w-full bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white px-8 py-4 rounded-2xl font-bold transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
                  >
                    Schedule Tour & Get Info
                  </button>
                </form>
              ) : (
                <div class="text-center py-8">
                  <div class="bg-gray-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                  </div>
                  <h4 class="text-lg font-bold text-gray-900 mb-2">Property Not Available</h4>
                  <p class="text-gray-600 mb-6">
                    This property is currently {availability === 'pending' ? 'pending lease' : 'leased'}.
                  </p>
                  <a 
                    href="/warehouses" 
                    class="inline-flex items-center text-blue-600 hover:text-blue-700 font-semibold"
                  >
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                    View Available Properties
                  </a>
                </div>
              )}
            </div>

            <!-- Quick Contact Card -->
            <div class="bg-gradient-to-br from-blue-600 to-blue-700 rounded-3xl p-8 text-white">
              <h4 class="text-xl font-bold mb-6">Need Immediate Assistance?</h4>
              <div class="space-y-4">
                <a 
                  href="tel:(555)123-4567"
                  class="flex items-center p-4 bg-white/20 hover:bg-white/30 rounded-2xl transition-colors duration-300 group"
                >
                  <div class="bg-white/20 p-3 rounded-xl mr-4 group-hover:bg-white/30 transition-colors duration-300">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="font-semibold">Call Direct</div>
                    <div class="text-blue-100 text-sm">(555) 123-4567</div>
                  </div>
                </a>
                
                <a 
                  href="mailto:info@warehousehub.com"
                  class="flex items-center p-4 bg-white/20 hover:bg-white/30 rounded-2xl transition-colors duration-300 group"
                >
                  <div class="bg-white/20 p-3 rounded-xl mr-4 group-hover:bg-white/30 transition-colors duration-300">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <div>
                    <div class="font-semibold">Email Us</div>
                    <div class="text-blue-100 text-sm">info@warehousehub.com</div>
                  </div>
                </a>
              </div>
              
              <div class="mt-6 pt-6 border-t border-white/20">
                <div class="flex items-center justify-between text-sm">
                  <span class="text-blue-100">Response Time:</span>
                  <span class="font-semibold">Within 2 Hours</span>
                </div>
              </div>
            </div>

            <!-- Trust Signals -->
            <div class="bg-white rounded-3xl shadow-xl p-8 border border-gray-100">
              <h4 class="text-lg font-bold text-gray-900 mb-6 text-center">Why Choose WarehouseHub?</h4>
              <div class="space-y-4">
                <div class="flex items-center">
                  <div class="bg-green-100 p-2 rounded-lg mr-3">
                    <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <span class="text-sm text-gray-700">Licensed Commercial Brokers</span>
                </div>
                <div class="flex items-center">
                  <div class="bg-blue-100 p-2 rounded-lg mr-3">
                    <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <span class="text-sm text-gray-700">10+ Years Experience</span>
                </div>
                <div class="flex items-center">
                  <div class="bg-purple-100 p-2 rounded-lg mr-3">
                    <svg class="w-4 h-4 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <span class="text-sm text-gray-700">Enterprise Clients</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Properties -->
  {relatedProperties.length > 0 && (
    <section class="bg-white py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">You May Also Like</h2>
          <p class="text-xl text-gray-600">Explore other premium properties in our portfolio</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {relatedProperties.map((relatedWarehouse: CollectionEntry<'warehouses'>) => (
            <div class="group bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-gray-100 overflow-hidden">
              <div class="relative h-48 overflow-hidden">
                {relatedWarehouse.data.images && relatedWarehouse.data.images[0] ? (
                  <img 
                    src={relatedWarehouse.data.images[0]} 
                    alt={relatedWarehouse.data.title}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full bg-gradient-to-br from-gray-100 to-gray-200 flex items-center justify-center">
                    <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
