                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  </div>
                  <div>
                    <div class="font-bold text-gray-900">Email Us</div>
                    <div class="text-primary-600 font-semibold">info@warehouselocating.com</div>
                  </div>
                </a>
                
                <button 
                  onclick="document.getElementById('contact-form-section').scrollIntoView({behavior: 'smooth'})"
                  class="w-full bg-primary-600 text-white py-4 rounded-xl font-semibold hover:bg-primary-700 transition-colors duration-200 flex items-center justify-center gap-2 min-h-[56px] touch-manipulation"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  Get More Info
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Form Section - Full Width -->
    <section class="py-12 sm:py-16 bg-gradient-to-br from-gray-50 to-gray-100" id="contact-form-section">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8 sm:mb-12">
          <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
            Interested in This Property?
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Get more information, schedule a tour, or ask questions about {data.title}. We'll respond within 24 hours.
          </p>
        </div>
        
        <div class="bg-white rounded-2xl shadow-2xl overflow-hidden">
          <div class="bg-gradient-to-r from-primary-600 to-primary-700 p-6 sm:p-8 text-center">
            <h3 class="text-xl sm:text-2xl font-bold text-white mb-2">Contact Our Team</h3>
            <p class="text-primary-100">Professional warehouse representation at no cost to you</p>
          </div>
          <div class="p-6 sm:p-8">
            <StandardizedContactForm 
              source={`Property Detail - ${data.title}`}
              title=""
              description=""
              warehouseProperty={data.title}
              showWarehouseSelect={false}
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Related Properties -->
    {relatedProperties.length > 0 && (
      <section class="py-12 sm:py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-12">
            <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 mb-4">Similar Properties</h2>
            <p class="text-lg text-gray-600">Other warehouse options that might interest you</p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {relatedProperties.map((property) => (
              <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
                <div class="relative h-48 sm:h-56 overflow-hidden">
                  <img 
                    src={property.data.images && property.data.images[0] ? property.data.images[0] : '/placeholder.jpg'}
                    alt={property.data.title}
                    class="w-full h-full object-cover transition-transform duration-300 hover:scale-110"
                    loading="lazy"
                  />
                  <div class="absolute top-4 left-4">
                    <span class="px-3 py-1 bg-green-500 text-white rounded-full text-xs font-semibold">
                      Available Now
                    </span>
                  </div>
                  <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
                </div>
                
                <div class="p-6">
                  <div class="flex items-center justify-between mb-4">
                    <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded-full">{property.data.size.toLocaleString()} SF</span>
                    <span class="text-xl font-bold text-primary-600">{property.data.price}</span>
