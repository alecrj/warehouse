---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ImageGallery from '../../components/ImageGallery.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const warehouses = await getCollection('warehouses');
  return warehouses.map((warehouse: CollectionEntry<'warehouses'>) => ({
    params: { slug: warehouse.data.slug },
    props: { warehouse },
  }));
}

interface Props {
  warehouse: CollectionEntry<'warehouses'>;
}

const { warehouse } = Astro.props;
const { title, price, size, location, address, features, images, description, availability, metaTitle, metaDescription } = warehouse.data;
---

<BaseLayout 
  title={metaTitle || `${title} - Warehouse for Lease | WarehouseHub`}
  description={metaDescription || `${size.toLocaleString()} sq ft warehouse available for lease in ${location}. ${description.substring(0, 150)}...`}
>
  <section class="py-8 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="mb-6">
        <ol class="flex items-center space-x-2 text-sm">
          <li><a href="/" class="text-gray-500 hover:text-gray-700">Home</a></li>
          <li><span class="text-gray-400">/</span></li>
          <li><a href="/warehouses" class="text-gray-500 hover:text-gray-700">Warehouses</a></li>
          <li><span class="text-gray-400">/</span></li>
          <li class="text-gray-900 font-medium">{title}</li>
        </ol>
      </nav>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          <!-- Image Gallery -->
          <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8 p-4">
            <ImageGallery 
              images={images} 
              title={title}
              availability={availability}
            />
          </div>

          <!-- Property Details -->
          <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
            <h1 class="text-3xl font-bold mb-4">{title}</h1>
            <div class="flex items-center text-gray-600 mb-6">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              {address}
            </div>

            <div class="grid grid-cols-2 gap-4 mb-6">
              <div class="bg-gray-50 p-4 rounded-lg">
                <span class="block text-sm text-gray-600 mb-1">Price</span>
                <span class="text-2xl font-bold text-blue-600">{price}</span>
              </div>
              <div class="bg-gray-50 p-4 rounded-lg">
                <span class="block text-sm text-gray-600 mb-1">Size</span>
                <span class="text-2xl font-bold">{size.toLocaleString()} sq ft</span>
              </div>
            </div>

            <div class="mb-6">
              <h2 class="text-xl font-semibold mb-3">Features</h2>
              <div class="grid grid-cols-2 gap-2">
                {features.map((feature: string) => (
                  <div class="flex items-center">
                    <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-gray-700">{feature}</span>
                  </div>
                ))}
              </div>
            </div>

            <div>
              <h2 class="text-xl font-semibold mb-3">Description</h2>
              <div class="prose max-w-none text-gray-700" set:html={description}></div>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1">
          <!-- Contact Form -->
          <div class="bg-white rounded-lg shadow-lg p-6 sticky top-4">
            <h3 class="text-xl font-semibold mb-4">Inquire About This Property</h3>
            {availability === 'available' ? (
              <form 
                name="property-inquiry" 
                method="POST" 
                data-netlify="true"
                data-netlify-honeypot="bot-field"
                action="/success"
              >
                <input type="hidden" name="form-name" value="property-inquiry" />
                <input type="hidden" name="propertyInterested" value={title} />
                <input type="hidden" name="source" value={`property-page-${warehouse.data.slug}`} />
                <div class="hidden">
                  <label>Don't fill this out: <input name="bot-field" /></label>
                </div>
                
                <div class="mb-4">
                  <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Name *</label>
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  />
                </div>

                <div class="mb-4">
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email *</label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  />
                </div>

                <div class="mb-4">
                  <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">Phone *</label>
                  <input 
                    type="tel" 
                    id="phone" 
                    name="phone" 
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  />
                </div>

                <div class="mb-4">
                  <label for="company" class="block text-sm font-medium text-gray-700 mb-2">Company</label>
                  <input 
                    type="text" 
                    id="company" 
                    name="company" 
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  />
                </div>

                <div class="mb-4">
                  <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Message *</label>
                  <textarea 
                    id="message" 
                    name="message" 
                    rows="4" 
                    required
                    placeholder="I'm interested in learning more about this property..."
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  ></textarea>
                </div>

                <button 
                  type="submit"
                  class="w-full bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold"
                >
                  Send Inquiry
                </button>
              </form>
            ) : (
              <div class="text-center py-8">
                <p class="text-gray-600 mb-4">
                  This property is currently {availability === 'pending' ? 'pending' : 'leased'}.
                </p>
                <a 
                  href="/warehouses" 
                  class="text-blue-600 hover:text-blue-700 font-semibold"
                >
                  View Available Properties â†’
                </a>
              </div>
            )}

            <!-- Quick Contact Info -->
            <div class="mt-6 pt-6 border-t border-gray-200">
              <h4 class="font-semibold mb-3">Quick Contact</h4>
              <p class="text-sm text-gray-600 mb-2">
                <span class="font-medium">Phone:</span> (555) 123-4567
              </p>
              <p class="text-sm text-gray-600">
                <span class="font-medium">Email:</span> info@warehousehub.com
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Related Properties -->
      <div class="mt-12">
        <h2 class="text-2xl font-bold mb-6">You May Also Like</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- This would be populated with related warehouses -->
          <div class="text-center text-gray-500 py-8 bg-white rounded-lg">
            Related properties will appear here
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>