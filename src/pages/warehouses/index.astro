          minSize: null,
          maxSize: null,
          budget: ''
        };

        // Reset basic filters
        currentFilters.search = '';

        filterProperties();
      }

      function clearAllFilters(): void {
        // Reset filters object
        currentFilters = {
          search: ''
        };

        // Clear search form
        clearAllSearchFilters();

        // Show all properties
        filterProperties();
      }

      // Make clearAllFilters globally available
      window.clearAllFilters = clearAllFilters;

      // Initialize from URL parameters
      function initializeFromURL(): void {
        const urlParams = new URLSearchParams(window.location.search);
        
        // Set search if provided
        const searchQuery = urlParams.get('search');
        if (searchQuery && searchInput) {
          searchInput.value = searchQuery;
          currentFilters.search = searchQuery.toLowerCase();
        }
        
        // Set advanced filters from URL
        const urlCounty = urlParams.get('county');
        const urlMinSize = urlParams.get('min_size');
        const urlMaxSize = urlParams.get('max_size');
        
        if (urlCounty && countySelect) {
          countySelect.value = urlCounty;
          advancedFilters.county = urlCounty;
        }
        
        if (urlMinSize && minSizeInput) {
          minSizeInput.value = urlMinSize;
          advancedFilters.minSize = parseInt(urlMinSize);
        }
        
        if (urlMaxSize && maxSizeInput) {
          maxSizeInput.value = urlMaxSize;
          advancedFilters.maxSize = parseInt(urlMaxSize);
        }
        
        filterProperties();
      }

      // Initialize from URL on page load
      initializeFromURL();
    });
