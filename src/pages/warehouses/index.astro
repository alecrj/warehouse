              {warehouse.data.images && warehouse.data.images[0] ? (
                <img 
                  src={warehouse.data.images[0]} 
                  alt={warehouse.data.title}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                  loading="lazy"
