---
// Enhanced warehouses listing page with fixed mobile headline positioning
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

// Define proper types
interface WarehouseData {
  title: string;
  location: string;
  price: string;
  size: number;
  description: string;
  images?: string[];
  features?: string[];
  featured?: boolean;
  availability?: string;
  slug: string;
  county?: string; // Added optional county field
}

interface Warehouse {
  data: WarehouseData;
}

// Get warehouse data from CMS
let allWarehouses: Warehouse[] = [];
let availableWarehouses: Warehouse[] = [];
let pendingWarehouses: Warehouse[] = [];
let totalSqFt = 0;
let averageSize = 0;

try {
  allWarehouses = await getCollection('warehouses');
  availableWarehouses = allWarehouses.filter((w: Warehouse) => w.data.availability === 'available');
  pendingWarehouses = allWarehouses.filter((w: Warehouse) => w.data.availability === 'pending');
  totalSqFt = allWarehouses.reduce((sum: number, w: Warehouse) => sum + (w.data.size || 0), 0);
  averageSize = allWarehouses.length > 0 ? Math.round(totalSqFt / allWarehouses.length) : 0;
} catch (error) {
  console.log('No warehouse data yet:', error);
}

// Fixed counties array - these are the 3 South Florida counties
const counties = ['Miami-Dade', 'Palm Beach', 'Broward'];

// Get search parameters
const url = Astro.url;
const minSize = url.searchParams.get('min_size');
const maxSize = url.searchParams.get('max_size');
const county = url.searchParams.get('county');
const availability = url.searchParams.get('availability');

const pageTitle = 'Available Warehouse Properties | South Florida Industrial Leasing';
const pageDescription = 'Browse premium warehouse and industrial properties across South Florida. Expert tenant representation with zero fees. Modern facilities, competitive rates.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Navigation />
  
  <main>
    <!-- Enhanced Hero Section with Fixed Mobile Headline Position -->
    <section class="relative min-h-screen overflow-hidden flex items-start lg:items-center">
      <!-- Video Background -->
      <video 
        autoplay 
        muted 
        loop 
        playsinline
        class="absolute inset-0 w-full h-full object-cover"
        poster="/warehouse-hero.jpg"
      >
        <source src="/videos/warehousevid.mp4" type="video/mp4">
        <!-- Fallback for browsers that don't support video -->
      </video>
      
      <!-- Video Overlay -->
      <div class="absolute inset-0 bg-black/60"></div>
      
      <!-- Gradient Overlay for extra depth -->
      <div class="absolute inset-0 bg-gradient-to-br from-slate-900/80 via-slate-800/60 to-slate-900/80"></div>
      
      <!-- Background Elements (subtle over video) -->
      <div class="absolute inset-0">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary-500/20 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-blue-500/20 rounded-full blur-3xl animate-float-reverse"></div>
      </div>
      
      <div class="relative z-10 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-24 sm:pt-32 lg:pt-16 pb-8">
        <div class="text-center">
          <h1 class="text-3xl sm:text-4xl lg:text-6xl font-black text-white leading-tight tracking-tight mb-4 sm:mb-6 animate-on-scroll drop-shadow-2xl">
            BROWSE OUR
            <span class="block bg-gradient-to-r from-primary-400 to-blue-400 bg-clip-text text-transparent">
              FEATURED PROPERTIES
            </span>
          </h1>
          <p class="text-base sm:text-lg lg:text-xl text-gray-200 max-w-4xl mx-auto leading-relaxed mb-2 animate-on-scroll drop-shadow-lg">
            Premium warehouse and industrial properties across South Florida.
          </p>
          <p class="text-sm sm:text-base text-gray-300 leading-relaxed mb-6 sm:mb-8 max-w-3xl mx-auto animate-on-scroll drop-shadow-lg">
            Expert representation. Zero fees. Perfect matches.
          </p>
          
          <!-- Enhanced Statistics Cards with Mobile Optimization -->
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-3 sm:gap-4 lg:gap-6 animate-on-scroll mt-8 sm:mt-12">
            <div class="group text-center p-4 sm:p-6 lg:p-8 bg-white/10 backdrop-blur-xl rounded-2xl lg:rounded-3xl border border-white/20 shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-105 hover:bg-white/15 relative overflow-hidden before:absolute before:inset-0 before:bg-gradient-to-br before:from-white/20 before:via-transparent before:to-transparent before:opacity-0 hover:before:opacity-100 before:transition-opacity before:duration-500">
              <div class="relative z-10">
                <div class="text-2xl sm:text-3xl lg:text-4xl font-black text-white mb-1 sm:mb-2 lg:mb-3 drop-shadow-lg group-hover:text-primary-200 transition-colors duration-300">
                  {allWarehouses.length}
                </div>
                <div class="text-white/80 text-xs sm:text-sm font-semibold uppercase tracking-wider drop-shadow-sm">Total Properties</div>
              </div>
            </div>
            <div class="group text-center p-4 sm:p-6 lg:p-8 bg-white/10 backdrop-blur-xl rounded-2xl lg:rounded-3xl border border-white/20 shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-105 hover:bg-white/15 relative overflow-hidden before:absolute before:inset-0 before:bg-gradient-to-br before:from-white/20 before:via-transparent before:to-transparent before:opacity-0 hover:before:opacity-100 before:transition-opacity before:duration-500">
              <div class="relative z-10">
                <div class="text-2xl sm:text-3xl lg:text-4xl font-black text-white mb-1 sm:mb-2 lg:mb-3 drop-shadow-lg group-hover:text-green-200 transition-colors duration-300">
                  {availableWarehouses.length}
                </div>
                <div class="text-white/80 text-xs sm:text-sm font-semibold uppercase tracking-wider drop-shadow-sm">Available Now</div>
              </div>
            </div>
            <div class="group text-center p-4 sm:p-6 lg:p-8 bg-white/10 backdrop-blur-xl rounded-2xl lg:rounded-3xl border border-white/20 shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-105 hover:bg-white/15 relative overflow-hidden before:absolute before:inset-0 before:bg-gradient-to-br before:from-white/20 before:via-transparent before:to-transparent before:opacity-0 hover:before:opacity-100 before:transition-opacity before:duration-500">
              <div class="relative z-10">
                <div class="text-2xl sm:text-3xl lg:text-4xl font-black text-white mb-1 sm:mb-2 lg:mb-3 drop-shadow-lg group-hover:text-blue-200 transition-colors duration-300">
                  {totalSqFt.toLocaleString()}
                </div>
                <div class="text-white/80 text-xs sm:text-sm font-semibold uppercase tracking-wider drop-shadow-sm">Total SQ FT</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Enhanced Search & Filters Section -->
    <section class="py-8 sm:py-12 bg-white border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        
        <!-- Advanced Search Form -->
        <div class="max-w-6xl mx-auto mb-8 sm:mb-12">
          <div class="bg-white rounded-2xl lg:rounded-3xl shadow-xl border border-gray-200 p-4 sm:p-6 lg:p-8">
            <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-4 sm:mb-6 text-center">Find Your Perfect Warehouse</h2>
            
            <!-- Search Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6">
              
              <!-- Text Search -->
              <div class="space-y-2">
                <label class="block text-sm font-semibold text-gray-700">Search Properties</label>
                <div class="relative">
                  <input 
                    type="text" 
                    id="search-input"
                    placeholder="Location, features, name..." 
                    class="w-full px-4 py-3 sm:py-4 pl-10 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors text-base min-h-[48px] touch-manipulation"
                  >
                  <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                  </svg>
                </div>
              </div>

              <!-- County Filter -->
              <div class="space-y-2">
                <label class="block text-sm font-semibold text-gray-700">County</label>
                <select 
                  id="county-select"
                  class="w-full px-4 py-3 sm:py-4 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors appearance-none bg-white text-base min-h-[48px] touch-manipulation bg-select-arrow bg-no-repeat bg-[length:16px] bg-[right_12px_center]"
                >
                  <option value="">All Counties</option>
                  {counties.map(county => (
                    <option value={county}>{county}</option>
                  ))}
                </select>
              </div>

              <!-- Size Range -->
              <div class="space-y-2">
                <label class="block text-sm font-semibold text-gray-700">Size Range (SF)</label>
                <div class="grid grid-cols-2 gap-2">
                  <input 
                    type="number" 
                    id="min-size"
                    placeholder="Min"
                    class="w-full px-3 py-3 sm:py-4 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors text-sm min-h-[44px] touch-manipulation"
                  >
                  <input 
                    type="number" 
                    id="max-size"
                    placeholder="Max"
                    class="w-full px-3 py-3 sm:py-4 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors text-sm min-h-[44px] touch-manipulation"
                  >
                </div>
              </div>

              <!-- Monthly Budget -->
              <div class="space-y-2">
                <label class="block text-sm font-semibold text-gray-700">Monthly Budget</label>
                <select
                  id="budget-select"
                  class="w-full px-4 py-3 sm:py-4 border border-gray-300 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors appearance-none bg-white text-base min-h-[48px] touch-manipulation bg-select-arrow bg-no-repeat bg-[length:16px] bg-[right_12px_center]"
                >
                  <option value="">Select budget...</option>
                  <option value="1000-3000">$1,000-3,000/month</option>
                  <option value="3000-5000">$3,000-5,000/month</option>
                  <option value="5000-10000">$5,000-10,000/month</option>
                  <option value="10000-20000">$10,000-20,000/month</option>
                  <option value="20000-50000">$20,000-50,000/month</option>
                  <option value="50000+">$50,000+/month</option>
                  <option value="negotiable">Negotiable</option>
                </select>
              </div>

            </div>

            <!-- Search Actions -->
            <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center mt-6 sm:mt-8">
              <button 
                id="apply-filters"
                class="px-6 sm:px-8 py-3 sm:py-4 bg-primary-600 text-white rounded-xl font-semibold hover:bg-primary-700 transition-colors duration-200 flex items-center justify-center gap-2 min-h-[48px] touch-manipulation text-base"
                type="button"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
                Search Properties
              </button>
              <button 
                id="clear-search"
                class="px-6 sm:px-8 py-3 sm:py-4 border-2 border-gray-300 text-gray-700 rounded-xl font-semibold hover:bg-gray-50 transition-colors duration-200 min-h-[48px] touch-manipulation text-base"
                type="button"
              >
                Clear All
              </button>
            </div>
          </div>
        </div>

        <!-- Results Counter -->
        <div class="text-center mb-6 sm:mb-8">
          <p id="results-counter" class="text-gray-600 text-base sm:text-lg">
            Showing <span id="visible-count">{allWarehouses.length}</span> of <span id="total-count">{allWarehouses.length}</span> properties
          </p>
        </div>
      </div>
    </section>

    <!-- Properties Grid -->
    <section class="py-8 sm:py-12 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div id="properties-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
          {allWarehouses.map((warehouse) => (
            <div 
              class="property-card bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 flex flex-col"
              data-warehouse={JSON.stringify(warehouse.data)}
            >
              <!-- Image Section -->
              <div class="relative h-48 sm:h-56 lg:h-64 overflow-hidden">
                <img 
                  src={warehouse.data.images && warehouse.data.images[0] ? warehouse.data.images[0] : '/placeholder.jpg'}
                  alt={warehouse.data.title}
                  class="w-full h-full object-cover transition-transform duration-300 hover:scale-105"
                  loading="lazy"
                />
                
                <!-- Status Badge -->
                <div class="absolute top-3 sm:top-4 left-3 sm:left-4">
                  <span class={`px-2 sm:px-3 py-1 rounded-full text-xs font-semibold ${
                    warehouse.data.availability === 'available' 
                      ? 'bg-green-100 text-green-700' 
                      : 'bg-yellow-100 text-yellow-700'
                  }`}>
                    {warehouse.data.availability === 'available' ? 'Available Now' : 'Pending'}
                  </span>
                </div>

                <!-- Featured Badge -->
                {warehouse.data.featured && (
                  <div class="absolute top-3 sm:top-4 right-3 sm:right-4">
                    <span class="px-2 sm:px-3 py-1 bg-primary-500 text-white rounded-full text-xs font-semibold">
                      Featured
                    </span>
                  </div>
                )}
              </div>

              <!-- Content Section -->
              <div class="p-4 sm:p-6 flex-1 flex flex-col">
                <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-2 line-clamp-2">{warehouse.data.title}</h3>
                <p class="text-gray-600 mb-3 sm:mb-4 flex items-center text-sm sm:text-base">
                  <svg class="w-4 h-4 mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  {warehouse.data.location}
                </p>
                
                <!-- Price and Size -->
                <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-2 sm:gap-0 mb-3 sm:mb-4">
                  <span class="text-xl sm:text-2xl font-bold text-primary-600">{warehouse.data.price}</span>
                  <span class="text-gray-500 font-medium text-sm sm:text-base">{warehouse.data.size?.toLocaleString()} SF</span>
                </div>
                
                <!-- Description -->
                <p class="text-gray-600 text-sm mb-3 sm:mb-4 line-clamp-3 flex-1">{warehouse.data.description}</p>
                
                <!-- Features -->
                {warehouse.data.features && warehouse.data.features.length > 0 && (
                  <div class="mb-4">
                    <div class="flex flex-wrap gap-1">
                      {warehouse.data.features.slice(0, 3).map((feature) => (
                        <span class="px-2 py-1 bg-gray-100 text-gray-700 rounded text-xs">
                          {feature}
                        </span>
                      ))}
                      {warehouse.data.features.length > 3 && (
                        <span class="px-2 py-1 bg-gray-100 text-gray-700 rounded text-xs">
                          +{warehouse.data.features.length - 3} more
                        </span>
                      )}
                    </div>
                  </div>
                )}
                
                <!-- CTA Button -->
                <a 
                  href={`/warehouses/${warehouse.data.slug}`}
                  class="w-full bg-primary-600 text-white py-3 sm:py-4 rounded-xl font-semibold hover:bg-primary-700 transition-colors duration-200 mt-auto min-h-[48px] flex items-center justify-center touch-manipulation text-sm sm:text-base"
                >
                  View Details
                </a>
              </div>
            </div>
          ))}
        </div>

        <!-- No Results Message -->
        <div id="no-results" class="hidden text-center py-12 sm:py-16">
          <div class="max-w-md mx-auto">
            <svg class="w-12 h-12 sm:w-16 sm:h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
            <h3 class="text-lg sm:text-xl font-semibold text-gray-900 mb-2">No properties found</h3>
            <p class="text-gray-600 mb-4 text-sm sm:text-base">Try adjusting your search criteria to find more results.</p>
            <button 
              class="px-6 py-3 bg-primary-600 text-white rounded-xl hover:bg-primary-700 transition-colors min-h-[48px] touch-manipulation"
              onclick="window.clearAllFilters()"
              type="button"
            >
              Clear All Filters
            </button>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action Section -->
    <section class="py-12 sm:py-16 lg:py-20 bg-primary-600">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-white mb-4 sm:mb-6">
          Don't See What You're Looking For?
        </h2>
        <p class="text-base sm:text-lg lg:text-xl text-primary-100 mb-6 sm:mb-8 leading-relaxed">
          We have access to off-market properties and can help you find exactly what you need. 
          Our service is completely free - landlords pay our fee.
        </p>
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center">
          <a 
            href="/contact" 
            class="px-6 sm:px-8 py-3 sm:py-4 bg-white text-primary-600 rounded-xl font-semibold hover:bg-gray-50 transition-colors duration-200 min-h-[48px] flex items-center justify-center touch-manipulation text-sm sm:text-base"
          >
            Tell Us Your Requirements
          </a>
          <a 
            href="tel:+19549379667" 
            class="px-6 sm:px-8 py-3 sm:py-4 border-2 border-white text-white rounded-xl font-semibold hover:bg-white hover:text-primary-600 transition-colors duration-200 min-h-[48px] flex items-center justify-center touch-manipulation text-sm sm:text-base"
          >
            Call Now: (954) 937-9667
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />

  <!-- Enhanced JavaScript for Advanced Search and Filtering -->
  <script>
    // Declare global function type
    declare global {
      interface Window {
        clearAllFilters: () => void;
      }
    }

    document.addEventListener('DOMContentLoaded', function() {
      const searchInput = document.getElementById('search-input') as HTMLInputElement;
      const countySelect = document.getElementById('county-select') as HTMLSelectElement;
      const minSizeInput = document.getElementById('min-size') as HTMLInputElement;
      const maxSizeInput = document.getElementById('max-size') as HTMLInputElement;
      const budgetSelect = document.getElementById('budget-select') as HTMLSelectElement;
      const applyFiltersBtn = document.getElementById('apply-filters') as HTMLButtonElement;
      const clearSearchBtn = document.getElementById('clear-search') as HTMLButtonElement;
      
      const propertiesGrid = document.getElementById('properties-grid') as HTMLElement;
      const propertyCards = document.querySelectorAll('.property-card') as NodeListOf<HTMLElement>;
      const noResults = document.getElementById('no-results') as HTMLElement;
      const visibleCount = document.getElementById('visible-count') as HTMLElement;
      const totalCount = document.getElementById('total-count') as HTMLElement;
      
      let currentFilters = {
        search: ''
      };

      let advancedFilters = {
        county: '',
        minSize: null as number | null,
        maxSize: null as number | null,
        budget: ''
      };


      // Basic search functionality
      if (searchInput) {
        searchInput.addEventListener('input', function(e: Event) {
          const target = e.target as HTMLInputElement;
          if (target) {
            currentFilters.search = target.value.toLowerCase();
            filterProperties();
          }
        });
      }

      // Advanced search button
      if (applyFiltersBtn) {
        applyFiltersBtn.addEventListener('click', function() {
          advancedFilters.county = countySelect?.value || '';
          advancedFilters.minSize = minSizeInput?.value ? parseInt(minSizeInput.value) : null;
          advancedFilters.maxSize = maxSizeInput?.value ? parseInt(maxSizeInput.value) : null;
          advancedFilters.budget = budgetSelect?.value || '';

          filterProperties();
        });
      }

      // Clear search button
      if (clearSearchBtn) {
        clearSearchBtn.addEventListener('click', function() {
          clearAllSearchFilters();
        });
      }

      function filterProperties(): void {
        let visibleCards = 0;

        propertyCards.forEach((card: HTMLElement) => {
          const warehouseDataStr = card.dataset.warehouse;
          if (!warehouseDataStr) return;
          
          const warehouseData = JSON.parse(warehouseDataStr);
          let isVisible = true;

          // Basic search filter
          if (currentFilters.search) {
            const searchTerms = currentFilters.search.toLowerCase();
            const searchableText = [
              warehouseData.title || '',
              warehouseData.location || '',
              warehouseData.description || '',
              ...(warehouseData.features || [])
            ].join(' ').toLowerCase();
            
            if (!searchableText.includes(searchTerms)) {
              isVisible = false;
            }
          }

          // Advanced filters
          
          // County filter
          if (advancedFilters.county) {
            let countyMatch = false;
            
            // First check if there's a dedicated county field
            if (warehouseData.county) {
              countyMatch = warehouseData.county === advancedFilters.county;
            } else {
              // Fallback: check location string for county
              const location = warehouseData.location || '';
              
              // Map location strings to counties
              if (advancedFilters.county === 'Miami-Dade') {
                countyMatch = location.toLowerCase().includes('miami') || 
                             location.toLowerCase().includes('doral') || 
                             location.toLowerCase().includes('homestead') ||
                             location.toLowerCase().includes('hialeah');
              } else if (advancedFilters.county === 'Broward') {
                countyMatch = location.toLowerCase().includes('fort lauderdale') || 
                             location.toLowerCase().includes('hollywood') || 
                             location.toLowerCase().includes('pompano') ||
                             location.toLowerCase().includes('plantation') ||
                             location.toLowerCase().includes('davie');
              } else if (advancedFilters.county === 'Palm Beach') {
                countyMatch = location.toLowerCase().includes('west palm beach') || 
                             location.toLowerCase().includes('boca raton') || 
                             location.toLowerCase().includes('delray beach') ||
                             location.toLowerCase().includes('boynton beach');
              }
            }
            
            if (!countyMatch) {
              isVisible = false;
            }
          }

          // Size range filter
          const propertySize = warehouseData.size || 0;
          if (advancedFilters.minSize && propertySize < advancedFilters.minSize) {
            isVisible = false;
          }
          if (advancedFilters.maxSize && propertySize > advancedFilters.maxSize) {
            isVisible = false;
          }

          // Budget filter - for now, we'll skip filtering by budget since
          // we'd need to estimate monthly costs from property size and price per SF
          // This could be enhanced later with actual monthly budget calculations

          // Show/hide card
          if (isVisible) {
            card.style.display = 'flex';
            visibleCards++;
          } else {
            card.style.display = 'none';
          }
        });

        // Update results counter
        if (visibleCount) visibleCount.textContent = visibleCards.toString();

        // Show/hide no results message
        if (visibleCards === 0) {
          noResults?.classList.remove('hidden');
          propertiesGrid?.classList.add('hidden');
        } else {
          noResults?.classList.add('hidden');
          propertiesGrid?.classList.remove('hidden');
        }
      }

      function clearAllSearchFilters(): void {
        // Clear advanced search inputs
        if (searchInput) searchInput.value = '';
        if (countySelect) countySelect.value = '';
        if (minSizeInput) minSizeInput.value = '';
        if (maxSizeInput) maxSizeInput.value = '';
        if (budgetSelect) budgetSelect.value = '';

